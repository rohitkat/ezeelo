@model  ModelLayer.Models.ViewModel.ProductUploadTempViewModelList

@{
    ViewBag.Title = "Index";
}

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
@*<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />*@
<link href="~/Content/css/jquery-ui-1.8.21.custom.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
        });
        // alert("1");
    });

</script>


<div id="content" class="span10">
    <section>
        <div class="row-fluid sortable">
            <div class="box span12 ">
                <div class="box-header">
                    <h2><i class="icon-edit"></i><span class="break"></span>List Of Product</h2>

                </div>
                <div class="box-content">
                    <table class="table border-table display" id="tblData">                        
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th style="width:202px;">
                                        Product Name
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                    <th>
                                        Category Name
                                    </th>
                                    <th>
                                        Brand Name
                                       </th>
                                    <th>
                                        Product Varient(s)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>                            

                        @for (var i = 0; i < Model.ProductUploadTempViewModelLIst.Count(); i++)
                        {
                            <tr>
                                <td>
                                    @{string s = @Model.ProductUploadTempViewModelLIst[i].ImageLocation;
                                    <img src="@s" style=" width: 44px; height: 44px; border-radius: 8px;" alt="@Model.ProductUploadTempViewModelLIst[i].ImageLocation" onerror="this.src ='../../Content/img/No_thumbnail.png'" />
                                    }
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].Qty)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].PackSize)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].BrandName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].ProductVarientID) Varient(s)
                                </td>
                                <td style="white-space:nowrap;">

                                    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductUploadTempViewModelLIst[i].ID, shopID = Model.ProductUploadTempViewModelLIst[i].ShopID }, new { @class = "btn btn-small  btn-success" })

                                    @*@Html.ActionLink("Details", "Details1", new { id = Model.ProductUploadTempViewModelLIst[i].ID, shopID = Model.ProductUploadTempViewModelLIst[i].ShopID }, new { @class = "btn btn-small btn-info" })*@

                                    @Html.ActionLink("Add Component", "LoadVarient", new { productID = Model.ProductUploadTempViewModelLIst[i].ID, shopID = Model.ProductUploadTempViewModelLIst[i].ShopID }, new { @class = "btn btn-small btn-danger" })
                                </td>
                            </tr>

                        }

                    </table>
                    @*<div class="row-fluid"><div class="span12 center"><div class="dataTables_paginate paging_bootstrap pagination"><ul><li class="prev disabled"><a href="#">← Previous</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li><a href="#">3</a></li><li><a href="#">4</a></li><li class="next"><a href="#">Next → </a></li></ul></div></div></div>*@
                </div>
            </div>
        </div>
    </section>
</div>
