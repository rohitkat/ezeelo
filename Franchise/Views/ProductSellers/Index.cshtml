@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Franchise.Models.ViewModel.ProductSellersViewModel>
@using Franchise.Models.ViewModel;
@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<style>
    a {
        color: yellow;
        font-weight: bold;
    }

        a:hover {
            color: white;
        }

    th {
        background: #3571b4 !important;
        color: #ffffff !important;
    }

    td {
        background: #6395ce !important;
        color: #ffffff !important;
    }
</style>

<div class="row" style="margin-left:2px;">
    <div  id="divtable">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> List [ Similar Product ]</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">

                        <table class="table table-bordered table-hover table-responsive table-striped">
                            <tr>
                                <th style="width:20px;">Sr.No</th>
                                <th style="width:100px;">
                                    Shop Name
                                </th>
                                <th style="width:100px;">
                                    ShopAddress
                                </th>
                                <th style="width:100px;">
                                    Contact Person
                                </th>
                                <th>
                                    Product Name
                                </th>
                                <th>
                                    MRP
                                </th>
                                <th>
                                    Sale Rate
                                </th>

                            </tr>

                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="8" class="text-center"><h3>No Record Found...</h3></td>
                                </tr>
                            }
                            else
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{int SrNo = ((ViewBag.PageNumber - 1) * ViewBag.PageSize) + i; i = i + 1; } @SrNo</td>

                                        <td style="width:100px;">
                                            @Html.DisplayFor(modelItem => item.ShopName)
                                        </td>
                                        <td style="width:100px;">
                                            @Html.DisplayFor(modelItem => item.ShopAddress)
                                        </td>
                                        <td style="width:100px;">
                                            @Html.DisplayFor(modelItem => item.ContactPerson)
                                            <br />
                                            <span class="icon-phone"></span> @Html.DisplayFor(modelItem => item.ContactPhoneNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductName)
                                        </td>
                                        <td>
                                            <span class="indian_currency"></span>@Html.DisplayFor(modelItem => item.MRP)
                                        </td>
                                        <td>
                                            <span class="indian_currency"></span>@Html.DisplayFor(modelItem => item.SaleRate)
                                        </td>
                                    </tr>
                                }
                            }

                        </table>
                        <div class="pager">
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new { page = Page, SearchString = ViewBag.SearchString, pID = Request.QueryString["pID"] }),
                                                                    new PagedListRenderOptions()
                                                                    {
                                                                        Display = PagedListDisplayMode.IfNeeded
                                                                    })
                        </div>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
    </div>
    <!-- /span12 -->
    <div class="span4">
        <div class="loader">
            <img id="loader_img" src="~/Content/Images/loader.gif" style="display: none" />
        </div>
        <div id="Details">
            <iframe id="frameEdit" name="frameEdit" src='' width="100%" height="800px" frameborder="0" style="margin:0px; padding:0px;"></iframe>
        </div>
    </div>
</div>