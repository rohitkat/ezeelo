@model IEnumerable<ModelLayer.Models.ViewModel.StockManagementReportViewModel>

@{
    ViewBag.Title = "ForPrint";
}

<style>
    .btn_Print {
        margin-bottom: 7px;
        margin-top: 7px;
        margin-left: 5px;
    }

    .section {
        position: relative;
        border: 1px solid #000;
        padding-top: 27px;
        margin-left: 5px;
        margin-top: 37px; /*background: #A4A5A7;*/
        background: rgb(179, 159, 128);
    }

        .section.positioned {
            position: absolute;
            top: 100px;
            left: 100px;
            width: 800px;
            box-shadow: 0 0 15px #333;
        }

    .container_tbl {
        overflow-y: auto;
        /*height: 200px;*/ height: 420px;
    }

    table {
        border-spacing: 0;
        width: 100%;
    }

    td + td {
        border-left: 1px solid #eee;
    }

    td, th {
        border-bottom: 1px solid #eee;
        background: #ddd;
        color: #000;
        padding: 10px 25px;
    }

    #myTable thead tr th {
        height: 0;
        line-height: 0 !important;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        color: transparent;
        border: none;
        white-space: nowrap;
    }

    th div {
        position: absolute;
        background: transparent;
        color: #fff;
        padding: 2px 10px;
        top: 0;
        margin-left: -8px;
        line-height: normal;
        /*border-left: 1px solid #800;*/ border-left: 1px solid #DDD;
    }

    th:first-child div {
        border: none;
    }

    th:first-child div {
        border: none;
    }

    .wrap {
        margin-top: 105px;
    }

    td:nth-child(1) {
        max-width:25px;
        word-wrap: break-word;
    }

    td:nth-child(2) {
        max-width: 30px;
        word-wrap: break-word;
    }

    td:nth-child(3) {
        max-width: 90px;
        word-wrap: break-word;
    }

    td:nth-child(4) {
        max-width:25px;
        word-wrap: break-word;
    }

    td:nth-child(5) {
        max-width: 10px;
        word-wrap: break-word;
    }

    td:nth-child(6) {
        max-width: 25px;
        word-wrap: break-word;
    }

    td:nth-child(7) {
        max-width:15px;
        word-wrap: break-word;
    }

    td:nth-child(8) {
        max-width: 20px;
        word-wrap: break-word;
    }

    td:nth-child(9) {
        max-width: 12px;
        word-wrap: break-word;
    }

    td:nth-child(10) {
        max-width: 46px;
        word-wrap: break-word;
    }

    td:nth-child(11) {
        max-width: 46px;
        word-wrap: break-word;
    }
    td:nth-child(12) {
        max-width: 22px;
        word-wrap: break-word;
    }
</style>

<h2 id="btnPrint" class="btn btn-primary" style="margin-left:7px; margin-bottom:7px;">Print</h2>


<div id="dvContainer" class="section">
    <div><h4 style="margin-top:-63px;">From Date: @ViewBag.fromDate &nbsp;&nbsp;  To Date: @ViewBag.toDate</h4></div>
    <hr />
    @if (Model.Count() > 0)
    {
        <div class="table container_tbl">
            <table class="table scroll" id="myTable">
                <thead>
                    <tr class="header">
                        <th>
                            @*Product Name*@
                            <div>Product Name</div>
                        </th>
                        <th>
                            @*Quantity*@
                            <div>Qty</div>
                        </th>
                        <th>
                            @*Reorder Level*@
                            <div>Rc Level</div>
                        </th>
                        <th>
                            @*Color*@
                            <div>Color</div>
                        </th>
                        <th>
                            @*Size*@
                            <div>Size</div>
                        </th>

                        <th>
                            @*Dimension*@
                            <div>Dimension</div>
                        </th>

                        <th>
                            @*Material*@
                        <div>Material</div>
                    </th>
                    <th>
                        @*Sale Rate*@
                    <div>Sale Rate</div>
                </th>
                <th>
                    @*Mrp*@
                <div>Mrp</div>
            </th>
            <th>
                @*Product Upload Date*@
            <div>Product Upload Date</div>
        </th>
        <th>
            @*Stock Modified Date*@
        <div>Stock Modified Date</div>
    </th>
    <th>
        @*Stock Status*@
    <div>Stock Status</div>
</th>

</tr>
</thead>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>

        <td>@Html.DisplayFor(modelItem => item.ReorderLevel)</td>


        <td>
            @Html.DisplayFor(modelItem => item.ColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DimensionName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.MaterialName

                            )
        </td>



        <td>
            @Html.DisplayFor(modelItem => item.SaleRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mrp)
        </td>
        <td>
            @{string lDate = "";}
            @if (item.ProductUploadDate != null)
            {
                lDate = item.ProductUploadDate.ToString("dd/MM/yyyy");
            }
            @lDate
        </td>
        <td>
            @{string lmDate = ""; DateTime modDate = new DateTime();}
            @if (item.ProductModifiedDate != null)
            {
                modDate = Convert.ToDateTime(item.ProductModifiedDate);
                lmDate = modDate.ToString("dd/MM/yyyy");
            }
            @lmDate
        </td>
        @if (item.Quantity == 0)
        {
            <td>Out Of Stock</td>
        }
        else
        {
            <td>In Stock</td>
        }




    </tr>
}

</table>

</div>
    }
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("#btnPrint").live("click", function () {
        var divContents = $("#dvContainer").html();
        var printWindow = window.open('', '', 'height=400,width=800');
        printWindow.document.write('<html><head><title>Stock Management Report</title>');
        printWindow.document.write('</head><body >');
        printWindow.document.write(divContents);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    });
</script>


