@model ModelLayer.Models.CustomerRatingAndFeedback

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<style>
    .control-label {
        float: left;
        width: 140px;
        padding-top: 5px;
        text-align: left !important;
    }
    .widget {
        margin-top: -9px;
    }
    .widget-header {
        position: relative;
        height: 40px;
        line-height: 40px;
        background-color: #794F2B;
        background-image: linear-gradient(hsla(0,0%,100%,.05), hsla(0,0%,0%,.05)), linear-gradient(-72deg, hsla(0,0%,100%,.05) 50%, transparent 50%);
        box-shadow: inset 0 0 .25em hsla(0,0%,0%,.1), inset 0 0 1.5em hsla(0,0%,0%,.25);
        border-bottom: 1px solid #d6d6d6;
        color: #FAFAFA;
        -webkit-background-clip: padding-box;
    }

        .widget-header h3 {
            position: relative;
            top: 2px;
            left: 10px;
            display: inline-block;
            margin-right: 3em;
            font-size: 14px;
            font-weight: 800;
            color: #FAFAFA;
            line-height: 18px;
        }

    .btn-success {
        background-color: #643C24 !important;
        border-color: #643C24 !important;
    }

    .widget {
        position: relative;
        clear: both;
        width: auto;
        margin-bottom: 2em;
        overflow: hidden;
        overflow-x: auto;
    }

    .img_clos {
        width: 25px;
        cursor: pointer;
        float: right;
        margin-top: 8px;
        margin-right: 5px;
    }

    .widget-header + .widget-content {
        border-top: none;
        -webkit-border-top-left-radius: 0;
        -webkit-border-top-right-radius: 0;
        -moz-border-radius-topleft: 0;
        -moz-border-radius-topright: 0;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

    .widget-content {
        zoom: 1;
    }

    .widget-content {
        /*padding: 20px 15px 15px;*/
        background: #FFF;
        border: 1px solid #D5D5D5;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
    }

    .widget-header [class^="icon-"], .widget-header [class*=" icon-"] {
        display: inline-block;
        margin-left: 13px;
        margin-right: -2px;
        font-size: 16px;
        color: #FAFAFA;
        vertical-align: middle;
    }

    .big-stats-container .widget-content {
        border: 0;
    }
    </style>


<div class="row margin_left_right_decress">
    <div class="span4">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> Details Feedback</h3>
                <img src="~/Content/Images/close1.png" onclick="Back();" class="img_clos" />
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">                                           
                        <div class="form-horizontal">
                            <div class="control-group">
                                <span class="control-label"> Product</span>
                                <div class="controls" style="margin-left:150px;">
                                    &nbsp;@Request.QueryString["Product"]
                                </div>
                            </div>

                            <div class="control-group">
                                <span class="control-label"> Point</span>
                                <div>
                                    @*&nbsp;@Html.DisplayFor(model => model.Point)*@
                                    @for (int i = 1; i <= Model.Point; i++)
                                    {
                                        <span class=" icon-star" style="color:red"></span>
                                    }
                                </div>
                            </div>

                            <div class="control-group">
                                <span class="control-label"> Comment</span>
                                <div>
                                    &nbsp;@Html.DisplayFor(model => model.Feedback)
                                </div>
                            </div>

                            <div class="control-group">
                                <span class="control-label">Date</span>
                                <div>
                                    &nbsp;@Model.CreateDate.ToString("dd/MM/yyyy hh:mm:ss tt")

                                </div>
                            </div>

                            <div class="control-group">
                                <span class="control-label">Is Approved</span>
                                <div>
                                    &nbsp;@Html.DisplayFor(model => model.IsApproved)
                                </div>
                            </div>


                            <div class="control-group">
                                <span class="control-label">Analysed By</span>
                                <div>
                                    &nbsp;@Html.DisplayFor(model => model.PersonalDetail.FirstName)
                                </div>
                            </div>
                            <div class="control-group">
                                <div style="float:right">
                                    @Html.ActionLink("Edit", "Edit", new { ID = @Model.ID }, new { @class = "btn btn-small btn-danger" }) |
                                    <button class="btn btn-small btn-success" onclick="Back()">Back</button>
                                </div>
                            </div>
                        </div>
                  
                    </div>
                </div>
                <!-- /widget-content -->
            </div>
        </div>
    </div>
</div>
<script>
    function Back() {
       
        window.parent.$('#divtable').removeClass('span7');
        window.parent.$('#divtable').addClass('span12');
        window.parent.$("[id$=Details]").hide();
        $('#loader_img').hide();
        window.parent.$("#divtable").css('width', '100%');
    }
</script>

