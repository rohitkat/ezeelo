            $.ajax({
                url: '@Url.Action("Edit", "FeedbackManagment")?ID=' + id,
                type: "GET",
                success: function (result) {
                    $('#loader_img').hide();
                    $('#Details').html(result);
                },
                error: function (data) {
                    $('#Details').empty();
                    $('#loader_img').hide();
                }
            });*@
            }

    </script>
}

