    <script type="text/javascript">
        $('input[type=text]').each(function () {
            var req = $(this).attr('data-val-required');
            if (undefined != req) {
                //alert($(this).closest(".controls").parent().find('.control-label').text());
                //var label = $('label[for="' + $(this).attr('id') + '"]');
                var label = $(this).closest(".controls").parent().find('.control-label');
                //var label = req.closest().find('.control-label');// $('.control-label');
                var text = label.text();
                //alert(text);
                if (text.length > 0) {
                    label.append('<span style="color:red"> *</span>');
                }
            }
        });

        $("#btn_clear").click(function () {
            //$('#FromDate').val('');
            //$('#ToDate').val('');
            //$('.search').val('');
            $('form input').val("");
            $('form select').val("");
        })

        $(document).ready(function () {
            countPendingOrders();
            countPendingCarts();
            CountWalletRefund();
            setInterval(countPendingOrders, 60000);
            setInterval(countPendingCarts, 60000);
            /*//Added by Rumana on 19/04/2019*/
            setInterval(CountWalletRefund, 6000); 
            function CountWalletRefund()
            {
                $.ajax({
                    url: '@Url.Action("CountWalletRefund", "CustomerOrder")',
                    type: "GET",
                    success: function (result) {
                        $('#notificationWalletRefund').html("Wallet Refund Pending : " + result);
                    },
                    error: function (data) {
                        //alert('Failure');
                    }
                });
            }
            /*//Ended by Rumana on 19/04/2019*/
            function countPendingOrders()
            {
                $.ajax({
                    url: '@Url.Action("CountPending", "CustomerOrder")',
                    type: "GET",
                    success: function (result) {
                        $('#notificationOrder').html("Transaction Pending : " + result);
                    },
                    error: function (data) {
                        //alert('Failure');
                    }
                });
            }

            function countPendingCarts() {
                $.ajax({
                    url: '@Url.Action("countPendingCart", "Cart")',
                    type: "GET",
                    success: function (result) {
                        $('#notificationCart').html("Abandoned Cart : " + result);
                    },
                    error: function (data) {
                        //alert('Failure');
                    }
                });
            }


        });


    </script>

