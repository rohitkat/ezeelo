@{
    ViewBag.Title = "User Log";
    Layout = "~/Views/Shared/_Layout_franchise2.cshtml";
    List<Franchise.Models.ViewModel.CustomerOrderUserDefinedLogViewModel> lCustomerOrderUserDefinedLogViewModel = (List<Franchise.Models.ViewModel.CustomerOrderUserDefinedLogViewModel>)ViewBag.CustomerOrderUserDefinedLogViewModels;
}
<style>
    .widget-header {
        position: relative;
        height: 40px;
        line-height: 40px;
        background-color: #794F2B;
        background-image: linear-gradient(hsla(0,0%,100%,.05), hsla(0,0%,0%,.05)), linear-gradient(-72deg, hsla(0,0%,100%,.05) 50%, transparent 50%);
        box-shadow: inset 0 0 .25em hsla(0,0%,0%,.1), inset 0 0 1.5em hsla(0,0%,0%,.25);
        border-bottom: 1px solid #d6d6d6;
        color: #FAFAFA;
        -webkit-background-clip: padding-box;
    }

        .widget-header [class^="icon-"], .widget-header [class*=" icon-"] {
            display: inline-block;
            margin-left: 13px;
            margin-right: -2px;
            font-size: 16px;
            color: #FAFAFA;
            vertical-align: middle;
        }

        .widget-header h3 {
            position: relative;
            top: 2px;
            left: 10px;
            display: inline-block;
            margin-right: 3em;
            font-size: 14px;
            font-weight: 800;
            color: #FAFAFA;
            line-height: 18px;
        }

    .widget-content {
        padding: 20px 15px 15px;
        background: #FFF;
        border: 1px solid #D5D5D5;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
    }
</style>
<div class="widget">
    <div class="widget-header">
        <i class="icon-list-alt"></i>
        <h3>User Log</h3>
    </div>
    <div class="widget-content">
        <div class="row-fluid">
            <div class="span12">
                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-body">
                        <div class="table-responsive" style="min-height:100px;max-height:300px;overflow:auto;">
                            <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Comments</th>
                                    </tr>
                                </thead>
                                @foreach (var item in lCustomerOrderUserDefinedLogViewModel)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.PersonName</td>
                                            <td>@item.CreateDate.ToString("dd/MM/yyyy, hh:mm tt") </td>
                                            <td>@item.Description</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div><!-- /.table-responsive -->
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix">
                    </div><!-- /.box-footer -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div>
    </div>
</div>
