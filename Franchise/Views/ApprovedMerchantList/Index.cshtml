@model IEnumerable<ModelLayer.Models.ViewModel.MerchantApprovedViewModel>

@{
    ViewBag.Title = "Index";
}
<style>
    .pagination {
        margin: 0px 40px;
    }
</style>
<link href="~/Content/DataTable/css/searching.css" rel="stylesheet" />
<link href="~/Content/DataTable/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/DataTable/lib/jQuery-Table-Plugin.js"></script>
<div id="content" class="span10" style="min-height: 400px;">

    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="halflings-icon user"></i><span class="break"></span>Approved Merchant List</h2>

            </div>
            <div class="box-content">
                <div class="div_class">

                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
                        <thead>
                            <tr>
                                <th>
                                    Merchant Name
                                </th>
                                <th>
                                    Plan Applied
                                </th>
                                <th>
                                    Max. Product Limit
                                </th>
                                <th>
                                    Start Date
                                </th>
                                <th>
                                    End Date
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            using (Html.BeginForm("Disapprove", "ApprovedMerchantList", new { UID = item.UserLoginID, OwnerID = item.OwnerId }, FormMethod.Post))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlanName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoOfProducttAllowed)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                    <td>
                                        <form method="POST" action="/">
                                            <input type="submit" class="btn btn-primary btn-small" value="Disapprove" id="Disapprove" onclick="disapprove(@item.UserLoginID, @item.OwnerId);" />

                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>

<script type="text/javascript">


    //$(document).ready(function(){
