    function disapprove(uid, ownerid) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Disapprove", "ApprovedMerchantList")',
            data: { 'UID': uid, 'OwnerID': ownerid },
            //dataType: "json",
            cache: false,
            success: function (msg) {
                window.location.reload(true);
            },
            error: function (x, e) {
                //alert('Failure');
                //alert("The call to the server side failed. " + x.responseText);
            }
        });
    };
    //});


</script>