@model IEnumerable<ModelLayer.Models.ViewModel.MerchantRequisitionViewModel>
<link href="~/Content/DataTable/css/searching.css" rel="stylesheet" />
<link href="~/Content/DataTable/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/DataTable/lib/jQuery-Table-Plugin.js"></script>
<style>
    .pagination {
        margin: 0px 40px;
    }
</style>
<div id="content" class="span10" style="min-height: 400px;">
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-home"></i><span class="break"></span>Index</h2>

            </div>
            <div class="box-content">
                <div class="div_class">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MerchantName)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MerchantName)
                                </td>
                                <td>
                                    @if (item.IsPaymentMode == false)
                                    {
                                        @Html.ActionLink("Assign Details", "Create", new { id = item.ShopID }, new { @class = "btn btn-small btn-primary" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Edit Details", "Edit", new { id = item.ShopID }, new { @class = "btn btn-small btn-success" })
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
            <div class="form-actions">
                <div class="col-md-offset-2 span10">
                    @Html.ActionLink("Back to Franchise List", "ShowFranchiseList", "MerchantRequisition", string.Empty, new { @class = "btn btn-small" })
                </div>
            </div>
        </div>
    </div>
</div>