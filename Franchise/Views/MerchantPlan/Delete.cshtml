@model ModelLayer.Models.ViewModel.OwnerPlanViewModel

@{
    ViewBag.Title = "Delete";
}


<div class="span10" id="content">
    <ul class="breadcrumb">
        <li>
            <i class="icon-group"></i>
            <a href="#">Merchant Plan</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span6">
            <div class="box-header">
                <h2><i class="icon-trash"></i><span class="break"></span>Delete </h2>

            </div>
            <div class="box-content">
                <div>
                    <hr />
                    <dl class="dl-horizontal">

                        <dt>
                            Plan Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Plan.ShortName)
                        </dd>

                        <dt>
                            Owner Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.OwnerName)
                        </dd>

                        <dt>
                            Start Date
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StartDate)
                        </dd>

                        <dt>
                            End Date
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EndDate)
                        </dd>

                        <dt>
                            Is Active
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>


                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger btn-small" onclick="return confirm('Are you sure you want to delete this record ?');" />                   
                            @Html.ActionLink("Back to List", "Index", new { franchiseID = ViewBag.FranchiseID }, new { @class = "btn btn-small" })
                        </div>
                    }

                </div>
            </div>
            </div>
        </div>
    </div>
