@model IEnumerable<ModelLayer.Models.ViewModel.ProductApprovedViewModel>

@{
    ViewBag.Title = "ForPrint";
}


<style>
    .btn_Print {
        margin-bottom: 7px;
        margin-top: 7px;
        margin-left: 5px;
    }

    .section {
        position: relative;
        border: 1px solid #000;
        padding-top: 37px;
        margin-left: 5px;
        margin-top: 40px;
        /*background: #A4A5A7;*/ background: rgb(179, 159, 128);
    }

        .section.positioned {
            position: absolute;
            top: 100px;
            left: 100px;
            width: 800px;
            box-shadow: 0 0 15px #333;
        }

    .container_tbl {
        /*overflow-y: scroll;*/
        /*height: 200px;*/ height: 420px;
        margin-top: 29px;
    }
    .scrollable #myTable {overflow-x:hidden;
    }

     table {
        border-spacing: 0;
        width: 100%;
    }

    td + td {
        border-left: 1px solid #eee;
    }

    td, th {
        border-bottom: 1px solid #eee;
        background: #ddd;
        color: #000;
        padding: 10px 25px;
    }

    #myTable thead tr th {
        height: 0;
        line-height: 0 !important;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        color: transparent;
        border: none;
        white-space: nowrap;
    }

    th div {
        position: absolute;
        background: transparent;
        color: #fff;
        padding: 9px 10px;
        top: 0;
        margin-left: -8px;
        line-height: normal;
        /*border-left: 1px solid #800;*/ border-left: 1px solid #DDD;
    }

    th:first-child div {
        border: none;
    }

    .wrap {
        margin-top: 105px;
    }

    td:nth-child(1) {
        width: 65px;
        word-wrap: break-word;
    }

    td:nth-child(2) {
        width:200px;
        word-wrap: break-word;
    }

    td:nth-child(3) {
        width: 77px;
        word-wrap: break-word;
    }

    td:nth-child(4) {
        width:100px;
        word-wrap: break-word;
    }

    td:nth-child(5) {
        width:114px;
        word-wrap: break-word;
    }

    td:nth-child(6) {
        width: 120px;
        word-wrap: break-word;
    }

    td:nth-child(7) {
        width:88px;
        word-wrap: break-word;
    }

    td:nth-child(8) {
        width: 92px;
        word-wrap: break-word;
    }

    td:nth-child(9) {
        max-width:105px;
        word-wrap: break-word;
    }

    td:nth-child(10) {
        width: 200px;
        word-wrap: break-word;
    }

</style>

<h2 id="btnPrint" class="btn btn-primary btn_Print">Print</h2>


<div id="dvContainer" class="section">
    <div><h4 style="margin-top: -73px;">From Date: @ViewBag.fromDate &nbsp;&nbsp;  To Date: @ViewBag.toDate</h4></div>
    <hr />
    @if (Model.Count() > 0)
{
    <div class="table  scrollable container_tbl">
        <table class="table scroll" id="myTable">
            <thead>
                <tr class="header">
                    <th>
                        @*@Html.DisplayNameFor(model => model.ProductID)*@
                        <div>@Html.DisplayNameFor(model => model.ProductID)</div>
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.ProductName)*@
                        <div>@Html.DisplayNameFor(model => model.ProductName)</div>
                    </th>
                    <th>
                        @*Category ID*@
                        <div>Cat ID</div>
                    </th>
                    <th>
                        @*Category Name*@
                        <div>Category Name</div>
                    </th>
                    @*<th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>*@
                    @*<th>
                @Html.DisplayNameFor(model => model.productDescription)
            </th>*@
                    <th>
                        @*@Html.DisplayNameFor(model => model.MerchantName)*@
                        <div>@Html.DisplayNameFor(model => model.MerchantName)</div>
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.ShopName)*@
                        <div>@Html.DisplayNameFor(model => model.ShopName)</div>
                    </th>
                    @*<th>
                @Html.DisplayNameFor(model => model.AddedBy)
            </th>*@
                    @if (ViewBag.uploadprod == 2)
                    {
                        <th>@*Product Approved Date*@
                        <div>Approved Date</div>   
                    </th>
                    }
                    else if (ViewBag.uploadprod == 3)
                    {
                        <th>Product Upload Date</th>
                    }
                    else
                    {
                        <th>@*Product Upload Date*@
                        <div>Upload Date</div>
                    </th>
                        <th>@*Product Approved Date*@
                        <div>Approved Date</div>
                    </th>
                    }
                    @if (ViewBag.uploadprod == 2 || ViewBag.uploadprod == 3)
                    {
                        <th>@*Product Modified Date*@
                        <div>Modified Dt</div>
                    </th>
                    }
                    @if (ViewBag.uploadprod == 1)
                    {
                        <th>
                            @*Status*@
                            <div>Status</div>
                        </th>
                    }
                    <th>@*Active/Deactive Status*@
                    <div>Active/Deactive Status</div>
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.ProductID)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CatID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CatName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.productDescription)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.MerchantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShopName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.AddedBy)
                    </td>*@
                    @if (ViewBag.uploadprod == 2)
                    {
                        <td>
                            @{string lADate = ""; DateTime dtA = new DateTime();}
                            @if (item.ProductApprovedDate != null)
                            {
                                dtA = Convert.ToDateTime(item.ProductApprovedDate);
                                lADate = dtA.ToString("dd/MM/yyyy");
                            }
                            @lADate
                        </td>
                    }
                    else if (ViewBag.uploadprod == 3)
                    {
                        <td>
                            @{string lUDate = ""; DateTime dtU = new DateTime();}
                            @if (item.ProductUploadDate != null)
                            {
                                dtU = Convert.ToDateTime(item.ProductUploadDate);
                                lUDate = dtU.ToString("dd/MM/yyyy");
                            }
                            @lUDate
                        </td>
                    }
                    else
                    {
                        <td>
                            @{string lUDate = ""; DateTime dtU = new DateTime();}
                            @if (item.ProductUploadDate != null)
                            {
                                dtU = Convert.ToDateTime(item.ProductUploadDate);
                                lUDate = dtU.ToString("dd/MM/yyyy");
                            }
                            @lUDate
                        </td>
                        <td>
                            @{string lADate = ""; DateTime dtA = new DateTime();}
                            @if (item.ProductApprovedDate != null)
                            {
                                dtA = Convert.ToDateTime(item.ProductApprovedDate);
                                lADate = dtA.ToString("dd/MM/yyyy");
                            }
                            @lADate
                        </td>
                    }
                    @if (ViewBag.uploadprod == 2 || ViewBag.uploadprod == 3)
                    {
                        <td>
                            @{string lMDate = ""; DateTime dtM = new DateTime();}
                            @if (item.ProductModifiedDate != null)
                            {
                                dtM = Convert.ToDateTime(item.ProductModifiedDate);
                                lMDate = dtM.ToString("dd/MM/yyyy");
                            }
                            @lMDate
                        </td>
                    }

                    @if (ViewBag.uploadprod == 1)
                    {
                        <td>@Html.DisplayFor(modelItem => item.ApprovalRemark)</td>
                    }
                    @if (item.IsActive == true)
                    {
                        <td style="width:272px;">
                            Active
                        </td>
                    }
                    else
                    {
                        <td>
                            DeActive
                        </td>
                    }

                </tr>

            }

        </table>

    </div>
}
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("#btnPrint").live("click", function () {
        var divContents = $("#dvContainer").html();
        var printWindow = window.open('', '', 'height=400,width=800');
        printWindow.document.write('<html><head><title>CategoryWise Product Report</title>');
        printWindow.document.write('</head><body >');
        printWindow.document.write(divContents);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    });
</script>


