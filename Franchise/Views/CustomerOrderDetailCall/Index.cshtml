@model IEnumerable<ModelLayer.Models.CustomerOrderDetailCall>


@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<style>
    #divtable {
        width: 920px;
        margin-left: 35px;
        border: 1px solid#ccc;
    }

        #divtable h3 {
            padding: 11px;
            background-color: #ac864f;
            background-image: linear-gradient(hsla(0,0%,100%,.05), hsla(0,0%,0%,.05)), linear-gradient(-72deg, hsla(0,0%,100%,.05) 50%, transparent 50%);
            box-shadow: inset 0 0 .25em hsla(0,0%,0%,.1), inset 0 0 1.5em hsla(0,0%,0%,.25);
            border-bottom: 1px solid #d6d6d6;
            color: #FAFAFA;
        }

    .widget {
        padding: 0px;
        margin-bottom: 28px;
        margin-top: -10px;
    }

    .widget-content {
        padding: 10px;
    }

    .margin_left_right_decress {
        margin-left: -20px;
        margin-right: -20px;
    }

    .margin_left_zero {
        margin-left: 0px;
    }
</style>
@{
    Dictionary<long, string> CallTo = ViewBag.CallToList;
}
<div class="row margin_left_zero">
    <div id="divtable">
        <div class="widget">
            <div class="widget-header">
                <h3> <i class="icon-list-alt"></i>List Call Logs [ @Request.QueryString["ShopOrderCode"] ]</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">
                        <p>
                            <button class="btn btn-small btn-success" onclick="Back()">Back</button>
                            @Html.ActionLink("Write Log", "Create", new { ShopID = Request.QueryString["ShopID"], DeliveryPartnerID = Request.QueryString["DeliveryPartnerID"], OrderStatus = Request.QueryString["OrderStatus"], ShopOrderCode = Request.QueryString["ShopOrderCode"], PaymentMode = Request.QueryString["PaymentMode"], OrderCode = Request.QueryString["OrderCode"] }, new { @class = "btn btn-small btn-primary" })
                        </p>
                        <ul class="messages_layout">
                            @foreach (var item in Model)
                            {
                                <li class="from_user" style="width:100%">
                                    <div class="message_wrap" style="width:94%">
                                        <span class="arrow"></span>
                                        <div class="info">
                                            <a class="name">@item.PersonalDetail.FirstName Calls on [ @item.CreateDate ]</a>
                                        </div>
                                        <div class="info">
                                            <a class="name">To : [ @CallTo[item.ID] ]</a>
                                        </div>
                                        <div class="text">@item.Description</div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function Back() {
        window.parent.$("[id$=divLog]").hide();
    }
</script>


