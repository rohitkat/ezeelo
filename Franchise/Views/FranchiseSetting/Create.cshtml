@model ModelLayer.Models.ViewModel.FranchiseSettingViewModel

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
   <div id="content" class="span10" style="min-height: 400px;">
       <ul class="breadcrumb">
           <li>
               <i class="icon-edit"></i>
               <a href="">Account Setting</a>
           </li>
       </ul>
       <div class="row-fluid">
           <div class="box span12">
               <div class="box-header">
                   <h2><i class="icon-group"></i><span class="break"></span>Change Password</h2>
               </div>
               <div class="box-content">
                   <form class="form-horizontal">
                       
                       <hr />
                       @Html.ValidationSummary(true)
                       @Html.ValidationMessage("CustomError")
                       <div class="control-group">
                           @Html.LabelFor(model => model.Password,"Old Password", new { @class = "control-label span2" })
                           <div class="controls">
                               @Html.TextBoxFor(model => model.Password, new { @autocomplete = "off", @type = "password", required="required"})
                               @Html.ValidationMessageFor(model => model.Password)
                           </div>
                       </div>

                       <div class="control-group">
                           @Html.LabelFor(model => model.NewPassword, "New Password", new { @class = "control-label span2" })
                           <div class="controls">
                               @Html.TextBoxFor(model => model.NewPassword, new { @type = "password", @autocomplete = "off", required = "required" })
                               @Html.ValidationMessageFor(model => model.NewPassword)
                           </div>
                       </div>

                       <div class="control-group">
                           @Html.LabelFor(model => model.ConfirmNewPassword, "Confirm New Password", new { @class = "control-label span2" })
                           <div class="controls">
                               @Html.TextBoxFor(model => model.ConfirmNewPassword, new { @type = "password", @autocomplete = "off", required = "required" })
                               @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                           </div>
                       </div>

                       <div class="form-actions">
                           <div class="col-md-offset-2 col-md-10">
                               <input type="submit" value="Save" class="btn btn-primary" />
                           </div>
                       </div>
                   </form>
                   </div>
               </div>
           </div>
       </div>
}


