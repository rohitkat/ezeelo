<div class="row">
    <div class="span12" id="divtable" style="margin-top:12px;">
        <div class="widget">
            <div class="widget-header">
                <h3><i class="icon-list-alt"></i>List [ Cancelled Order ]</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">

                        @using (Html.BeginForm("Index", "CancelledOrderByMerchant", FormMethod.Post))
                        {   @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <table>
                                    <tr>
                                        <td>From Date</td>
                                        <td>@Html.TextBox("FromDate", null, new { @readonly = "readonly" })</td>
                                        <td>To Date</td>
                                        <td>@Html.TextBox("ToDate", null, new { @readonly = "readonly" })</td>
                                        <td>Order Code</td>
                                        <td>@Html.TextBox("SearchString", ViewBag.SearchString as string, new { @class = "search" })</td>
                                        <td>
                                            <button type="submit" value="Search" class="btn btn-small btn-warning1">
                                                <span class="glyphicon glyphicon-search"></span> Search
                                            </button>
                                            <button type="button" class="btn btn-small btn-info1" id="btn_clear">Clear</button>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        }



                        <table class="table table-bordered table-hover table-responsive table-striped">
                            <tr>
                                <th style="width:30px;">Sr.No</th>
                                <th style="width:80px;">
                                    Order Code
                                </th>
                                <th style="width:80px;">
                                    Customer Details
                                </th>
                                <th style="width:80px;">
                                    Order Amount
                                </th>
                                <th style="width:80px;">
                                    Payable Amount
                                </th>
                                <th style="width:80px;">
                                    Payment Mode
                                </th>
                                <th style="width:100px;">
                                    Shipping Address
                                </th>
                                <th style="width:160px;">
                                    Order Date
                                </th>
                                <th style="width:60px;">Details</th>
                            </tr>
                        </table>

                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center"><h3>No Record Found...</h3></td>
                            </tr>
                        }
                        else
                        {
                            <div class="accordion" id="accordion2">
                                @{ int i = 1; }
                                @foreach (var item in Model)
                                {
                                    <div class="accordion-group" style="height: auto !important; ">
                                        <div class="accordion-heading">

                                            <table class="table table-bordered table-hover table-responsive table-striped">
                                                <tr>
                                                    <td style="width:30px;">@{int SrNo = ((ViewBag.PageNumber - 1) * ViewBag.PageSize) + i; i = i + 1; } @SrNo </td>
                                                    <td style="width:80px;">
                                                        @Html.DisplayFor(modelItem => item.OrderCode)
                                                    </td>
                                                    <td style="width:80px;">
                                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                                        <br />
                                                        <span class="icon-phone"></span> @Html.DisplayFor(modelItem => item.PrimaryMobile)
                                                    </td>
                                                    <td style="width:80px;">
                                                        <span class="indian_currency"></span> @Html.DisplayFor(modelItem => item.OrderAmount)
                                                    </td>
                                                    <td style="width:80px;">
                                                        <span class="indian_currency"></span> @Html.DisplayFor(modelItem => item.PayableAmount)
                                                    </td>
                                                    <td style="width:80px;">
                                                        @Html.DisplayFor(modelItem => item.PaymentMode).ToString().ToUpper()
                                                    </td>
                                                    <td style="width:100px;">
                                                        @Html.DisplayFor(modelItem => item.ShippingAddress)
                                                    </td>
                                                    <td style="width:160px;">
                                                        @*@Html.DisplayFor(modelItem => item.CreateDate)*@
                                                        @item.CreateDate.ToString("dd/MM/yyyy hh:mm:ss tt")
                                                    </td>
                                                    <td style="width:60px;">
                                                        <a class="accordion-toggle margin_padding_zero" data-toggle="collapse" data-parent="#accordion2" href="#@item.ID"><span class="btn btn-small btn-primary">Details</span></a>
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                        <div id="@item.ID" class="accordion-body collapse">
                                            @*<div class="widget-content">*@
                                            <iframe id="frameCreate_@item.ID" name="frameCreate_@item.ID" src='@Url.Action("IndexForCancelledOrderDetails", "CustomerOrderDetail", new { CustomerOrderID = item.ID })' width="100%" height="600px" frameborder="0"></iframe>
                                            @*</div>*@
                                        </div>
                                    </div>
                                }
                            </div>
                        }



                        <div class="pager">
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new
                   {
                       page = Page,
                       SearchString = ViewBag.SearchString,
                       FromDate = ViewBag.FromDate,
                       ToDate = ViewBag.ToDate
                   }),
                                                                new PagedListRenderOptions()
                                                                {
                                                                    Display = PagedListDisplayMode.IfNeeded
                                                                })
                        </div>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
        
    </div>


