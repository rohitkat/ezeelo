@{
    ViewBag.Title = "Print";
    //Layout = null;
}

<style>
    .scrollable #myTable {
        overflow-y: scroll;
    }

    .btn_Print {
        margin-bottom: 7px;
        margin-top: 7px;
        margin-left: 5px;
    }

    .section {
        position: relative;
        border: 1px solid #FFF;
        padding-top: 33px;
        margin-left: 5px;
        /* background: #500; */
        background: rgb(179, 159, 128);
    }

    #myTable_wrapper {
        min-height: 61px;
        margin-top: 2px;
        max-height: 516px;
        background: #FFF;
    }

    .fg-toolbar {
        margin-top: -89px;
    }

    #myTable_filter {
        position: absolute;
        margin-top: 12px !important;
    }

    .section.positioned {
        position: absolute;
        top: 100px;
        left: 100px;
        width: 800px;
        box-shadow: 0 0 15px #333;
    }

    .container_tbl {
        height: 451px;
    }

    table {
        border-spacing: 0;
        width: 100%;
    }

    td + td {
        border-left: 1px solid #eee;
    }

    td, th {
        border-bottom: 1px solid #eee;
        color: #000;
        padding: 10px 25px;
    }

    #myTable thead tr th {
        height: 0;
        line-height: 0 !important;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        color: transparent;
        border: none;
        white-space: nowrap;
    }

    th div {
        position: absolute;
        background: transparent;
        color: #fff;
        padding: 9px 10px;
        top: 0;
        margin-left: -8px;
        line-height: normal;
        /*border-left: 1px solid #800;*/ border-left: 1px solid #DDD;
    }

    th:first-child div {
        border: none;
    }

    .wrap {
        margin-top: 105px;
    }

    td:nth-child(1) {
        max-width: 100px;
        word-wrap: break-word;
    }

    td:nth-child(2) {
        max-width: 95px;
        word-wrap: break-word;
    }

    td:nth-child(3) {
        max-width:90px;
        word-wrap: break-word;
    }

    td:nth-child(4) {
        max-width: 110px;
        word-wrap: break-word;
    }

    td:nth-child(5) {
        max-width: 65px;
        word-wrap: break-word;
    }

    td:nth-child(6) {
        max-width: 180px;
        word-wrap: break-word;
    }

    td:nth-child(7) {
        max-width: 47px;
        word-wrap: break-word;
    }

    td:nth-child(8) {
        max-width: 61px;
        word-wrap: break-word;
    }

    td:nth-child(9) {
        max-width: 32px;
        word-wrap: break-word;
    }

    td:nth-child(10) {
        max-width: 46px;
        word-wrap: break-word;
    }

    .ui-widget-header {
        border: 0;
    }
    .container_tbl {overflow-y:scroll;
    }
</style>



<h2 id="btnPrint" class="btn btn-primary" style="margin-left:5px; margin-bottom:5px;">Print</h2>

<div class="section">
    <div class="table container_tbl" id="dvContainer">
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>
                        @*Vendor Registration No*@
                        <div>Vendor Registration No</div>

                    </th>
                    <th>
                        @*Vendor Name*@
                        <div> Vendor Name</div>

                    </th>
                    <th>
                        @*Organisation Name*@
                        <div>Organisation Name</div>

                    </th>
                    <th>
                        @*Mobile No.*@
                        <div>Mobile No.</div>

                    </th>
                    <th>
                        @*Address*@
                        <div> Address</div>

                    </th>
                    <th>
                        @*Email*@
                        <div>Email</div>

                    </th>
                    <th>
                        @*Registration Date*@
                        <div> Registration Date</div>

                    </th>


                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding-right:70px;">
                        @Html.DisplayFor(modelItem => item.VendorRegistrationNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganisationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @{string lDate = "";}
                        @if (item.RegistrationDate != null)
                        {
                            lDate = item.RegistrationDate.ToString("dd/MM/yyyy");
                        }
                        @lDate
                    </td>
                </tr>
            }
        </table>
    </div>
    </div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("#btnPrint").live("click", function () {
        var divContents = $("#dvContainer").html();
        var printWindow = window.open('', '', 'height=400,width=800');
        printWindow.document.write('<html><head><title>Product Aprroved / NonAprroved Report</title>');
        printWindow.document.write('</head><body >');
        printWindow.document.write(divContents);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    });
</script>

