    <div class="loader">
        <img id="loader_img" src="~/Content/img/loader.gif" style="display: none" />
    </div>
    <script src="~/Content/js/jquery-1.9.1.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#Pager .page-number").click(function (e) {
                //alert($(this).html());
                $('#loader_img').show();
                //alert($(this).html());
                var pagecount = 0;
                var page = parseInt($(this).html());
                if (page > 1) {
                    pagecount = 1;
                }
                var fromDate = "@ViewBag.fromDate";
                var toDate = "@ViewBag.toDate";
                var shopID = "@ViewBag.shopID";
                var approvedStatus = "@ViewBag.approvedStatus";
                var CategoryID = "@ViewBag.CategoryID";
                $.ajax({
                    url: '@Url.Action("GetReport", "MerchantApprovalReport")',
                    data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'shopID': shopID, 'approvedStatus': approvedStatus, 'CategoryID': CategoryID },
                    type: "POST",
                    cache: false,
                    success: function (data) {
                        //alert(data);
                        $('#loader_img').hide();
                        $('#divReport').empty();
                        $('#divReport').append(data);

                    },
                    error: function (data) {

                    }
                });
            });
        });
    </script>
