<div class="loader">
    <img id="loader_img" src="~/Content/img/loader.gif" style="display: none" />
</div>

<script src="~/Content/js/jquery-1.9.1.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("input#btnSearch").on('click', function () {
            $('#loader_img').show();
            var pagecount = 0;
            var page = 1;
            var approvedStatus = $('input[name=Product]:radio:checked').val();
            var toDate = $('#txtToDate').val();
            var fromDate = $('#txtFromDate').val();
            var CategoryID = 0;
            if ($("select#LevelThreeCategoryList option:selected").val() > 0)
                CategoryID = $("select#LevelThreeCategoryList option:selected").val();
            var isValid = ValidateDate(fromDate, toDate, CategoryID);


            if (isValid == false) {
                $('#loader_img').hide();
                return;
            }
            $.ajax({
                url: '@Url.Action("GetReport", "MerchantApprovalReport")',
                data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'approvedStatus': approvedStatus, 'CategoryID': CategoryID },
                type: "Post",
                cache: false,
                success: function (data) {
                    //alert(data);
                    $('#loader_img').hide();
                    $('#divReport').empty();
                    $('#divReport').append(data);
                },
                error: function (data) {

                }
            });
        });
    });


    function ValidateDate(fromDate, toDate, CategoryID) {
        if (fromDate == '' && toDate == '') {
            $('[id*=lblMsg]').text('Please Select From Date and To Date.');
            $('[id*=lblMsgFranchise]').text('');
            $('[id*=lblMsgCategory]').text('');
            return false;
        }
        else if (fromDate == '') {
            $('[id*=lblMsg]').text('Please Select From Date.');
            $('[id*=lblMsgFranchise]').text('');
            $('[id*=lblMsgCategory]').text('');
            return false;
        }
        else if (toDate == '') {
            $('[id*=lblMsg]').text('Please Select To Date.');
            $('[id*=lblMsgFranchise]').text('');
            $('[id*=lblMsgCategory]').text('');
            return false;
        }

        if (CategoryID == 0) {
            $('[id*=lblMsg]').text('');
            $('[id*=lblMsgCategory]').text('Please Select Third level Category.');
            return false;
        }
        if (fromDate != '' && toDate != '') {
            dateFirst = fromDate.split('/');
            dateSecond = toDate.split('/');
            var from = new Date(dateFirst[2], dateFirst[1], dateFirst[0]); //Year, Month, Date
            var to = new Date(dateSecond[2], dateSecond[1], dateSecond[0]);
            if (from > to) {
                $('[id*=lblMsg]').text('To Date must be greater than From Date.');
                return false;
            }
            else {
                $('[id*=lblMsg]').text('');
            }
        }
    }


    $("input#btnExport").on('click', function () {

        var print = 0;
        var option = 0;
        var approvedStatus = $('input[name=Product]:radio:checked').val();
        var CategoryID = 0;
        if ($("select#LevelThreeCategoryList option:selected").val() > 0)
            CategoryID = $("select#LevelThreeCategoryList option:selected").val();
        if ($("select#ExportOption option:selected").val() > 0) {
            option = $("select#ExportOption option:selected").val();
        }
        var toDate = $('#txtToDate').val();
        var fromDate = $('#txtFromDate').val();
        var isValid = ValidateDate(fromDate, toDate, CategoryID);
        if (isValid == false) {
            return;
        }
        window.location.href = "/MerchantApprovalReport/Export?&fromDate=" + fromDate + "&toDate=" + toDate + "&option=" + option + "&print=" + print + "&approvedStatus=" + approvedStatus + "&CategoryID=" + CategoryID;

    });


    function PrintReport() {
        //alert('in');
        var print = 1;
        var option = 0;
        var CategoryID = 0;
        if ($("select#LevelThreeCategoryList option:selected").val() > 0)
            CategoryID = $("select#LevelThreeCategoryList option:selected").val();
        var approvedStatus = $('input[name=Product]:radio:checked').val();

        if ($("select#ExportOption option:selected").val() > 0) {
            option = $("select#ExportOption option:selected").val();
        }
        var toDate = $('#txtToDate').val();
        var fromDate = $('#txtFromDate').val();
        var isValid = ValidateDate(fromDate, toDate, CategoryID);
        if (isValid == false) {
            return;
        }

        var url = "/MerchantApprovalReport/Export?&fromDate=" + fromDate + "&toDate=" + toDate + "&option=" + option + "&print=" + print + "&approvedStatus=" + approvedStatus + "&CategoryID=" + CategoryID;
        window.open(url, '_blank')
    }
    $(document).ready(function () {
        $("#CategoryList").change(function () {
            /* Get the selected value of dropdownlist */
            var selectedID = $(this).val();
            var FranchiseID = $("#FranchiseList option:selected").val();
            var level = 1;

            $.ajax({
                type: "POST",
                url: "/MerchantApprovalReport/SelectCategory/?ParentCategory=" + selectedID + "&level=2",
                dataType: "json",
                async: true,
                cache: false,
                success: function (msg) {
                    $('#LevelTwoCategoryList').empty();
                    $('#LevelTwoCategoryList').append('<option value=0>Second Level</option>');
                    $.each(msg, function (index, item) {
                        $('#LevelTwoCategoryList').append('<option value=' + item.ID + '>' + item.Name + '</option>');
                    });
                },
                error: function (x, e) {
                    alert("Sorry No Such Type of Category Is available. ");
                }
            });
        });


        $("#LevelTwoCategoryList").change(function () {
            /* Get the selected value of dropdownlist */
            var selectedID = $(this).val();
            var FranchiseID = $("#FranchiseList option:selected").val();
            var level = 2;
            $.ajax({
                type: "POST",
                url: "/MerchantApprovalReport/SelectCategory/?ParentCategory=" + selectedID + "&level=3",
                dataType: "json",
                async: true,
                cache: false,
                success: function (msg) {
                    $('#LevelThreeCategoryList').empty();
                    $('#LevelThreeCategoryList').append('<option value=0>Third Level</option>');
                    $.each(msg, function (index, item) {
                        //alert('in');
                        $('#LevelThreeCategoryList').append('<option value=' + item.ID + '>' + item.Name + '</option>');
                    });
                },
                error: function (x, e) {
                    alert("Sorry No Such Type of Category Is available. ");
                }
            });



        });
    });
</script>
