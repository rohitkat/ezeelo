                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1> Customer Classification Detail (@ViewBag.Heading)</h1> 
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                            <thead>
                                <tr>
                                    <th>UserLoginID</th>
                                    <th>Name</th>
                                    <th>Total Order</th>
                                    <th>Total Amount</th>
                                    <th>Last Purchase Date</th>
                                    <th>Joining Date</th>
                                    <th>Primary Mobile</th>
                                    <th>Registered Mobile</th>
                                    <th>Email</th>
                                    <th>Pincode</th>
                                    <th>City</th>
                                    <th>ShippingAddress1</th>
                                    <th>ShippingAddress2</th>
                                    <th>ShippingAddress3</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var OrderDetail in Model.lCustomerClassificationDetails)
                                {
                                    <tr>
                                        <td style="text-align:center">
                                            @OrderDetail.UserLoginID
                                        </td>
                                        <td>
                                            @OrderDetail.Name
                                        </td>
                                        <td>
                                            @OrderDetail.TotalOrder
                                        </td>
                                        <td>
                                            @OrderDetail.TotalAmount
                                        </td>
                                        <td>
                                            @OrderDetail.LastPurchaseDate.ToString("dd/MM/yyyy hh:mm tt")
                                        </td>
                                        <td>
                                            @OrderDetail.JoiningDate.ToString("dd/MM/yyyy hh:mm tt")
                                        </td>
                                        <td>
                                            @OrderDetail.PrimaryMobile
                                        </td>
                                        <td>
                                            @OrderDetail.RegisteredMobile
                                        </td>
                                        <td>
                                            @OrderDetail.Email
                                        </td>
                                        <td>
                                            @OrderDetail.Pincode
                                        </td>
                                        <td>
                                            @OrderDetail.City
                                        </td>
                                        <td>
                                            @OrderDetail.ShippingAddress1
                                        </td>
                                        <td>
                                            @OrderDetail.ShippingAddress2
                                        </td>
                                        <td>
                                            @OrderDetail.ShippingAddress3
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>         
            

