<style>
    #content {
        width: 100%;
        padding: 28px 15px 0px 0px;
        margin: 0px 0px;
        margin-left: 0 !important;
    }
    .ui-widget-header {
        border: 0px !important;
    }

    .input-large {
        width:140px!important;
    }

    #lblMsg {
        margin-top: 14px;
    }
    #txtToDate {margin-left:-7px!important;
    }
    #ExportOption {margin-top:5px;}
    .radio input[type="radio"], .checkbox input[type="checkbox"] {
        float: left;
       margin-left: 0px;
    }
    .radio, .checkbox {
        min-height: 20px;
        padding-left: 0px;
    }
    select {
        width: 160px;
        background-color: #ffffff;
