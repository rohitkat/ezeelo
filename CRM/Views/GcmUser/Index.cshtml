@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ModelLayer.Models.GcmUser>
@{
    ViewBag.Title = "List [ GCM Users ]";
}
<div class="row">
    <div class="span12" id="divtable">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> List [ Gcm User] @Html.ActionLink("Bulk Notification", "BulkCreate", null, new { @class = "btn btn-small btn-danger" })</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">

                        @using (Html.BeginForm("Index", "GcmUser", FormMethod.Post))
                        {   @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <table class="table table-bordered table-condensed table-hover table-responsive table-striped tablet table_tennis">
                                    <tr>
                                        <td colspan="5"><h3 style="background-color:#ff6a00; color:#ffffff;">No of Devices Registered: @ViewBag.TotalUsers</h3></td>
                                    </tr>
                                    <tr>
                                        @*<td>From Date &nbsp;</td>
                                            <td>@Html.TextBox("FromDate", null, new { @readonly = "readonly", @class = "input" }) &nbsp;</td>
                                            <td>To Date &nbsp;</td>
                                            <td>@Html.TextBox("ToDate", null, new { @readonly = "readonly", @class = "input" }) &nbsp;</td>
                                            <td>Order Code &nbsp;</td>*@
                                        <td>@Html.TextBox("IMEI", null, new { @class = "input", placeholder = "IMEI" }) &nbsp;</td>
                                        <td>@Html.TextBox("Email", null, new { @class = "input", placeholder = "Email" }) &nbsp;</td>
                                        <td>
                                            <button type="submit" value="Search" class="btn btn-small btn-warning">
                                                <span class="glyphicon glyphicon-search"></span> Search
                                            </button>
                                            <button type="button" class="btn btn-small btn-info" id="btn_clear">Clear</button>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        }
                        <table class="table table-bordered table-hover table-responsive table-striped">
                            <tr>
                                <th>Sr.No</th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.First().GcmRegID)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.First().EmailID)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.First().IsActive)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().CreateDate)
                                    </th>*@
                                <th>
                                    IMEI
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().City)
                                </th>
                                <th>Actions</th>
                            </tr>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center"><h3>No Record Found...</h3></td>
                                </tr>
                            }
                            else
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{int SrNo = ((ViewBag.PageNumber - 1) * ViewBag.PageSize) + i; i = i + 1; } @SrNo</td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.GcmRegID)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailID)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreateDate)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.CreateDate)
                                            </td>*@
                                        <td>@Html.ActionLink("Create", "Create", new { id = item.ID }, new { @class = "btn btn-small btn-warning" })</td>
                                    </tr>
                                }
                            }

                        </table>
                        <div class="pager">
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new
                       {
                           page = Page,
                           IMEI = ViewBag.IMEI,
                           Email = ViewBag.Email,
                           FromDate = ViewBag.FromDate,
                           ToDate = ViewBag.ToDate
                       }),
                                                                    new PagedListRenderOptions()
                                                                    {
                                                                        Display = PagedListDisplayMode.IfNeeded
                                                                    })
                        </div>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
    </div>
    <!-- /span12 -->
</div>

