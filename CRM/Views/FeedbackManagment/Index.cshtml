@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ModelLayer.Models.FeedbackManagment>

@{
    ViewBag.Title = "List [ Feedback ]";
}
<style>
    input {
        width: 80px;
    }
</style>
<div class="row">
    <div class="span12" id="divtable">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> List [ Feedback ]</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">

                        @using (Html.BeginForm("Index", "FeedbackManagment", FormMethod.Post))
                        {   @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <table>
                                    <tr>
                                        <td>From Date</td>
                                        <td>@Html.TextBox("FromDate", null, new { @readonly = "readonly" })</td>
                                        <td>&nbsp;&nbsp;&nbsp;To Date</td>
                                        <td>@Html.TextBox("ToDate", null, new { @readonly = "readonly" })</td>
                                        <td>&nbsp;&nbsp;&nbsp;Feedback For</td>
                                        <td>@Html.DropDownList("FeedbackCategaryID", "All")</td>
                                        <td>&nbsp;&nbsp;&nbsp;Response</td>
                                        <td>@Html.DropDownList("FeedBackTypeID", "All")</td>
                                        <td>
                                            <button type="submit" value="Search" class="btn btn-small btn-warning">
                                                <span class="glyphicon glyphicon-search"></span> Search
                                            </button>
                                            <button type="button" class="btn btn-small btn-info" id="btn_clear">Clear</button>
                                        </td>

                                    </tr>
                                </table>
                            </div>
                        }



                        <table class="table table-bordered table-hover table-responsive table-striped">
                            <tr>
                                <th style="width:20px;">Sr.No</th>
                                <th>
                                    Email
                                </th>
                                <th style="width:100px;">
                                    Mobile
                                </th>
                                <th>
                                    Feedback For
                                </th>
                                <th>
                                    Message
                                </th>
                                <th>
                                    Response
                                </th>
                                <th style="width:160px;">
                                    Date
                                </th>
                                <th style="width:20px;">
                                    Action
                                </th>
                            </tr>

                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center"><h3>No Record Found...</h3></td>
                                </tr>
                            }
                            else
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{int SrNo = ((ViewBag.PageNumber - 1) * ViewBag.PageSize) + i; i = i + 1; } @SrNo</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td style="width:100px;">
                                            @Html.DisplayFor(modelItem => item.Mobile)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FeedbackCategary.Name)
                                        </td>
                                        <td>
                                            @{
                                                string lMsgString = item.Message;
                                                if (lMsgString.Length > 15)
                                                {
                                                    lMsgString = lMsgString.Substring(0, 14) + "...";
                                                }
                                            }
                                            @lMsgString
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FeedBackType.Name)
                                        </td>
                                        <td style="width:160px;">
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>
                                        <td style="width:20px;">
                                            @*<button class="btn btn-small btn-success" onclick="Edit(@item.ID)">Edit</button>*@
                                            <a href="@Url.Action("Edit", "FeedbackManagment", new { id = item.ID })" onclick="Edit(@item.ID)" target="frameEdit" class="btn btn-small btn-success a_white">Edit</a>
                                        </td>
                                    </tr>
                                }
                            }

                        </table>
                        <div class="pager">
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new {   page = Page, 
                                                                                            SearchString = ViewBag.SearchString,
                                                                                            FromDate = ViewBag.FromDate,
                                                                                            ToDate = ViewBag.ToDate,
                                                                                            FeedbackCategaryID = ViewBag.FeedbackCategaryID1,
                                                                                            FeedBackTypeID = ViewBag.FeedBackTypeID1
                                                                                        }),
                                                                    new PagedListRenderOptions()
                                                                    {
                                                                        Display = PagedListDisplayMode.IfNeeded
                                                                    })
                        </div>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
    </div>
    <!-- /span12 -->
    <div class="span4">
        <div class="loader">
            <img id="loader_img" src="~/Content/Images/loader.gif" style="display: none" />
        </div>
        <div id="Details">
            <iframe id="frameEdit" name="frameEdit" src='' width="100%" height="800px" frameborder="0" style="margin:0px; padding:0px;"></iframe>
        </div>

    </div>

</div>

