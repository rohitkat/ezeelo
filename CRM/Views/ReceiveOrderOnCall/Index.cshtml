@using PagedList;
@using PagedList.Mvc;

@model IPagedList<ModelLayer.Models.ReceiveOrderOnCall>

@{
    ViewBag.Title = "List [ ReceiveOrderOnCall]";
}
<style>
    input {
        width: 80px;
    }

    select {
        width: 80px;
    }
</style>
<div class="row">
    <div class="span12" id="divtable">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> List [ Receive Order On Call ]</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">
                        <p>
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-primary" })
                        </p>

                        @using (Html.BeginForm("Index", "ReceiveOrderOnCall", FormMethod.Post))
                        {   @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <table>
                                    <tr>
                                        <td>From Date &nbsp;</td>
                                        <td>@Html.TextBox("FromDate", null, new { @readonly = "readonly" }) &nbsp;</td>
                                        <td>To Date &nbsp;</td>
                                        <td>@Html.TextBox("ToDate", null, new { @readonly = "readonly" }) &nbsp;</td>
                                        <td>Mobile &nbsp;</td>
                                        <td>@Html.TextBox("Mobile", ViewBag.Mobile as string, new { @class = "search" }) &nbsp;</td>
                                        <td>Order Code &nbsp;</td>
                                        <td>@Html.TextBox("OrderCode", ViewBag.OrderCode as string, new { @class = "search" }) &nbsp;</td>
                                        <td>Full Fill &nbsp;</td>
                                        <td>@Html.DropDownList("OrderCodeStatus", "All") &nbsp;</td>
                                        <td>
                                            <button type="submit" value="Search" class="btn btn-small btn-warning">
                                                <span class="glyphicon glyphicon-search"></span> Search
                                            </button>
                                            <button type="button" class="btn btn-small btn-info" id="btn_clear">Clear</button>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        }

                        <table class="table table-bordered table-hover table-responsive table-striped">
                            <tr>
                                <th style="width:20px;">Sr.No</th>
                                <th>
                                    Order Code
                                </th>
                                <th>
                                    Reference Order Code
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.First().PersonalDetail.FirstName)*@
                                    Received By
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.First().PersonalDetail1.FirstName)
                                        Modified By
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().PersonalDetail2.FirstName)
                                        Created By
                                    </th>*@
                                <th>
                                    Customer Name
                                </th>
                                <th style="width:80px;">
                                    Mobile
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.First().SecondaryMobile)
                                    </th>*@
                                <th>
                                    Email
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.First().ShippingAddress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Description)
                                    </th>*@
                                <th style="width:160px;">
                                    Create Date
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.First().ModifyDate)
                                    </th>*@
                                <th style="width:20px;">Actions</th>
                            </tr>

                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center"><h3>No Record Found...</h3></td>
                                </tr>
                            }
                            else
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{int SrNo = ((ViewBag.PageNumber - 1) * ViewBag.PageSize) + i; i = i + 1; } @SrNo</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerOrder.OrderCode)
                                        </td>
                                        <td>
                                            @if (item.CustomerOrder != null)
                                            {
                                                @CRM.Common.Common.GetRefOrderCode(item.CustomerOrder.ReferenceCustomerOrderID)
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PersonalDetail.FirstName)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.PersonalDetail1.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PersonalDetail2.FirstName)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrimaryMobile)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.SecondaryMobile)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.ShippingAddress)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.ModifyDate)
                                            </td>*@
                                        <td>
                                            @*@Html.ActionLink(" Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })*@
                                            @*@Html.ActionLink(" Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-success" })*@
                                            <button class="btn btn-small btn-success" onclick="Details(@item.ID)">Details</button>
                                    </tr>
                                }
                            }
                        </table>

                        <div class="pager">
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new
                       {
                           page = Page,
                           SearchString = ViewBag.SearchString,
                           OrderStatus = Request.QueryString["OrderStatus"],
                           FromDate = ViewBag.FromDate,
                           ToDate = ViewBag.ToDate,
                           Mobile = ViewBag.Mobile,
                           OrderCodeStatus = ViewBag.OrderCodeStatus1
                       }),
                                                                new PagedListRenderOptions()
                                                                {
                                                                    Display = PagedListDisplayMode.IfNeeded
                                                                })
                        </div>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
    </div>
    <!-- /span12 -->
    <div class="span4">
        <div class="loader">
            <img id="loader_img" src="~/Content/Images/loader.gif" style="display: none" />
        </div>
        <div id="Details"></div>
    </div>

</div>


@section MyScripts{
    <script>
        //----------------------------------------------------------------------For datepicker---//
        //<![CDATA[
        $(window).load(function () {
            //$('#DOB').datepicker('setDate', new Date());
            //alert();
            $('#FromDate').datepicker('update');
            $('#ToDate').datepicker('update');
        });//]]>

        function Details(id) {
            $('#divtable').removeClass('span12');
            $('#divtable').addClass('span8');
            window.parent.$("[id$=Details]").show();
            $('#loader_img').show();
            $.ajax({
                url: '@Url.Action("Details", "ReceiveOrderOnCall")?ID=' + id,
                type: "GET",
                success: function (result) {
                    $('#loader_img').hide();
                    $('#Details').html(result);
                },
                error: function (data) {
                    $('#Details').empty();
                    $('#loader_img').hide();
                }
            });
        }
    </script>
}

