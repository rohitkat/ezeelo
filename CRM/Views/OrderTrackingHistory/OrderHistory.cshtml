<table class="table table-bordered table-hover table-responsive table-striped">
    <tr style="background-color:#00ff90">
        <th style="width:20px;">Sr.No</th>              
        <th>
            Status
        </th>
        <th>
            Status Date
        </th>
        <th>
            Change By
        </th>
        <th>
            Duration
        </th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="6" class="text-center"><h3>No Record Found...</h3></td>
        </tr>
    }
    else
    {
        int i = 0;
        foreach (var item in Model)
        {
            if (item.CustomerOrderID > 0)
            {
                <tr>
                    <td>@{i = i + 1; } @i</td>                                      
                    <td>
                        @CRM.Common.Common.GetDeliveryStatus(item.OrderStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifyDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifyBy)
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                </tr>
            }
        }
    }
</table>

<div id="divLog">
    <div class="loader">
        <img id="loader_img" src="~/Content/Images/loader.gif" style="display: none" />
    </div>
    <div id="Details">
        <iframe id="frameLog" name="frameLog" src='' width="100%" height="300px" frameborder="0" style="margin:0px; padding:0px;"></iframe>
    </div>
</div>

<script>
    function Logs() {
        $("#divLog").show();
    }
</script>



