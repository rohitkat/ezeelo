@model ModelLayer.Models.ViewModel.BBPUserDashboard

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LeaderUsersLayout.cshtml";
}

<div class="wrapper">
    <section class="container-fluid mainContent">
        <div class="mainContentInner">
            <div class="mainContentinnerPartMain">
                <div class="mainContentinnerPartlastInnerRow">
                    <div class="mainContentinnerPartfirstrow-boxsmallSizeBox">
                        <h3>Total Member (Till 16 Level)</h3>
                        <div class="innermiddleRowContent">
                            <figure>
                                <img src="~/Templates/UsersTemplate/img/total.png" />@*customer*@
                            </figure>
                            <span>
                                <a target="_blank" href="@Url.Action("BBPTabularView", "BBPUsersReport")"> @Model.TotalMember</a>
                            </span>
                        </div>
                    </div>
                    <div class="mainContentinnerPartfirstrow-boxsmallSizeBox">
                        <h3>Total Subscriber </h3>
                        <div class="innermiddleRowContent">
                            <figure>
                                <img src="~/Templates/UsersTemplate/img/my-4.png" />
                            </figure>
                            <span>
                                <a target="_blank" href="@Url.Action("BBPTabularView", "BBPUsersReport",new { search="1"})"> @Model.TotalSubscriber</a>
                            </span>
                        </div>
                    </div>
                    @if (Model.Status)
                    {
                        <div class="mainContentinnerPartfirstrow-boxsmallSizeBox" style="border-color:green">
                            <h3>Earn Ezee Money</h3>
                            <div class="innermiddleRowContent">
                                <figure id="imgActive">
                                    <img src="~/Templates/UsersTemplate/img/my-2.jpg" />
                                </figure>
                                <span><a target="_blank" href="@Url.Action("WeeklyEarning", "BBPUsersReport")"> @Model.TotalERP</a></span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mainContentinnerPartfirstrow-boxsmallSizeBox" style="border-color:#dd5252">
                            <h3 style="color:#dd5252 !important;">Earn Ezee Money</h3>
                            <div class="innermiddleRowContent">
                                <figure>
                                    <img src="~/Templates/UsersTemplate/img/right_img-1.jpg" style="width:120%;height:110%" />
                                </figure>
                                <span style="color:#dd5252 !important;"><a target="_blank" href="@Url.Action("WeeklyEarning", "BBPUsersReport")"> @Model.TotalERP</a></span>
                            </div>
                        </div>
                    }
                    <div class="mainContentinnerPartfirstrow-boxsmallSizeBox lastmaininner">
                        <h3>Inactive Points</h3>
                        <div class="innermiddleRowContent">
                            <figure>
                                <img src="~/Templates/UsersTemplate/img/right_img-1.jpg" style="width:120%;height:110%" />
                            </figure>
                            <span><a target="_blank" href="@Url.Action("WeeklyEarning", "BBPUsersReport")"> @Model.InactivePoints</a></span>
                        </div>
                    </div>
                    <div class="mainContentinnerPartMiddleRow">
                        <div class="mainContentinnerPartfirstrow-boxsmallSizeBox">
                            <h3>Status</h3>
                            <div class="innermiddleRowContent">
                                @{
                                    string str = "";
                                    str = Model.Status ? "Active" : "Inactive";
                                }
                                @if (Model.Status)
                                {
                                    <figure>
                                        <img src="~/Templates/UsersTemplate/img/my-4.png" />
                                    </figure>
                                }
                                else
                                {
                                    <figure>
                                        <img src="~/Templates/UsersTemplate/img/my-4.jpg" />
                                    </figure>
                                }
                                <span><a target="_blank" href="@Url.Action("BBPOrderReport", "BBPUsersReport")"> @str</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
