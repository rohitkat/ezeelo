<table id="tblData" class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Refferal Id</th>
            <th>
                Pts Pending
            </th>

            <th>
                Email
            </th>

            <th>
                Last Trx Date
            </th>
            <th>
                Level
            </th>
            <th>
                Parent Name
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.User_Name
                </td>
                <td>
                    @item.Referal_ID
                </td>
                <td>
                    @item.Pts_Pending
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Last_Trx
                </td>
                <td>
                    Level: @item.Network_Level
                </td>
                <td>
                    @item.Parent_Name
                </td>
                <td>
                    @if (@item.Pts_Pending == 0)
                    {
                        <span style="background-color:#0ceb4a" class="badge badge-table badge-success">@Html.DisplayFor(model => item.Status)</span>
                    }
                    else
                    {
                        <span style="background-color:#b30707" class="badge badge-table badge-danger">@Html.DisplayFor(model => item.Status)</span>
                    }
                </td>
            </tr>

        }
    </tbody>

</table>
