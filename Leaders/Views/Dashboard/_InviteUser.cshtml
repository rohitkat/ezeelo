@model ModelLayer.Models.ViewModel.InviteUser
<script>
    function ClearDetail() {
        $("#Name").val("");
        $("#Email").val("");
        $("#MobileNo").val("");
        $("#Message").val("Hi!, i would like to invite you to this awesome scheme launched by ezeelo.com check the link in email for more info");
        $("#inviteSubmit").blur();
    }
</script>
@using (Ajax.BeginForm("InviteUser", "Dashboard", new AjaxOptions { LoadingElementId = "progress", OnSuccess = "ClearDetail" }))
{
    <div>
        <div id="progress" class="modal">
            <div class="center">
                <img src="~/img/ajax-loading-gif-transparent-background-8.gif" />
            </div>
        </div>

        @Html.TextBoxFor(model => model.Name, new { @class = "form-control mt-20", placeholder = "Name" })
        @Html.ValidationMessageFor(model => model.Name)
        <br />
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control mt-20", placeholder = "Email" })
        @Html.ValidationMessageFor(model => model.Email)
        <br />
        @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control mt-20", placeholder = "Mobile No" })
        @Html.ValidationMessageFor(model => model.MobileNo)
        <br />
        @Html.TextAreaFor(model => model.Message, new { @class = "form-control mt-20", rows = "4", placeholder = "Message" })
        @Html.ValidationMessageFor(model => model.Message)
        <br />
        <input id="inviteSubmit" type="submit" value="Send Invite" class="btn btn-primary mt-20 col-lg-12 waves-effect waves-classic">
    </div>
}
