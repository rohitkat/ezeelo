@model IEnumerable<ModelLayer.Models.ViewModel.BBPNetworkView>
<table id="tablePreviewDetails" style="width:100%">
    <thead class="thead-dark1">
        <tr>
            <th style="width:20px">#</th>
            <th style="width:380px">Name</th>
            <th>ERP</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 1;}
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" style="font-weight:bold">No users found...</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td style="width:20px">@i  @{i = i + 1;}</td>
                    <td style="width:380px">@item.Name</td>
                    <td style="text-align:left">@item.ERP</td>
                </tr>
            }
        }
    </tbody>
</table>


