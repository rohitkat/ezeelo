
@using PagedList.Mvc
@model PagedList.IPagedList<ModelLayer.Models.ViewModel.Downline>

<script>
    $(document).ready(function () {
        hideSymbol();
        function hideSymbol() {
            var listItems = $(".pagination li");
            listItems.each(function (li) {
                if ($(this).text() == "»") {
                    $(this).hide();
                }
                if ($(this).text() == "«") {
                    $(this).hide();
                }
            });
        }
    });
</script>
<table id="tblData" class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">

    <thead>

        <tr>
            <th>Level No</th>
            <th>Total Downline</th>
            <th>
                Total RP
            </th>
            <th>
                Active Users
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Levelno
                </td>
                <td>
                    @item.TotalDownline
                </td>
                <td>
                    @item.TotalRP
                </td>
                <td>
                    @item.Activeusers
                </td>
              
            </tr>
        }
    </tbody>
    
</table>


