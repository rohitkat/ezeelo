@using PagedList.Mvc
@model PagedList.IPagedList<ModelLayer.Models.ViewModel.TabularView>

<script>
    $(document).ready(function () {
        hideSymbol();
        function hideSymbol() {
            var listItems = $(".pagination li");
            listItems.each(function (li) {
                if ($(this).text() == "»") {
                    $(this).hide();
                }
                if ($(this).text() == "«") {
                    $(this).hide();
                }
            });
        }
    });
</script>
<table id="tblData" class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">

    <thead>

        <tr>
            <th>Name</th>
            <th>Refferal Id</th>
            <th>Designation</th>
            <th>
                Pts Pending
            </th>
            <th>
                ERP
            </th>
            @*---added by amit on 1-2-19*@
            @if (Session["DisplayEmail"] != null && Session["DisplayEmail"].ToString() == "1")

            {
                <th>
                    Email
                </th>
            }
            @*---added by amit on 1-2-19*@
            @if (Session["DisplayMobile"] != null && Session["DisplayMobile"].ToString() == "1")
            {

                <th>
                    Mobile
                </th>
            }

            <th>
                Last Trx Date
            </th>
            <th>
                Level
            </th>
            <th>
                Parent Name
            </th>
            <th>
                Join Date
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.RefferalId
            </td>
            <td>@item.Designation</td>
            <td>
                @item.QRP
            </td>
            <td>
                @item.ERPbySP
            </td>
            @*---added by amit on 1-2-19*@
            @if (Session["DisplayEmail"] != null && Session["DisplayEmail"].ToString() == "1")

            {
                <td>
                    @item.Email
                </td>
            }
            @*---added by amit on 1-2-19*@
            @if (Session["DisplayMobile"] != null && Session["DisplayMobile"].ToString() == "1")
            {
                <td>
                    @item.Mobile
                </td>
            }
            <td>
                @if (item.LastTras != null)
                {
                    @Convert.ToString(string.Format("{0:dd MMM yyyy}", item.LastTras))
                }
            </td>
            <td>
                L: @item.Level
            </td>
            <td>
                @item.ParentName
            </td>
            <td>
                @if (item.JoinDate != null)
                {
                    @Convert.ToString(string.Format("{0:dd MMM yyyy}", item.JoinDate))
                }
            </td>
            <td>
                @if(item.status == 0)
                {
                    <span style="background-color:#b30707" class="badge badge-table badge-danger">Inactive</span>
                }
                else
                {
                    <span style="background-color:#0ceb4a" class="badge badge-table badge-success">Active</span>
                }
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="12" style="min-width:960px;max-width:960px">
                <div id="pager">
                    <p style="float: right; color: #138afc; " onclick="ShowPage(10)">
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("GetReportTablurViewPaging", new { page }), new PagedListRenderOptions
   {
       DisplayLinkToLastPage = PagedListDisplayMode.Never,
       MaximumPageNumbersToDisplay = 50
   })
                    </p>
                </div>
            </td>
        </tr>
    </tfoot>
</table>


