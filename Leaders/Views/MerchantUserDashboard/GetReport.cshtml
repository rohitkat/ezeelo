@model IEnumerable<ModelLayer.Models.ViewModel.LeaderERPFromMerchant>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeaderUsersLayout.cshtml";
}


<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<style>
    .maintabularPageView {
        font-size: medium !important
    }

    .table .thead-dark th {
        color: #fff;
        background-color: #620000 !important;
        border-color: #FF8888;
        font-size: medium !important
    }

    .table tr {
        color: black;
    }

    .panel-title {
        color: #620000 !important;
        text-decoration: double !important;
        font-weight: bold;
    }

    .Heading {
        font-size: large;
        font-weight: bold;
        color: green;
    }
</style>
<script>
    $(document).ready(function () {
        $('#tablePreview').DataTable({
            "order": [[0, 'asc']]
        });

    });
</script>
<section class="maintabularPageView">
    <div class="maintabularPageView-child">
        <div class="container">
            <center>
                @if (ViewBag.MessageFor == -1)
                {
                    <span class="Heading">Relationship Manager ERP: @Model.Sum(p => p.ERP)</span>
                }
                else if (ViewBag.MessageFor == 0)
                {
                    <span class="Heading">CashbackPoint On Self Purchase: @Model.Sum(p => p.ERP)</span>
                }
                else if (ViewBag.MessageFor == 1)
                {
                    <span class="Heading">From Network ERP: @Model.Sum(p => p.ERP)</span>
                }
                else if (ViewBag.MessageFor == 2)
                {
                    <span class="Heading">Unrealised ERP: @Model.Sum(p => p.ERP)</span>
                }
                else if (ViewBag.MessageFor == 3)
                {
                    <span class="Heading">Pending Bill Amount: @Model.Sum(p => p.ERP)</span>
                }
            </center>
            <table id="tablePreview" class="table table-striped table-hover table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <th style="width:50px">#</th>
                        <th>Shop</th>
                        <th style="width:150px">City</th>
                        @if (ViewBag.MessageFor == 3)
                        {
                            <th style="width:50px">Transaction Date</th>
                            <th style="width:150px">Bill Amount</th>
                        }
                        else
                        {
                            <th style="width:50px">User Name</th>
                            <th style="width:150px">ERP</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SrNo</td>
                            <td>@item.Shop</td>
                            <td>@item.City</td>
                            <td>@item.UserName</td>
                            <td>@item.ERP</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
