                                                                    <td style="display: table-cell;">@Html.DisplayFor(model => item.Downline)</td>
                                                                    <td style="display: table-cell;">@Html.DisplayFor(model => item.ParentName)</td>
                                                                    <td class="footable-last-visible" style="display: table-cell;">
                                                                        <span class="badge badge-table badge-danger">@Html.DisplayFor(model => item.ActiveStatus)</span>
                                                                    </td>
                                                                </tr>
                                                                
                                                            </tbody>
                                                        }
                                                         <tfoot>
                                                          <tr>
                                                            <td colspan="9">
                                                              <div class="text-right">
                                                                <ul class="pagination"></ul>
                                                              </div>
                                                            </td>
                                                          </tr>
