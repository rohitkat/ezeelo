                                                                <th data-name="name" class="footable-sortable footable-first-visible" style="display: table-cell;">
                                                                    Name
                                                                    <span class="fooicon fooicon-sort"></span>
                                                                </th>
                                                                <th data-name="ref_id" data-breakpoints="xs sm" class="footable-sortable" style="display: table-cell;">
                                                                    Referal ID
                                                                    <span class="fooicon fooicon-sort"></span>
                                                                </th>
                                                                <th data-name="pts_pending" data-filterable="false" data-breakpoints="xs sm" class="footable-sortable" style="display: table-cell;">
                                                                    PtsPending
                                                                    <span class="fooicon fooicon-sort"></span>
                                                                </th>
                                                                <th data-name="email" data-breakpoints="xs sm" class="footable-sortable" style="display: table-cell;">
                                                                    E-Mail
                                                                    <span class="fooicon fooicon-sort"></span>
                                                                </th>
                                                                <th data-name="join_date" data-type="date" data-breakpoints="xs sm md" data-format-string="DD/mm/YY" class="footable-sortable"
                                                                    style="display: table-cell;">
                                                                    JoinedDate
                                                                    <span class="fooicon fooicon-sort"></span>
                                                                </th>
                                                                <th data-name="last_trx" data-filterable="false" data-breakpoints="xs sm" class="footable-sortable" style="display: table-cell;">
