                                                                              data-peity="{ &quot;fill&quot;: [&quot;#35b752&quot;, &quot;#ccc&quot;],
                                                &quot;innerRadius&quot;: 7,
                                                &quot;radius&quot;: 10 }" style="display: none;">0.0/1800</span>
                                                                        <svg class="peity" height="20" width="20">
                                                                            <path d="M 10 0 A 10 10 0 1 1 9.99 0 L 9.99 3 A 7 7 0 1 0 10 3" fill="#ccc"></path>
                                                                        </svg>
                                                                    </td>
                                                                    <td style="display: table-cell;">@Html.DisplayFor(model => item.UserEmail)</td>
                                                                    <td data-filter-value="08/08/18" style="display: table-cell;">@Html.DisplayFor(model => item.JoinDate)</td>
                                                                    @*<td style="display: table-cell;">@Html.DisplayFor(model => item.LastTransaction)</td>*@
