<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ezeelo Admin</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="~/Templates/apple-icon.png">
    
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Templates/favicon.ico">
    <link rel="stylesheet" href="~/Templates/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Templates/assets/css/normalize.css">
    <link rel="stylesheet" href="~/Templates/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Templates/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/Templates/assets/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Templates/assets/css/cs-skin-elastic.css">
    <!-- <link rel="stylesheet" href="assets/css/bootstrap-select.less"> -->
    <link rel="stylesheet" href="~/Templates/assets/scss/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
</head>

<body class="bg-dark">
       

    @using (Html.BeginForm("Index", "Login"))
    {
        @Html.AntiForgeryToken()
        <div class="sufee-login d-flex align-content-center flex-wrap">
            <div class="container">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h4>Ezeelo Admin Login</h4>
                        </a>
                    </div>
                    <div class="login-form">
                        @if (TempData["Message"] != null)
                        {
                            <div class="breadcrumbs dark">
                                @TempData["Message"]
                            </div>
                        }
                        @Html.ValidationSummary(true)
                        <form>
                            <div class="form-group">
                                <label>Email address</label>
                                @Html.TextBoxFor(model => model.UserName, new { @Class = "form-control", @placeholder = "Enter Email" })
                                @Html.ValidationMessageFor(model => model.UserName)
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.PasswordFor(model => model.Password, new { @Class = "form-control", @placeholder = "Enter Password" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember Me
                                </label>
                                <label class="pull-right">
                                    <a href="#">Forgotten Password?</a>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>                            
                            <div class="register-link m-t-15 text-center">
                                <p>Don't have account ? <a href="#"> Sign Up Here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    <script src="~/Templates/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Templates/assets/js/popper.min.js"></script>
    <script src="~/Templates/assets/js/plugins.js"></script>
    <script src="~/Templates/assets/js/main.js"></script>

</body>
</html>


