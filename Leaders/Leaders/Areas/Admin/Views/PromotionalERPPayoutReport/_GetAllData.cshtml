
@model ModelLayer.Models.ViewModel.PromotionalERPPayoutReportViewModel

<script src="~/Scripts/jquery-1.12.4.js"></script>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<table id="tblData" class="table table-bordered table-striped table-condensed display" width="100%">
    <thead>
        <tr>
            <th>Sr.No.</th>
            <th>User LogiId</th>
            <th>Paid Date</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No</th>
            <th>ERP</th>
            <th>EzeeMoney</th>
            <th>Reference Text</th>

        </tr>
    </thead>
    <tbody>
        @{ var i = 1; }
        @if (Model.List.Count != 0)
        {
            foreach (var item in @Model.List)
            {
                <tr>
                    <td>
                        @i
                        @{
                            i = i + 1;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserLoginId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ERP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EzeeMoney)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReferenceText)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" style="min-width:960px;max-width:960px">
                    <label style=" color: #138afc; ">No Record Found.... </label>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblData').DataTable();
        $("#pageloaddiv").css('display', 'none');

    });
</script>
