@model IEnumerable<ModelLayer.Models.MerchantBanner>

@{
    ViewBag.Title = "REgistered Merchant's";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

<script src="~/Content/js/jquery.dataTables.min.js"></script>

<script src="~/Scripts/MerchantMenuOpenup.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblData').DataTable();
    });
</script>
@if (TempData["Result"] != null)
{
    <script>
        alert('@TempData["Result"]');
    </script>
}
<style>
    th {
        cursor: pointer !important;
    }
</style>
<div class="container">
    <div class="card">
        <div class="card-header">
            <strong> @ViewBag.Merchantname - Approved Banner List</strong>
        </div>
        <div class="card-body card-block" style="overflow:auto">
            <table id="tblData" class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
                <thead>
                    <tr>
                        <th>
                            Sr.No
                        </th>
                        <th>
                            Banner
                        </th>
                        <th>
                            Is Display
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @i
                            @{ i = i + 1;}
                        </td>
                        <td>
                            <img src="@item.BannerPath" style="width:50%;height:30%" />
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span>Yes</span>
                            }
                            else
                            {
                                <span>No</span>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("View", "EditApprovedBanner", new { id = item.ID }, new { @Class = "btn btn-warning" })
                        </td>
                    </tr>
                }

            </table>
            @Html.ActionLink("Back", "KYC", new { Id = ViewBag.MerchantId }, new { @Class = "btn btn-info" })
        </div>
    </div>
</div>



