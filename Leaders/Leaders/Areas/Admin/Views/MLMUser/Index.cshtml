@model List<MLMUserViewModel>
@using System.Web.Optimization
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

@section styles{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    @Styles.Render("~/Contents/css/daterangepicker.css")
}



<div class="clearfix">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-lg-2 form-group">
            <label>Search : </label>
            <input type="text" id="txt_search" name="search" placeholder="Name/RefID/Mobile" autocomplete="off" />
        </div>
        <div class="col-sm-12 col-md-4 col-lg-2 form-group">
            <div class="input-group">
                @Html.TextBox("mlmDateRange", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly", @placeholder = "Date Range", @style = "background-color: #fff;" })
                <span id="clrFilterDate" class="input-group-addon" style="cursor:pointer;border-radius: 0;">
                    <i class="fa fa-close"></i>
                </span>
            </div>
        </div>
        <div class="col-sm-12 col-md-2 col-lg-2">
            <input type="button" class="btn btn-primary" value="Search" name="btnSearch" id="btnSearch" />         
        </div>
        <div class="col-sm-12 col-md-2 col-lg-2">          
            <input type="button" name="btnExcel" id="btnExcel" value="Export To Excel" class="btn btn-primary" />
        </div>
    </div>
</div>
<div class="row" style="background-color:#fff;">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="table-responsive">
            <table id="grid-leaderList" class="table table-striped table-bordered dt-responsive nowrap" style="width: 100%;" cellspacing="0">
            </table>
        </div>
    </div>
</div>

<div id="pageloaddiv"></div>

@section scripts{
    @Scripts.Render("//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js", "~/Areas/Admin/Scripts/MLMUser/index.js", "~/Scripts/moment.js", "~/Contents/scripts/daterangepicker.js")
}

