@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />


<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/css/datepicker.css" rel="stylesheet" />
<link href="~/Content/css/jquery-ui-1.8.21.custom.css" rel="stylesheet" />
<div class="container">
    <br />
    <div style="margin-left:80%;">
        <input type="button" name="btnExcel" id="btnExcel" value="Export To Excel" class="btn btn-primary" />
    </div>

    <br />


    <legend> Leaders User List</legend>
    <div style="width:50%; margin-right:20px;">
        @*<table id="example" class="display" width="90%">*@
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="70%" cellspacing="0">
            <thead>
                <tr>
                    <th>Full Name</th>
                   
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Create Date</th>
                    <th>Ref ID</th>
                    <th>Join Date Ref</th>
                    <th>Status Ref</th>
                    <th>Activate Date Ref</th>
                    <th>Request ID Ref</th>
                    
                </tr>
            </thead>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#example").DataTable({
           
            "ajax": {
                "url": "/MLMUser/LeaderUserList",
                "type": "POST",
                "datatype": "json"
            },

            "columns": [
                { "data": "FullName", "name": "FullName", "autoWidth": true },
               
                { "data": "Email", "name": "Email", "autoWidth": true },

                { "data": "Mobile", "name": "Mobile", "autoWidth": true },

                {
                    "data": "CreateDate", "name": "CreateDate", "autoWidth": true,
                    "render": function (value) {
                        if (value === null) return "";

                        var pattern = /Date\(([^)]+)\)/;
                        var results = pattern.exec(value);
                        var dt = new Date(parseFloat(results[1]));

                        return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                    }


                },
                { "data": "Ref_Id", "name": "Ref_Id", "autoWidth": true },
                {
                    "data": "Join_date_ref", "name": "Join_date_ref", "autoWidth": true,
                    "render": function (value) {
                        if (value === null) return "";

                        var pattern = /Date\(([^)]+)\)/;
                        var results = pattern.exec(value);
                        var dt = new Date(parseFloat(results[1]));

                        return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                    }


                },
                        { "data": "Status_ref", "name": "Status_ref", "autoWidth": true },
                        {
                            "data": "Activate_date_ref", "name": "Activate_date_ref", "autoWidth": true,
                            "render": function (value) {
                                if (value === null) return "";

                                var pattern = /Date\(([^)]+)\)/;
                                var results = pattern.exec(value);
                                var dt = new Date(parseFloat(results[1]));

                                return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                            }
                        },
                        { "data": "Refered_Id_ref", "name": "Refered_Id_ref", "autoWidth": true },
                      
                       
            ]

        });
    });



    $('#btnExcel').click(function () {

        window.location = '/MLMUser/ExportToExcel';



    })


</script>