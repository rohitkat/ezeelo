@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}


<script src="~/Scripts/jquery-1.12.4.min.js"></script>
@*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>*@



<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />


<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<div class="container">
    <br />
    <div style="margin-left:80%;">
        <input type="button" name="btnExcel" id="btnExcel" value="Export To Excel" class="btn btn-primary" />
    </div>
    <br />
    
    <legend>Ezeelo Order List</legend>
    <div style="width:50%; margin-right:20px;">
        @*<table id="example" class="display" width="90%">*@
        <table id="custTable" class="table table-striped table-bordered dt-responsive nowrap" width="70%" cellspacing="0">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email ID</th>
                    <th>Order Code</th>
                    <th>Order Amount</th>
                    <th>Order Date</th>
                    
                   
                    <th>Payment Mode</th>
                    <th>Payable Amount</th>
                    <th>Total Business Point</th>
                    <th>MLM Amount Used</th>
                    <th>Primary Mobile</th>
                   
                    <th>Shipping Address</th>
                    <th>Area Name</th>
                    <th>Pincode</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script>

    $(document).ready(function () {
      var table= $("#custTable").DataTable({
          
            "ajax": {
                "url": "/EzeeloCustomerOrder/CustomerOrderList",
                "type": "POST",
                "datatype": "json"
            },

            "columns": [
                { "data": "FullName", "name": "FullName", "autoWidth": true },
                { "data": "EmailID", "name": "EmailID", "autoWidth": true },
                { "data": "OrderCode", "name": "OrderCode", "autoWidth": true },
                { "data": "OrderAmount", "name": "OrderAmount", "autoWidth": true },
               {
                   "data": "CreateDate", "name": "CreateDate", "autoWidth": true,
                   "render": function (value) {
                       if (value === null) return "";

                       var pattern = /Date\(([^)]+)\)/;
                       var results = pattern.exec(value);
                       var dt = new Date(parseFloat(results[1]));

                       return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                   }
               },

                
               
                { "data": "PaymentMode", "name": "PaymentMode", "autoWidth": true },
                { "data": "PayableAmount", "name": "PayableAmount", "autoWidth": true },
                { "data": "BusinessPointsTotal", "name": "BusinessPointsTotal", "autoWidth": true },
                { "data": "MLMAmountUsed", "name": "MLMAmountUsed", "autoWidth": true },
                { "data": "PrimaryMobile", "name": "PrimaryMobile", "autoWidth": true },
               
                { "data": "ShippingAddress", "name": "ShippingAddress", "autoWidth": true },
                { "data": "AreaName", "name": "AreaName", "autoWidth": true },
                { "data": "Pincode", "name": "Pincode", "autoWidth": true },

            ]

      });

      


    });



    $('#btnExcel').click(function () {

        window.location = '/EzeeloCustomerOrder/ExportToExcel';



    })


</script>

