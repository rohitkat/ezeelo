@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />


<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>


<div class="container">
    <br />
    <div style="margin-left:80%;">
        <input type="button" name="btnExcel" id="btnExcel" value="Export To Excel" class="btn btn-primary" />
    </div>
    <br />
    <legend> Ezeelo User List</legend>
    <div style="width:100%; margin-right:20px;">
        @*<table id="example" class="display" width="90%">*@
        <table id="ezeeloTable" class="table table-striped table-bordered dt-responsive nowrap" width="70%" cellspacing="0">
            <thead>
                <tr>
                    <th>Full Name</th>

                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Create Date</th>
                    

                </tr>
            </thead>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#ezeeloTable").DataTable({

            "ajax": {
                "url": "/EzeeloUsers/EzeeloUserList",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [
             
                { "data": "ID", "name": "ID" },
                { "data": "Email", "name": "Email", "autoWidth": true },

                { "data": "Mobile", "name": "Mobile", "autoWidth": true },

                {
                    "data": "CreateDate", "name": "CreateDate", "autoWidth": true,
                    "render": function (value) {
                        if (value === null) return "";

                        var pattern = /Date\(([^)]+)\)/;
                        var results = pattern.exec(value);
                        var dt = new Date(parseFloat(results[1]));

                        return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                    }


                }
                


            ]

        });
    });



    $('#btnExcel').click(function () {

        window.location = '/#/ExportToExcel';



    })


</script>