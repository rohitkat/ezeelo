@model IEnumerable<ModelLayer.Models.UserLogin>

@{
    ViewBag.Title = "GetList";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

<script src="~/Scripts/jquery-1.12.4.js"></script>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>

<div class="container">
    <table border="0" class="table border-table display" id="ezeeloTable">
        <thead>
            <tr>
               <th>Email</th>
                <th>Mobile</th>
                <th>Create Date</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                   

                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    
                    
                </tr>
            }
        </tbody>

    </table>

    <div class="">
        @*<input type="datetime" id="fini" name="min" placeholder="Start Date">
        <input type="datetime" id="ffin" name="max"  placeholder="End Date">*@
        <input type="button" name="btnExcel" id="btnExcel" value="Export To Excel" class="btn btn-primary" />
        @*<div class="col-2">
            </div>
            <div class="col-2">
            </div>
            <div class="col-2">
            </div>*@
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#ezeeloTable').DataTable(

        );
    });

    $('#btnExcel').click(function () {

        var startDate = $("#fini").val();
        var endDate = $("#ffin").val();
        window.location.href = "/EzeeloUsers/ExportToExcel?toDate=" + endDate + "&fromDate=" + startDate;

        //window.location.href = "/EzeeloUsers/ExportToExcel?endDate=" + endDate + "&startDate=" + startDate;
    });
</script>

