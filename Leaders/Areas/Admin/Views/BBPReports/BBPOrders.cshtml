@model ModelLayer.Models.ViewModel.BBPDashboardViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/BBPMenuOpenup.js"></script>
<style>
    table {
        border-collapse: separate;
        border-spacing: 15px;
    }

    .nav-link {
        color: #007bff !important;
    }

    a.nav-link.active.show {
        color: black !important;
    }
</style>
@if (TempData["BBPResult"] != null)
{
    <script>
    alert("@TempData["BBPResult"]");
    </script>
}   `
<script>
    $(document).ready(function () {
        $("#btnExport").click(function () {
            window.location = "/admin/BBPReports/ExportToExcel_Orders";
        })
    });
</script>
<div class="container">
    <div id="progress" class="modal">
        <div class="center">
            <img src="~/img/ajax-loading-gif-transparent-background-8.gif" />
        </div>
    </div>
    <div class="card" id="maindiv">
        <div class="card-header"><strong>Business Booster Plan Order Report </strong></div>
        <div class="card-body card-block">
            @using (Html.BeginForm("BBPOrders", "BBPReports"))
            {
                @Html.AntiForgeryToken()
                <table>
                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.PayoutDateFilterID, Model.PayoutDateFilter, "Select Payout Week", new { @class = "form-control" })
                            </div>
                        </td>
                        <td>
                            <input id="btnGo" type="submit" value="Go" class="btn btn-info" />
                        </td>
                        <td>
                            <input id="btnExport" type="button" value="Export To Excel" class="btn btn-warning" />
                        </td>
                    </tr>
                </table>
            }
            @if (Model != null)
            {
                <div style="max-width:1000px;overflow:auto">
                    <table id="tblData" class="table table-bordered table-striped table-condensed display" width="100%">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>OrderCode</th>
                                <th>Retail Points</th>
                                <th>Order Amount</th>
                                <th>Franchise</th>
                                <th>UserLoginId</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone No</th>
                                <th>Order Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = 0; }
                            @if (Model.Orders.Count != 0)
                            {
                                foreach (var item in @Model.Orders)
                                {
                                    <tr>
                                        <td>
                                            @{
                                                i = i + 1;
                                            }
                                            @i
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RetailPoints)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FranchiseName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserloginId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Mobile)
                                        </td>
                                        <td>
                                            @item.OrderDate.ToString("dd-MM-yyyy HH:mm")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderStatus)
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" style="min-width:960px;max-width:960px">
                                        <label style=" color: #138afc; ">No Record Found.... </label>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblData').DataTable();

        if ('@TempData["Search"]' != '') {
            oTable = $('#tblData').DataTable();
            oTable.search('@TempData["Search"]').draw();
        }
    });
</script>