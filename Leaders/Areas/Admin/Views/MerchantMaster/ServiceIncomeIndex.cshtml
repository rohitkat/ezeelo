@model IEnumerable<ModelLayer.Models.ServiceIncomeMaster>

@{
    ViewBag.Title = "ServiceIncomeIndex";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

<script src="~/Scripts/MerchantMenuOpenup.js"></script>
<div class="container">
    <div class="card">
        <div class="card-header">
            <strong>Service Income Master</strong>
            @if (Model.Count() == 0)
            {
                <a class="btn btn-info btn-sm" style="float:right" href="@Url.Action("ServiceIncomeCreate", "MerchantMaster", new { area = "Admin" })">Create</a>
            }
        </div>
        <div class="card-body card-block">
            <table id="tbl" class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
                <thead>
                    <tr>
                        <th>
                            Sr No
                        </th>
                        <th>
                            Company Share
                        </th>
                        <th>
                            Relationship Manager
                        </th>
                        <th>
                            Level 0 user Share
                        </th>
                        <th>
                            Up to Level 6
                        </th>
                        <th>
                            5th Part
                        </th>
                        <th>
                            IsActive
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        i = i + 1;
                                    }
                                    @i
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RelationshipManager)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserLevel0)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UptoLevel6)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Part5th)
                                </td>
                                <td>
                                    @item.IsActive.ToString()
                                </td>
                                <td>
                                    <a class="btn btn-success btn-sm" href="@Url.Action("ServiceIncomeUpdate", "MerchantMaster", new {Id = item.Id, area = "Admin" })">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
