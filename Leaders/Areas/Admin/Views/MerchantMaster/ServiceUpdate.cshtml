@model ModelLayer.Models.ServiceMaster
@{
    ViewBag.Title = "ServiceUpdate";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}
<style>
    .form-control-label {
        width: 100px !important;
    }
</style>

<script src="~/Scripts/MerchantMenuOpenup.js"></script>
<script>
    $(document).ready(function () {
        $("#frmMerMst").submit(function (e) {
            var res = "0";
            if ($("#IsActive").prop("checked") == false) {
                res = "1";
            }
            if ('@Model.Name' != $("#Name").val()) {
                res = "1";
            }

            if ('@ViewBag.IsInUse' == 'True') {
                if (res == "1") {
                    if (confirm('This service is in use wish to update')) {
                        return true;
                    } else {
                        e.preventDefault();
                        return false;
                    }
                }
            }
        });
    });
</script>
<div class="container">
    @using (Html.BeginForm("ServiceUpdate", "MerchantMaster", FormMethod.Post, new { id = "frmMerMst" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="card">
            <div class="card-header">
                <strong>Service Master</strong>
            </div>
            <div class="card-body card-block">
                <div class="form-group">
                    @if (ViewBag.IsInUse == true)
                    {
                        <label style="color:red;font-weight:bold">Service in use</label>
                        <br />
                    }
                    <label for="company" class=" form-control-label">Name</label>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="company" class=" form-control-label">IsActive</label>
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-primary btn-sm" />
                        <a class="btn btn-info btn-sm" href="@Url.Action("ServiceIndex", "MerchantMaster", new { area = "Admin" })">Back To List</a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

