@model List<ModelLayer.Models.ViewModel.MerchantDashboardAdminReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/MerchantMenuOpenup.js"></script>
<style>
    table {
        border-collapse: separate;
        border-spacing: 15px;
    }

    .nav-link {
        color: #007bff !important;
    }

    a.nav-link.active.show {
        color: black !important;
    }

    popup {
        margin-left: -220px;
        position: fixed;
        width: 200px;
        word-break: break-all;
        box-shadow: 4px -5px 6px black;
        border-radius: 10px;
        padding: 5px;
    }

    active {
        background-color: #90fa90
    }

    inactive {
        background-color: #f86c6c
    }
</style>
  `

<div class="container">
    <div id="progress" class="modal">
        <div class="center">
            <img src="~/img/ajax-loading-gif-transparent-background-8.gif" />
        </div>
    </div>

    <div class="card" id="maindiv">
        <div class="card-header">
            <strong>
                @{
                    int Type = ViewBag.Type;
                    string Header = "";
                    switch (Type)
                    {
                        case 1:
                            Header = "Live Merchant List";
                            break;
                        case 2:
                            Header = "Newly Registered Merchant List";
                            break;
                        case 3:
                            Header = "Pending KYC Registration";
                            break;
                        case 4:
                            Header = "Pending KYC Approval";
                            break;
                        case 5:
                            Header = "Pending Registration Fee";
                            break;
                        case 6:
                            Header = "Pending Recharge Request";
                            break;
                        case 7:
                            Header = "Account Recharge Below 30%";
                            break;
                        case 8:
                            Header = "Zero Balance";
                            break;
                        case 9:
                            Header = "Pending Bills";
                            break;
                        default:
                            Header = "";
                            break;
                    }
                }
                @Header
            </strong>
        </div>
        <div class="card-body card-block">
            @if (Model != null)
            {
                <div style="max-width:1000px;overflow:auto">
                    <table id="tblData" class="table table-bordered table-striped table-condensed display" width="100%">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Shop Name</th>
                                <th>City</th>
                                <th>Service Name</th>
                                <th>Contact Person</th>
                                <th>Contact No</th>
                                @if (ViewBag.Type == 9)
                                {
                                    <th>User Name</th>
                                    <th>Bill Amount</th>
                                    <th>Date</th>
                                }
                                else
                                {
                                    <th>Balance Amount</th>
                                    <th>Status</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SrNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Shop)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactPerson)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNumber)
                                </td>
                                @if (ViewBag.Type == 9)
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.BalanceAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblData').DataTable();
    });
</script>

