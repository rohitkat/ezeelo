@model IEnumerable<ModelLayer.Models.ViewModel.LeadersPayoutRequestViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AccountsLayout.cshtml";
}

@*<h2>Index</h2>*@
<script src="~/Scripts/jquery-1.12.4.js"></script>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<table id="tablePayoutRequest" class="table table-striped table-bordered dt-responsive nowrap" width="70%" cellspacing="0">
    <thead>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolderName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.RedeamableCash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GST)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GSTAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TDSAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TDS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinReserved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinReservedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penalty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessingFees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestedStatus)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountHolderName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.RedeamableCash)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestedAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GST)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GSTAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TDSAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TDS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinReserved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinReservedAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Penalty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PenaltyAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProcessingFees)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.ActionLink("Accept", "Approval", new { id = item.UserLoginID, status = 1 }) |
                    @Html.ActionLink("Approve", "Approval", new { id = item.UserLoginID, status = 2 }) |
                    @Html.ActionLink("Cancel", "Approval", new { id = item.UserLoginID, status = 3 })
                </td>
            </tr>
        }
    </tbody>

</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tablePayoutRequest').DataTable();


    });
</script>

