@model ModelLayer.Models.ViewModel.ERPBonusPayoutViewModel
<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<script src="~/Content/js/jquery.dataTables.min.js"></script>

@{
    ViewBag.Title = "PromotionalERPPayoutUserList";
    Layout = "~/Views/Shared/_LeadersLayout.cshtml";
}
<style>
    #tblbtn {
        border-collapse: separate;
        border-spacing: 15px;
    }
</style>
<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
        });
        $("#expot").click(function () {
            window.location = "/admin/BonusERP/ExportToExcel";
        })
        
    });
</script>

<h2>Promotional ERP Payout UserList</h2>
<center>
    <span style="font-weight:bold; color:#7f0505"> Total Promotional ERP : @Model.listPromotionalERPPayoutUserList.Sum(p => p.PromotionalERP).ToString() </span>
    &nbsp; &nbsp; &nbsp;
    <span style="font-weight:bold; color:#7f0505"> Total Promotional Ezee Money : @Model.listPromotionalERPPayoutUserList.Sum(p => p.PromotionalEzeeMoney).ToString() </span>
</center>
  
    <table id="tblbtn">
        <tr>
            <td>
                <input id="expot" type="button" value="Export" class="btn btn-warning" />
            </td>           
        </tr>
    </table>

    @*<div style="overflow: auto; width: 900px; height: 700px">*@
    <table id="tblData" class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    EmailId
                </th>
                <th>
                    PhoneNo
                </th>
                <th>
                    Promotional ERP
                </th>
                <th>
                    Promotional EzeeMoney
                </th>
                <th>
                    L1 User
                </th>
                <th>
                    Ord Count
                </th>
                <th>
                    OrdAmt
                </th>
                <th>
                    RP
                </th>
                <th>
                    ERP
                </th>
                <th>
                    Status
                </th>
                <th>
                    Ezee Money
                </th>
                <th>
                    QRP
                </th>
                <th>
                    EzeeMoneyPayoutID
                </th>


            </tr>
        </thead>
        @for (int i = 0; i < Model.listPromotionalERPPayoutUserList.Count(); i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].UserLoginId)
                    @Model.listPromotionalERPPayoutUserList[i].UserLoginId
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].Name)
                    @Model.listPromotionalERPPayoutUserList[i].Name
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].EmailId)
                    @Model.listPromotionalERPPayoutUserList[i].EmailId
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].PhoneNo)
                    @Model.listPromotionalERPPayoutUserList[i].PhoneNo
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].PromotionalERP)
                    @Model.listPromotionalERPPayoutUserList[i].PromotionalERP
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].PromotionalEzeeMoney)
                    @Model.listPromotionalERPPayoutUserList[i].PromotionalEzeeMoney
                </td>
                <td>
                    @Model.listPromotionalERPPayoutUserList[i].L1UserList
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].DelOrdCount)
                    @Model.listPromotionalERPPayoutUserList[i].DelOrdCount
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].TotalOrdAmt)
                    @Model.listPromotionalERPPayoutUserList[i].TotalOrdAmt
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].TotalRetailPoints)
                    @Model.listPromotionalERPPayoutUserList[i].TotalRetailPoints
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].ERP)
                    @Model.listPromotionalERPPayoutUserList[i].ERP
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].Status)
                    @Model.listPromotionalERPPayoutUserList[i].Status
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].EzeeMoney)
                    @Model.listPromotionalERPPayoutUserList[i].EzeeMoney
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].QRP)
                    @Model.listPromotionalERPPayoutUserList[i].QRP
                </td>
                <td>
                    @Html.HiddenFor(model => model.listPromotionalERPPayoutUserList[i].EzeeMoneyPayoutID)
                    @Model.listPromotionalERPPayoutUserList[i].EzeeMoneyPayoutID
                </td>
            </tr>
        }

    </table>
    @*</div>*@
