@model IEnumerable<ModelLayer.Models.ViewModel.PromotionalERPPayoutReport>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetPromotionalERPPayoutReport</title>
    <script src="~/Content/js/jquery-2.1.3.min.js"></script>
    <script src="~/Content/js/jquery.dataTables.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $('#tblData').DataTable({
                dom: 'T<"clear">lfrtip',
                "processing": true,
                "serverSide": true,
            });

        });
    </script>
</head>
<body>
    <center>
        <h3 style="text-decoration:underline">Promotional ERP Payout Report</h3>
        <span style="font-weight:bold; color:#7f0505"> Total Promotional ERP : @Model.Sum(p => p.PromotionalERP).ToString() </span>
        &nbsp; &nbsp; &nbsp;
        <span style="font-weight:bold; color:#7f0505"> Total Promotional Ezee Money : @Model.Sum(p => p.EzeeMoney).ToString() </span>
    </center>
    <table id="tblData" class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserLoginId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PromotionalERP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EzeeMoney)
                </th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserLoginId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PromotionalERP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EzeeMoney)
                </td>

            </tr>
        }

    </table>
</body>
</html>
