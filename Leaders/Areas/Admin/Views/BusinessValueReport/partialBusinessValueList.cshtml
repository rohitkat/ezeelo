@model IEnumerable<ModelLayer.Models.ViewModel.CustomerOrderViewModel>

<script src="~/Scripts/jquery-1.12.4.js"></script>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>


<div id="wrap">
    <div class="container">
        <div id="content" class="span10" style="min-height: 403px;">
            <table border="0" class="table table-striped table-bordered dt-responsive nowrap" width="70%" cellspacing="0" id="businessValueTable">
                <thead>
                    <tr>
                        <th>
                            Email ID
                        </th>
                        <th>
                            Order ID
                        </th>
                        <th>
                            Order Number
                        </th>
                        <th>
                            Order Date
                        </th>
                        <th>
                            Amount
                        </th>


                        <th>
                            Business Points
                        </th>
                        <th>

                               Business Value
                            </th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerOrderID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderCode)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderAmount)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.BusinessPointsTotal)
                            </td>

                            <td>
                                    @Html.DisplayFor(modelItem => item.BusinessValue)
                                </td>

                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
            <script>
                $(document).ready(function () {
                    $('#businessValueTable').DataTable(

                    );
                });
            </script>
