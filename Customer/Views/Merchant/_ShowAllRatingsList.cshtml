
@model List<ModelLayer.Models.MerchantRating>
@{
    decimal AverageRating = Model.Select(s => s.Rating).DefaultIfEmpty(0).Average();
    int TotalReviews = Model.Count();
}
<div class="col-xs-12 box-item sort-item" data-sort="9" data-sort-mobile="9">
    <div class="box-content" style="padding: 0;">
        <h3>Reviews</h3>
        <hr />
        <div class="panel-wrapper">
            <div class="rating-score-wrapper v2">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3" style="padding-left:15px;">
                        <div class="rating-wrapper clearfix">
                            <div class="rating-bubble">@(AverageRating.ToString("#.0"))</div>
                        </div>
                        <div class="stars-summary-wrapper clearfix" style="width:90px;text-align:center;">
                            <div class="stars summary">
                                @{
                                    for (int cnt = 1; cnt <= 5; cnt++)
                                    {
                                        <span class="fa fa-star @(((decimal)cnt <= AverageRating) ? "full" : ((decimal)cnt - 1 < AverageRating) ? "half" : "")"></span>
                                    }
                                }
                            </div>
                            <p>@TotalReviews reviews</p>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
                        <div class="histogram">
                            @for (int i = 5; i > 0; i--)
                            {
                                <div class="row" title="Zeige nur @i Sterne">
                                    @{
                                        int totalStar = Model.Where(a => a.Rating > (i - 1) && a.Rating <= i).Count();
                                    }
                                    <div class="histo-col col-1">
                                        <span class="star-val">@i</span><span class="fa fa-star full"></span>
                                    </div>
                                    <div class="histo-col col-2">
                                        <span class="bar-val">@totalStar</span>
                                    </div>
                                    <div class="histo-col col-3">
                                        <span class="bar" style="width: @((100.00*totalStar)/TotalReviews)%;"></span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>


                <hr>
                <div id="ratings">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="box-review" id="reviewBox-@i" hidden="" style="display: @(i<3?"block":"none");">
                            <header>
                                <div class="stars font-16">
                                    @{
                                        for (int cnt = 1; cnt <= 5; cnt++)
                                        {
                                            <span class="fa fa-star @(((decimal)cnt <= Model[i].Rating) ? "full" : ((decimal)cnt - 1 < Model[i].Rating) ? "half" : "")"></span>
                                        }
                                    }
                                </div>
                                <h5></h5>
                                <div class="author-wrapper">
                                    <span class="hidden-xs">From</span>
                                    <span class="name">@Model[i].UserLoginDetail.PersonalDetail.FirstName</span>&nbsp;<span class="hidden-xs">On&nbsp;</span>
                                    <time>@Model[i].CreateDate.ToString("dd-MM-yyyy HH:mm")</time>
                                </div>
                            </header>
                            @if (string.IsNullOrWhiteSpace(Model[i].Review) == false)
                            {
                                <div class="content">
                                    <p>
                                        @Model[i].Review
                                    </p>
                                </div>
                            }
                        </div>
                    }
                </div>
                <hr>
                <div id="dealerRatingsLoadMoreComments" class="button center-block button-collapse">
                    <a id="showCommentsButton" class="btn btn-link" role="button" href="#">Show more</a>
                    <a id="hideCommentsButton" class="btn btn-link" role="button" href="#" style="display: none;">Show less</a>
                </div>
                <input type="hidden" id="indexOfComments" value="1">
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            makeDefaultVisible();

            $("#dealerRatingsLoadMoreComments").on("click",
                function (e) {
                    e.preventDefault();
                    loadMoreComments();
                });
        });

        function loadMoreComments() {
            var index = $("#indexOfComments").val();

            if (index == 1) {
                makeAllVisible();
            }
            if (index == 0) {
                makeDefaultVisible();
            }
        }

        function makeAllVisible() {
            var i = 0;
            var moreElemExist = true;
            setRatingsDivScroll($("#ratings").height());

            while (moreElemExist) {
                var elem = $("#reviewBox-" + i);

                if (elem.length) {
                    elem.show();
                } else {
                    moreElemExist = false;
                }
                i++;
            }
            $("#indexOfComments").val(0);

            $("#hideCommentsButton").show();
            $("#showCommentsButton").hide();
        }

        function makeDefaultVisible() {
            var i = 0;
            var moreElemExist = true;

            while (moreElemExist) {
                var elem = $("#reviewBox-" + i);

                if (elem.length) {
                    elem.hide();
                } else {
                    moreElemExist = false;
                }
                i++;
            }

            i = 0;
            for (i; i < 3; i++) {
                var elem = $("#reviewBox-" + i);
                if (elem.length) {
                    elem.show();
                } else {
                    break;
                }
            }

            $("#indexOfComments").val(1);
            removeRatingsDivScroll();

            $("#hideCommentsButton").hide();
            $("#showCommentsButton").show();
        }

        function setRatingsDivScroll(height) {
            $("#ratings").css({
                'height': height,
                'overflow': 'scroll',
                'overflow-x': 'hidden'
            });
        }

        function removeRatingsDivScroll(height) {
            $("#ratings").css({
                'height': '',
                'overflow': '',
                'overflow-x': ''
            });
        }
    </script>
</div>
