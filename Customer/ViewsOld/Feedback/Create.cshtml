@model ModelLayer.Models.FeedbackManagment

@{
    ViewBag.Title = "eZeelo: Online Jewellery, Home Appliances, Electronics & Fashion Store Nagpur";
    Layout = null;
}
@*<link href="~/Content/css/mains.css" rel="stylesheet" />*@
<style>
    .newselect {
        border: none;
        border-radius: 0px 0px 0px 0px !important;
        background: transparent;
        width: 150px;
        padding: 5px 35px 5px 5px;
        font-size: .875rem;
        border: 1px solid #eaeaea;
        height: 34px;
        /*-webkit-appearance: none;*/
        /*-moz-appearance: none;*/
        appearance: none;
        /*background: url("../../Content/Images/drop.gif") no-repeat 98% 10px;
        background-image: url('../../Content/Images/drop.gif');*/
        background-position: 98% 10px;
        background-repeat: no-repeat;
    }

    .textareamode {
        width: 100%;
        height: 100px;
        padding: 2px;
        font-size: 11px;
    }

    body {
        padding-top: 0px;
    }

    .valColor {
        color: red !important;
        padding-bottom: 10px;
    }

    .spanmobile {
        float: left;
        margin-top: 8px !important;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="example" style="border:none">
            <div class="grid">
                @Html.ValidationSummary(true)
                @if (TempData["message"] != "" && TempData["message"] != null)
                {
                    <h5 class="messageDiv">@TempData["message"]</h5>
                }
                <div class="row cells2">
                    <div class="cell">
                        <label>Email</label>
                        <div class="input-control text full-size">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "valColor" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row cells2">
                    <div class="cell">
                        <label>Mobile</label>
                        <div class="input-control text full-size">
                            <span class="spanmobile">+91</span>
                            @Html.TextBoxFor(model => model.Mobile, new { @maxlength = "10", @style = "width:88%" })
                            @Html.ValidationMessageFor(model => model.Mobile, null, new { @class = "valColor" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row cells2">
                    <div class="cell">
                        <br />
                        <label>Feedback Categary</label>
                        <div class="input-control text full-size ">
                            @Html.DropDownList("FeedbackCategaryID", null, "Select", new { @class = "newselect" })
                            @Html.ValidationMessageFor(model => model.FeedbackCategaryID, null, new { @class = "valColor" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row cells2">
                    <div class="cell">
                        <label>Message</label>
                        <div class="inpu-control text full-size textareamode">
                            @Html.TextAreaFor(model => model.Message, new { @class = "textareamode" })
                            @Html.ValidationMessageFor(model => model.Message, null, new { @class = "valColor" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row cells2">
                    <button type="submit" value="Create" class="button success">Create</button>
                </div>
            </div>
        </div>
    </div>
}