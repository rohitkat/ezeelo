                    </div>
                        }



                </div>
            </div>
        </div>
            @if (ViewBag.errorMsg == null) //** condition added by harshada on 28/12/2016 for error page display on wrong pincode
            {
        <button type="submit" value="Save" class="btn btn-success">Save</button> @Html.ActionLink("Go To Address List", "Index", null, new { @class = "btn btn-primary" })
            }
        </div>

    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    var lPincode = $('#Pincode').val();
    $('#Pincode').bind('input propertychange', function () {
        var lPincode = $('#Pincode').val()
        $('#divPincodeError').hide();
        if (lPincode.length == 6) {
            $('#Pincode_loading').show();
            $.ajax({
                url: '@Url.Action("GetAddress", "ShippingAddress")?Pincode=' + lPincode,
                type: "GET",
                success: function (result) {
                    //$('#divAddress').html(result);
                    $('#divAddress').empty();//Added by harshada on 30/12/2016 for error page display on wrong pincode
                    $('#divAddress').append(result);//Added by harshada on 28/12/2016 for error page display on wrong pincode
                    $('#Pincode_loading').hide();
                    $('#divPincodeError').hide();
                },
                error: function (result) {
                    $('#divAddress').empty();
                    $('#Pincode_loading').hide();
                    $('#divPincodeError').show();
                    $('#divPincodeError').html('Products can not be delivered on entered pincode');
                    $('#Pincode').val('');

                }
            });
        }
    });
</script>
<script type="text/javascript">
    //Start Yashaswi
    var lPincode = $('#Pincode').val();
    $('#Pincode').bind('input propertychange', function () {
        PincodePropertyChange();
    });

    $(document).ready(function () {

        function PincodePropertyChange() {
            var lPincode = $('#Pincode').val();
            var areaId = "";
            if (localStorage.getItem("AreaId") != null) {
                areaId = localStorage.getItem("AreaId");
            }

            $('#divPincodeError').hide();
            if (lPincode.length == 6) {
                $('#Pincode_loading').show();
                $.ajax({
                    url: '@Url.Action("GetAddress", "ShippingAddress")?Pincode=' + lPincode + '&AreaId=' + areaId,
                    type: "GET",
                    success: function (result) {
                        //$('#divAddress').html(result);
                        $('#divAddress').empty();//Added by harshada on 30/12/2016 for error page display on wrong pincode
                        $('#divAddress').append(result);//Added by harshada on 28/12/2016 for error page display on wrong pincode
                        $('#Pincode_loading').hide();
                        $('#divPincodeError').hide();
                    },
                    error: function (result) {
                        $('#divAddress').empty();
                        $('#Pincode_loading').hide();
                        $('#divPincodeError').show();
                        $('#divPincodeError').html('Products can not be delivered on entered pincode');
                        $('#Pincode').val('');

                    }
                });
            }
        }

        if (localStorage.getItem("SelectedPincode") != null) {
            if ('@ViewBag.errorMsg' == null || '@ViewBag.errorMsg' == "") {
                var selPincode = localStorage.getItem("SelectedPincode").trim();
                $('#Pincode').val(selPincode);
                PincodePropertyChange();
            }
        }
    })
    //End yashaswi
</script>