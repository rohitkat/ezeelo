                    </div>
                            <div>
                                <span style="color:red;font-size:12px; font-weight:bold;">@ViewBag.errorMsg</span>
                            </div>
                        </div>

                        @if (ViewBag.errorMsg == null)//** condition added by harshada on 28/12/2016 for error page display on wrong pincode
                        {
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBox("Pincode", null, new { @id = "Pincode", @class = "form-control", @placeholder = "Enter Pincode", @onkeypress = "return isValidPincode(event)", @readonly = "readonly" }) @*Yashaswi*@
