@model Gandhibagh.Controllers.CompareProductPage
@if (Model != null)
{
    <div class="frame active">
        <div class="content">
            @if (Model.compareProductDetails != null)
            {
                for (int i = 0; i < Model.compareProductDetails.Count(); i++)
                {
                    if (Model.compareProductDetails[i].Specificationlevel == 1)
                    {
                        <span class="dec-headings">@Model.compareProductDetails[i].SpecificationHeaderName </span>

                        var childNode = Model.compareProductDetails.Where(x => x.SpecificationParentID == Model.compareProductDetails[i].SpecificationID && x.Specificationlevel == 2).ToList();
                        if (childNode.Count() > 0)
                        {
                            <div class="sameData">
                                @for (int j = 0; j < childNode.Count(); j++)
                                {
                                    <span class="proDec" id='@childNode[j].SpecificationID'> @childNode[j].SpecificationHeaderName</span>
                                }
                            </div>
                        }
                    }
                }
            }
        </div>
    </div>
}

