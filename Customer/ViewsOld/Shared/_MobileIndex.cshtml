        border: 1px solid #d42300;
        text-align: center;
        width: 98%;
        margin: auto;
    }

        .festival-link a {
            display: block;
            line-height: 30px;
        }

            .festival-link a img {
                display: inline-block;
                padding: 5px;
            }

            .festival-link a span {
                display: inline-block;
                font-size: 15px;
                color: #fff;
                font-weight: 600;
            }
</style>
@{
    string cityName = "";
    string city = "";
    if (Request.Cookies["CityCookie"] != null && Request.Cookies["CityCookie"].Value != "")
