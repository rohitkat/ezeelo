<style type="text/css">
    .clr {
        clear: both;
    }

    .mob-offer-cat ul li {
        margin-bottom: 0.5%;
        display: inline-block;
        float: left;
        width: 49%;
    }

        .mob-offer-cat ul li:nth-child(odd) {
            margin-right: 0.5%;
        }

        .mob-offer-cat ul li img {
            width: 100%;
        }

        .mob-offer-cat ul li a {
            display: block;
            position: relative;
        }

            .mob-offer-cat ul li a span {
                display: block;
