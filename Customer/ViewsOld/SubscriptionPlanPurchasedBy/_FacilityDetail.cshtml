@model IEnumerable<ModelLayer.Models.ViewModel.SubscriptionFacilityDetailViewModel>
@{
    ViewBag.Title = "eZeelo:FacilityDetail";
    Layout = null;
}
<style>
    .neweditdiv1 .tablenew1 {
        color: #333;
        font-family: Calibri;
        font-size: .9em;
        font-weight: 300;
        text-align: left;
        line-height: 40px;
        border-spacing: 0;
        border: 1px solid #428bca;
        margin: 0px auto;
        text-align: center;
        margin-top: 10px;
    }

    .tablenew1 thead tr:first-child {
        background: #4390df;
        color: #fff;
        border: none;
    }

    .tablenew1 th {
        font-weight: bold;
        border: none;
        color: white;
        background: #428bca;
    }

    th:first-child, td:first-child {
        padding: 0 15px 0 20px;
    }

    .tablenew1 thead tr:last-child th {
        border-bottom: 2px solid #ddd;
    }

    .tablenew1 tbody tr:hover {
        background-color: #f0fbff;
    }

    .tablenew1 tbody tr:last-child td {
        border: none;
    }

    .tablenew1 tbody td {
        border-bottom: 1px solid #ddd;
    }

    .tablenew1 .alterar:hover {
        background-color: #428bca;
    }

    .tablenew1 .excluir:hover {
        background-color: #dc2a2a;
    }
</style>
<div class="neweditdiv1">
    <table class="tablenew1" style="width:80%;">
        <thead>
            <tr>
                <th>Total Free Delivery</th>
                <th>Balanced Free Delivery</th>
                <th>Total Saving PerMonth</th>
                <th>Total Purchase PerMonth</th>
                <th>Purchase As PerMonth</th>
            </tr>
        </thead>

        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TotalFreeDelivery</td>
                        <td>@item.BalanceFreeDelivery</td>
                        <td>@item.TotalSavingPerMonth</td>
                        <td>@item.TotalPurchasePerMonth</td>
                        <td>@item.PurchaseAsPerMonth</td>
                    </tr>
                }
            }
        }
    </table>
</div>
