@model IEnumerable<ModelLayer.Models.ViewModel.SubscriptionFacilityDetailViewModel>

@{
    ViewBag.Title = "Index";
}
@{
    ViewBag.Title = "eZeelo: Electronics, Fashion, Coupons, Home Appliances | Lowest Price in Nagpur";
    string cityName = "";
    if (Request.Cookies["CityCookie"] != null && Request.Cookies["CityCookie"].Value != "")
    {
        cityName = Request.Cookies["CityCookie"].Value.Split('$')[1].ToLower();
    }
}
<style>
    .streamer {
        position: relative;
        display: block;
        width: 16%;
        overflow: hidden;
        float: left;
    }

    .neweditdiv {
        width: 50%;
        float: left;
        min-height: 300px;
        height: auto;
        overflow-x: auto;
        margin: 20px 0 20px 0;
        text-align: justify;
    }

    .newselect {
        border: none;
        border-radius: 0px 0px 0px 0px !important;
        background: transparent;
        width: 150px;
        padding: 5px 35px 5px 5px;
        font-size: .875rem;
        border: 1px solid #eaeaea;
        height: 34px;
        /*-webkit-appearance: none;*/
        /*-moz-appearance: none;*/
        appearance: none;
        /*background: url(/Content/Images/drop.gif) 98% / 3% no-repeat #fff !important;*/
    }

    .atagelink {
        position: fixed !important;
        margin-top: -38px;
        z-index: 10;
        background-color: #EFEFEF;
        color: white !important;
    }

    .ahomelink {
        background-image: url(/Content/Images/arrowright.png) !important;
        padding-bottom: 0px;
        float: left;
        background-position: right center;
        background-repeat: no-repeat;
        padding-right: 24px;
        padding-top: 0px;
        padding-left: 2px;
        color: #ffffff !important;
    }

    .spanMessage {
        color: red;
    }

    .neweditdiv .tablenew {
        color: #333;
        font-family: Calibri;
        font-size: .9em;
        font-weight: 300;
        text-align: left;
        line-height: 40px;
        border-spacing: 0;
        border: 1px solid #428bca;
        margin: 0px auto;
        text-align: center;
    }

    .tablenew thead tr:first-child {
        background: #4390df;
        color: #fff;
        border: none;
    }

    .tablenew th {
        font-weight: bold;
        border: none;
        color: white;
        background: #428bca;
    }

    th:first-child, td:first-child {
        padding: 0 15px 0 20px;
    }

    .tablenew thead tr:last-child th {
        border-bottom: 2px solid #ddd;
    }

    .tablenew tbody tr:hover {
        background-color: #f0fbff;
    }

    .tablenew tbody tr:last-child td {
        border: none;
    }

    .tablenew tbody td {
        border-bottom: 1px solid #ddd;
    }

    .tablenew td:last-child {
        text-align: right;
        padding-right: 10px;
    }

    .tablenew .alterar:hover {
        background-color: #428bca;
    }

    .tablenew .excluir:hover {
        background-color: #dc2a2a;
    }

    .success {
        background: #60a917 !important;
        color: #ffffff !important;
        border-color: #60a917 !important;
        height: 30px !important;
        padding: 0 3px 0 3px !important;
        font-size: 12px !important;
    }

    .linehightnew {
        line-height: 30px;
        list-style-type: disc;
    }
</style>
<div id="navbar">
    <ol class="breadcrumb page-breadcrumb">
        <li>
            @Html.RouteLink("Home", "Home", new { city = cityName })
        </li>
        <li class="active">My Subscription</li>
    </ol>
</div>
@Html.Partial("_CustomerDashboardMenu")
<div class="gap"></div>
<div class="row box" data-gutter="15">
    @if (Model.Count() > 0)
    {
        <div class="neweditdiv">
            <div><h4 style="color: #FFF; background-color: #4390DF; padding: 10px; text-align: center; margin-top: 0px; margin-bottom: 0px; border-radius: 25px 25px 0px 0px; ">Your Subscribed Plan is @Model.FirstOrDefault().SubscriptionPlan</h4></div>
            <div style="font-size: 14px; border: 1px solid rgba(128, 128, 128, 0.22); padding: 10px; border-radius: 0px 0px 25px 25px; -webkit-box-shadow: 3px 3px 5px 6px #eaeaea; -moz-box-shadow: 3px 3px 5px 6px #eaeaea; box-shadow: 3px 4px 5px 0px #eaeaea; ">
                <ul>
                    <li class="linehightnew">
                        You have availed free Delivery <span style="color:brown;font-weight:800;">@Model.FirstOrDefault().BalanceFreeDelivery</span>  out of <span style="color: brown; font-weight: 800;">@Model.FirstOrDefault().TotalFreeDelivery</span>
                    </li>
                    @if (Model.FirstOrDefault().PurchaseAsPerMonth > 0)
                    {
                        <li class="linehightnew">You have made purchases worth<span style="color:brown;font-weight:800;"> Rs. @Model.FirstOrDefault().PurchaseAsPerMonth </span> and saved<span style="color:brown;font-weight:800;"> Rs. @Model.FirstOrDefault().TotalSavingPerMonth</span></li>
                    }
                    else
                    {
                        <li class="linehightnew">You have not yet purchased so far</li>
                    }
                    <li class="linehightnew">Plan initiates from<span style="color:brown;font-weight:800;"> @Model.FirstOrDefault().StartDate.ToString("dd/MM/yyyy") </span> and is valid upto<span style="color:brown;font-weight:800;"> @Model.FirstOrDefault().EndDate.ToString("dd/MM/yyyy")</span> </li>
                    <li class="linehightnew">Keep Shopping !!! </li>
                    <li class="linehightnew">Keep Saving ! at eZeelo </li>
                </ul>
            </div>


        </div>
    }
    else
    {
        <h4 style="text-align:center">No Plan Activated Currently.</h4>
    }
    <div id="divPartial" class="divpartial">

    </div>
</div>
<div class="gap"></div>
<script type="text/javascript">
    function ViewFacilities(id) {
        var SubPlanID = id;
        $.ajax({
            url: '@Url.Action("FacilityDetail", "SubscriptionPlanPurchasedBy")',
            data: { 'SubPlanID': SubPlanID },
            type: "Post",
            cache: false,
            success: function (data) {
                $("#divPartial").empty();
                $("#divPartial").html(data);
            },
            error: function (data) {

            }
        });

    }

</script>
