@using Microsoft.AspNet.Identity
<header class="main-header">
    <a href="#" class="logo">
        <span class="logo-mini"><img src="~/Content/Images/logo1.png" id="logo" /></span>
        <span class="logo-lg"><img src="~/Content/Images/logo1.png" id="logo" />Dashboard</span>
    </a>
    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle fa-2x" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @if (Session["RoleName"] != null)
                        {
                            <span class="hidden-xs">@Html.Label(Session["RoleName"].ToString(), new { @style = "display:inline-block;" })</span>
                        }
                        @*<span class="hidden-xs">@User.Identity.GetUserName()</span>*@
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-footer">
                            <div class="pull-right" style="width:100%">
                                <a href="@Url.Action("Logout", "Home")" class="btn btn-default btn-flat" style="width:100%">Logout</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
