@model ModelLayer.Models.Employee

@{
    ViewBag.Title = "Details Employee [ " + @Model.EmployeeCode + " ]";
}

<div class="row">
    <div class="span4">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> Details Employee [ @Model.EmployeeCode ]</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">
                        <p>
                            <button class="btn btn-small btn-success" onclick="Back()">Back</button>
                        </p>
                        <dl class="dl-horizontal">
                            <dt>
                                Name
                            </dt>
                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.UserLogin.PersonalDetails.Single(x => x.UserLoginID == model.UserLoginID).FirstName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.UserLogin.Mobile)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.UserLogin.Mobile)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.EmployeeCode)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.EmployeeCode)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.OwnerID)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.OwnerID)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.IsActive)
                            </dd>
                            <hr />
                            <dt>
                                @Html.DisplayNameFor(model => model.CreateDate)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.CreateDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.CreateBy)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.CreateBy)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ModifyDate)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.ModifyDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ModifyBy)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.ModifyBy)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.NetworkIP)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.NetworkIP)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DeviceType)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.DeviceType)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DeviceID)
                            </dt>

                            <dd>
                                &nbsp;@Html.DisplayFor(model => model.DeviceID)
                            </dd>

                        </dl>
                    </div>
                </div>
                <!-- /widget-content -->
            </div>
        </div>
    </div>
</div>

<script>
    function Back() {
        $('#divtable').removeClass('span8');
        $('#divtable').addClass('span12');
        $('#loader_img').hide();
    }
</script>