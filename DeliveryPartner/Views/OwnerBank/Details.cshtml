@model ModelLayer.Models.OwnerBank

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="widget-content">
    <p>
        @Html.ActionLink("Edit", "Edit", new { ID = @Model.ID }, new { @class = "btn btn-small btn-danger" })
    </p>

    <div>
        @{
            if (TempData["Msg"] != null)
            {
                <h3 class="alert alert-info">@TempData["Msg"]</h3>
            }
        }
        <dl class="dl-horizontal">
            <dt>
                Bank Name
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Bank.Name)
            </dd>

            <dt>
                Account Type
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.BankAccountType.Name)
            </dd>

            <dt>
                Branch
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.BranchName)
            </dd>

            <dt>
                IFSC Code
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.IFSCCode)
            </dd>

            <dt>
                MICR Code
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.MICRCode)
            </dd>

            <dt>
                Account No.
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.AccountNumber)
            </dd>

            <dt>
                IsActive
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>
    </div>
</div>
