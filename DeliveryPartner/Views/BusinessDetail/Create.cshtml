@model ModelLayer.Models.BusinessDetail

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<style>
    /*select {
        width: 60px;
    }*/

    textarea {
        width: 50%;
        height: 50px;
    }
</style>
<div class="widget-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="control-group">
                <span class="control-label">Business Name</span>
                <div class="controls">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Business Type</span>
                <div class="controls">
                    @Html.DropDownList("BusinessTypeID", String.Empty)
                    @Html.ValidationMessageFor(model => model.BusinessTypeID)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Contact Person</span>
                <div class="controls">
                    @Html.EditorFor(model => model.ContactPerson)
                    @Html.ValidationMessageFor(model => model.ContactPerson)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Mobile</span>
                <div class="controls">
                    @Html.EditorFor(model => model.Mobile)
                    @Html.ValidationMessageFor(model => model.Mobile)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Email</span>
                <div class="controls">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Landline</span>
                <div class="controls">
                    @Html.EditorFor(model => model.Landline1)
                    @Html.ValidationMessageFor(model => model.Landline1)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Secondary Landline</span>
                <div class="controls">
                    @Html.EditorFor(model => model.Landline2)
                    @Html.ValidationMessageFor(model => model.Landline2)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">FAX</span>
                <div class="controls">
                    @Html.EditorFor(model => model.FAX)
                    @Html.ValidationMessageFor(model => model.FAX)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Address</span>
                <div class="controls">
                    @Html.EditorFor(model => model.Address)
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Pincode</span>
                <div class="controls">
                    @Html.TextBox("Pincode", null, new { @id = "Pincode", @class = "form-control-Widout-block", @placeholder = "Enter Pincode", @onkeypress = "return isValidPincode(event)" })
                    <img id="Pincode_loading" src="~/Content/Images/ajax_loader.gif" style="width: 30px; height: 30px; display: none" />
                    <div id="divPincodeError" style="width:400px; display: none; padding:5px" class="alert-danger focused">  </div>
                </div>
            </div>
            <div id="divAddress">
                @*to load Address Details*@
            </div>

            <div class="control-group">
                <span class="control-label">Website</span>
                <div class="controls">
                    @Html.EditorFor(model => model.Website)
                    @Html.ValidationMessageFor(model => model.Website)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Establishment Year</span>
                <div class="controls">
                    @*@Html.TextBoxFor(model => model.YearOfEstablishment, new { @readonly = "readonly" })*@
                    @Html.TextBox("YearOfEstablishment1", null, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.YearOfEstablishment)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Source Of Info</span>
                <div class="controls">
                    @Html.DropDownList("SourceOfInfoID", String.Empty)
                    @Html.ValidationMessageFor(model => model.SourceOfInfoID)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">Sources Description</span>
                <div class="controls">
                    @Html.TextAreaFor(model => model.SourcesInfoDescription)
                    @Html.ValidationMessageFor(model => model.SourcesInfoDescription)
                </div>
            </div>
            <div class="control-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
</div>
@section Myscripts{
    <script type="text/javascript">
        //----------------------------------------------------------------------For datepicker---//
        //<![CDATA[
        $(window).load(function () {
            //$('#DOB').datepicker('setDate', new Date());
            $('#YearOfEstablishment').datepicker('update');
        });//]]>


        //----------------------------------------------------------------------To GetAddress From Pincode---//

        var lPincode = $('#Pincode').val()

        $('#Pincode').bind('input propertychange', function () {
            var lPincode = $('#Pincode').val()
            $('#divPincodeError').hide();

            if (lPincode.length == 6) {
                $('#Pincode_loading').show();
                $.ajax({
                    url: '@Url.Action("GetAddress", "DeliveryPartner")?Pincode=' + lPincode,
                    type: "GET",
                    success: function (result) {
                        $('#divAddress').html(result);
                        $('#Pincode_loading').hide();
                        $('#divPincodeError').hide();
                    },
                    error: function (data) {
                        //alert('Pincode : ' + lPincode + ' Dose Not Exist, please Contact to ADMIN');
                        $('#divAddress').empty();
                        $('#Pincode_loading').hide();
                        $('#divPincodeError').show();
                        $('#divPincodeError').html('Pincode [' + lPincode + '] dose not exist, please Contact to ADMIN');
                        $('#Pincode').val('');
                    }
                });
            }
        });


        function isValidMobile(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            var l = $('#RegMobile').val().length + 1;

            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            if (l > 10 && charCode != 8) {
                return false;
            }

            return true;
        }

        function isValidPincode(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            var l = $('#Pincode').val().length + 1;

            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            if (l > 6 && charCode != 8) {
                return false;
            }

            return true;
        }


    </script>
}




