@model ModelLayer.Models.BusinessDetail

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<div class="widget-content">
    <p>
        @Html.ActionLink("Edit", "Edit", new { ID = @Model.ID }, new { @class = "btn btn-small btn-danger" })
    </p>

    <div>
        @{
            if (TempData["Msg"] != null)
            {
                <h3 class="alert alert-info">@TempData["Msg"]</h3>
            }
        }
        <dl class="dl-horizontal">
            <dt>
                Business Name
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Contact Person
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.ContactPerson)
            </dd>

            <dt>
                Mobile
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Mobile)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Landline
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Landline1)
            </dd>

            <dt>
                Secondary Landline
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Landline2)
            </dd>

            <dt>
                FAX
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.FAX)
            </dd>

            <dt>
                Office Address
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Address)
                &nbsp;@Html.DisplayFor(model => model.Pincode.Name)
            </dd>

            <dt>
                Website
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.Website)
            </dd>

            <dt>
                Establishment Year
            </dt>

            <dd>
                &nbsp;@Html.DisplayFor(model => model.YearOfEstablishment)
            </dd>

        </dl>
    </div>
</div>


