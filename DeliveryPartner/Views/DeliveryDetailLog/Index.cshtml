@model IEnumerable<ModelLayer.Models.DeliveryDetailLog>

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<style>
    .margin_left_right_decress{
        margin-left:-20px;
        margin-right:-20px;
    }
</style>

<div class="row margin_left_right_decress">
    <div id="divtable">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> List [ Logs ]</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">
                        <p>
                            <button class="btn btn-small btn-success" onclick="Back()">Back</button>
                            @Html.ActionLink("Create New", "Create", new { DeliveryOrderDetailID = Request.QueryString["DeliveryOrderDetailID"] }, new { @class = "btn btn-small btn-primary" })
                        </p>
                        <ul class="messages_layout">
                            @foreach (var item in Model)
                            {
                                <li class="from_user" style="width:100%">
                                    <div class="message_wrap" style="width:92%">
                                        <span class="arrow"></span>
                                        <div class="info">
                                            <a class="name">@item.CreateDate</a>
                                        </div>
                                        <div class="text">@item.Description</div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function Back() {
        window.parent.$("[id$=divtable1]").removeClass('span7');
        window.parent.$("[id$=divtable1]").addClass('span12');
        window.parent.$("[id$=divLog]").hide();
        //$('#loader_img').hide();
    }
</script>
