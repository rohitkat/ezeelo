@{
    ViewBag.Title = "My Region";
}
@{
    int lServiceLevel = (int)ViewBag.lServiceLevel;
}
<style>
    .margin_left {
        margin-left: -2px;
    }
</style>

<div class="row">
    <div class="span12" id="divtable">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-list-alt"></i>
                <h3> My Region [ @Enum.GetName(typeof(DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL), lServiceLevel), Level Delivery Partner ] <span> &nbsp;<a href="#myModal" role="button" class="btn btn-danger" data-toggle="modal">Note</a></span></h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content matchdivheight">
                        @{
                            switch (lServiceLevel)
                            {
                                case (int)DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL.INTERNATIONAL:
                                    <div class="">
                                        <h1>Accross the world !..</h1>
                                    </div>
                                    break;
                                case (int)DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL.INDIA:
                                <div class="">
                                    <h1>Accross India !..</h1>
                                </div>
                                    break;
                                case (int)DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL.STATE:
                                <div id="divState">
                                    <iframe id="state" name="state" src='@Url.Action("State", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                    break;
                                case (int)DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL.DISTRICT:
                                <div class="span4 margin_left" id="divState">
                                    <iframe id="state" name="state" src='@Url.Action("State", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                <div class="span4 margin_left" id="divDistrict">
                                    <iframe id="district" name="district" src='@Url.Action("District", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                    break;
                                case (int)DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL.CITY:
                                <div class="span4 margin_left" id="divState">
                                    <iframe id="state" name="state" src='@Url.Action("State", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                <div class="span4 margin_left" id="divDistrict">
                                    <iframe id="district" name="district" src='@Url.Action("District", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                <div class="span4 margin_left" id="divCity">
                                    <iframe id="city" name="city" src='@Url.Action("City", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                    break;
                                case (int)DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL.PINCODE:
                                <div class="span4 margin_left" id="divState">
                                    <iframe id="state" name="state" src='@Url.Action("State", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                <div class="span4 margin_left" id="divDistrict">
                                    <iframe id="district" name="district" src='@Url.Action("District", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                <div class="span4 margin_left" id="divCity">
                                    <iframe id="city" name="city" src='@Url.Action("City", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                <div class="span4 margin_left" id="divPincode">
                                    <iframe id="Pincode" name="Pincode" src='@Url.Action("Pincode", "MyRegion")' width="100%" height="820px" frameborder="0"></iframe>
                                </div>
                                    break;





                            }
                        }
                    </div>
                </div>
                <!-- /widget-content -->
            </div>
        </div>
    </div>
</div>
<!-- /span12 -->
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 id="myModalLabel">Delivery Slab</h4>
    </div>
    <div id="modalBody" class="modal-body"></div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        @*<button class="btn btn-primary">Save changes</button>*@
    </div>
</div>



