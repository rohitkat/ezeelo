@model ModelLayer.Models.DeliveryPartner

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="widget-content">
    <p>
        @Html.ActionLink("Edit", "Edit", new { ID = @Model.ID }, new { @class = "btn btn-small btn-danger" })
    </p>
    <div>
        @{
            if (TempData["Msg"] != null)
            { 
                <h3 class="alert alert-info">@TempData["Msg"]</h3>
            }
        }
        <dl class="dl-horizontal">
            <dt>
                Business Name
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.BusinessDetail.Name)
            </dd>

            <dt>
                Godown Address
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.GodownAddress)
                &nbsp;@Html.DisplayFor(model => model.Pincode.Name)
            </dd>

            <dt>
                Service No.
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.ServiceNumber)
            </dd>

            <dt>
                Service Level
            </dt>
            <dd>
                &nbsp;@Enum.GetName(typeof(DeliveryPartner.Common.Constant.DELIVERY_PARTNER_SERVICE_LEVEL), Model.ServiceLevel) Level
            </dd>

            <dt>
                Contact Person
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.ContactPerson)
            </dd>

            <dt>
                Vehicle
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.VehicleType.Name)
            </dd>


            <dt>
                Mobile
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.Mobile)
            </dd>

            <dt>
                Email
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Landline
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.Landline)
            </dd>

            <dt>
                FAX
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.FAX)
            </dd>

            <dt>
                Opening Time
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.OpeningTime)
            </dd>

            <dt>
                Closing Time
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.ClosingTime)
            </dd>

            <dt>
                Week Off
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.WeeklyOff)
            </dd>

            <dt>
                Is Live
            </dt>
            <dd>
                &nbsp;@Html.DisplayFor(model => model.IsLive)
            </dd>



        </dl>
    </div>
</div>
