@model IEnumerable<ModelLayer.Models.ViewModel.PurchaseOrderReplyViewModel>

@{
    ViewBag.Title = "Invoice List";
}

<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>


<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
            "aaSorting": [],
            "iDisplayLength": 20,    /// Added by Priti   to show 20 entires by default on date 14-11-2018
        });
        //alert("1");
    });
</script>

<section class="right_side_main_part">
    <div id="content" class="span10" style="min-height: 403px;">
        <div class="content">
            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            ALL INVOICES
                        </h2>
                    </div>
                    <div class="box-content">

                        <table class="table border-table display" id="tblData">
                            <thead>
                                <tr>
                                    @*<th>Sr.No.</th>*@

                                    <th>PO Number</th>
                                    <th>
                                        Invoice#
                                    </th>
                                    <th>Customer</th>
                                    <th>
                                        Date
                                    </th>

                                    <th>
                                        TotalAmount
                                    </th>
                                    <th>
                                        TotalItems
                                    </th>
                                    <th>
                                        IsApproved
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @*@{
                                    var i = 1;
                                }*@
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td style="text-align:center">
                                                @i
                                                @{
                                        i = i + 1;
                                                }
                                            </td>*@

                                    <td>
                                        <a id="Print" style="color: #3C73DC; font-weight: bold; " href="@Url.Action("PrintOrder1", "PurchaseOrders", new { id = @item.PurchaseOrderID })" target="_blank">@item.PurchaseOrderCode</a>
                                    </td>
                                    <td style="color: #DB4437; font-weight: bold">
                                        @item.InvoiceCode
                                    </td>
                                    <td>@item.WarehouseName</td>
                                    <td>
                                        @String.Format("{0:dd MMM yyyy}", item.CreateDate)
                                    </td>
                                    @*<td style="text-align:right">
                                                        @String.Format("{0:F}", item.OrderAmount)
                                                    </td>
                                                    <td>
                                            @String.Format("{0:F}", item.TotalDiscountAmount)
                                        </td>
                                                    <td style="text-align:right">
                                                        @String.Format("{0:F}", item.ShippingCharge)
                                                    </td>*@
                                    <td style="text-align:right">
                                        @String.Format("{0:F}", item.TotalAmount)
                                    </td>
                                    <td style="text-align:center">
                                        @item.TotalItems
                                    </td>
                                    <td style="text-align:center">
                                        @if (@item.IsReplied == true)
                                        {
                                            <span style="color:green">Approved</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }
                                    </td>
                                    @*changes by Priti on 20-10-2018*@
                                    <td>
                                        @if (@item.IsReplied == true)
                                        {
                                            @*<a id="Print1" class="print btn btn-warning btn-small" href="@Url.Action("GetId1", "PurchaseOrderReply", new { id = item.PurchaseOrderReplyID })" target="_blank">Print</a>*@
                                            <a id="Print2" class="print btn btn-warning btn-small" href="@Url.Action("GetId2", "PurchaseOrderReply", new { id = item.PurchaseOrderReplyID })" target="_blank">New Invoice</a>
                                            <a id="Print1" class="print btn btn-warning btn-small" href="@Url.Action("GetId", "PurchaseOrderReply", new { id = item.PurchaseOrderReplyID })" target="_blank">old Invoice</a>


                                            @Html.ActionLink("Send EMail", "SendMailForInvoice", new { ID = item.PurchaseOrderReplyID }, new { @class = "btn btn-small btn-info", title = "Click here to Send EMail" })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Confirm", "Approve", new { PurchaseOrderReplyID = item.PurchaseOrderReplyID }, new { @class = "btn btn-small btn-success", title = "Click here to approve" })
                                            <a id="Print1" class="print btn btn-default btn-small" href="@Url.Action("GetId1", "PurchaseOrderReply", new { id = item.PurchaseOrderReplyID })" target="_blank">Print</a>
                                            <a id="Print2" class="print btn btn-warning btn-small" href="@Url.Action("GetId2", "PurchaseOrderReply", new { id = item.PurchaseOrderReplyID })" target="_blank">New Invoice</a>
                                        }
                                    </td>
                                    @*end by Priti on 20-10-2018*@


                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default mrg-left mrg-top" })
        </p>
    </div>
</section>