@model ModelLayer.Models.ViewModel.PurchaseOrderReplyViewModel

@{
    ViewBag.Title = "Edit";
}

<div id="content" class="span10">
   @using (Html.BeginForm("Edit", "PurchaseOrderReply", null, FormMethod.Post, new { id = "Form_" }))
    {
        @Html.ValidationSummary(true)
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-content">
                <div class="form-horizontal">

                    @Html.HiddenFor(model => model.PurchaseOrderReplyID)
                    @Html.HiddenFor(model=>model.SupplierID)                   
                    @Html.Partial("_CreateOrEdit", Model)

                    <p>                        
                        <input type="submit" value="Update" class="btn btn-success mrg-left mrg-top" />
                        @Html.ActionLink("Back to List", "CreateInvoice", new { PurchaseOrderID = Model.PurchaseOrderID }, new { @class = "btn btn-default mrg-left mrg-top" })
                    </p>
                </div>
            </div>
        </div>
    </div>
    }   
</div>