@model ModelLayer.Models.ViewModel.PurchaseOrderViewModelList

@{
    ViewBag.Title = "Index";
}

<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
            "iDisplayLength": 20,    /// Added by Priti   to show 20 entires by default on date 14-11-2018
        });
         //alert("1");
    });
</script>
<section class="right_side_main_part">
    <div id="content" class="span10" style="min-height: 403px;">
        <div class="content">

            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            Purchase Order List from different Warehouses
                        </h2>
                    </div>
                    <div class="box-content">
                        <div class="form-control">
                            <div class="col-sm-3">
                                Filter by Warehouse
                            </div>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(model => model.WarehouseID, ((IEnumerable<ModelLayer.Models.Warehouse>)ViewBag.PossibleWarehouses).Select(option => new SelectListItem
                           {
                               Text = (option == null ? "None" : option.Name),
                               Value = option.ID.ToString(),
                               Selected = (Model != null) && (option.ID == Model.WarehouseID)
                           }), "--All Warehouses--")

                                <button id="Search" type="button" class="btnRemove btn btn-warning btn-small">Search</button>

                            </div>
                        </div>

                        <table class="table border-table display" id="tblData">
                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>
                                        Customer
                                    </th>
                                    <th>
                                        Order Code
                                    </th>
                                    <th>
                                        Total Item(s)
                                    </th>
                                    <th>
                                        Received Date
                                    </th>
                                    <th>
                                        Expected Delivery Date
                                    </th>
                                    <th>Status</th>

                                    <th>
                                        Date
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @{
                                var i = 1;
                            }
                            @foreach (var item in Model.lPurchaseOrderViewModel)
                            {
                                <tr>
                                    <td style="text-align:center">
                                        @i
                                        @{
                                            i = i + 1;
                                        }
                                    </td>
                                    <td>
                                        @(item.WarehouseName == null ? "None" : item.WarehouseName)
                                    </td>
                                    <td style="color: #3C73DC; font-weight:bold">
                                        <a id="Print" style="color: #3C73DC; font-weight: bold; " href="@Url.Action("PrintOrder1", "PurchaseOrders", new { id = @item.PurchaseOrderID })" target="_blank">@(item == null ? "" : item.PurchaseOrderCode)</a>
                                    </td>
                                    <td style="text-align:center"> @item.TotalItems</td>
                                    <td>
                                        @Convert.ToDateTime(@item.ModifyDate).ToString("dd MMM yyyy")
                                    </td>
                                    <td>
                                        @item.ExpetedDeliveryDate.ToString("dd MMM yyyy")
                                    </td>

                                    @if (@item.IsAcceptedBySupplier == 1)
                                    {
                                        <td>
                                            <span style="color:green;font-weight:bold">Accepted</span>
                                        </td>
                                    }
                                    else if (@item.IsAcceptedBySupplier == 2)
                                    {
                                        <td>
                                            <span style="color: red; font-weight: bold">Rejected</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span style="color:blue;">Pending</span>
                                        </td>
                                    }

                                    @if (@item.IsAcceptedBySupplier == 1)
                                    {
                                        <td>
                                            @Convert.ToDateTime(@item.DeliveryDate).ToString("dd MMM yyyy")
                                        </td>
                                    }
                                    else if (@item.IsAcceptedBySupplier == 2)
                                    {
                                        <td>
                                            @Convert.ToDateTime(@item.DeliveryDate).ToString("dd MMM yyyy")
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }


                                    @if (@item.IsAcceptedBySupplier == 1)
                                    {
                                        <td>
                                            @Html.ActionLink("View", "View", new { id = item.PurchaseOrderID }, new { @class = "btn btn-small btn-info" }) | @Html.ActionLink("Create Invoice", "CreateInvoice", new { PurchaseOrderID = item.PurchaseOrderID }, new { @class = "btn btn-small btn-success" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.ActionLink("View", "View", new { id = item.PurchaseOrderID }, new { @class = "btn btn-small btn-info" })
                                            @*| @Html.ActionLink("Accept", "Accept", new { id = item.PurchaseOrderID }, new { @class = "btn btn-small btn-success" })*@
                                        </td>
                                    }

                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
    <script type="text/javascript">
        $(function () {
            $("#Search").click(function () {
                var WarehouseID = $("select#WarehouseID option:selected").val();
                window.location = "/PurchaseOrderReply/Search?RequestFromWarehouseID=" + WarehouseID;
            });
        });

    </script>
