@model ModelLayer.Models.ViewModel.Invoice_SupplierViewModel
@{
    ViewBag.Title = "Invoice List";
}

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
    section.right_side_main_part div#content form .content .col-sm-8 select#SupplierId {
        border-radius: 5px !important;
        text-transform: uppercase;
        margin-bottom:0;
    }
    section.right_side_main_part div#content form .content .col-sm-8 button#Search {
        margin-top: 0;
    }
    section.right_side_main_part div#content form .content .col-sm-3 span {
        text-transform: uppercase;
        font-weight: 500;
        font-size: 16px;
    }
    section.right_side_main_part div#content form .content .row-fluid .box.span12 div#tblData_wrapper div#tblData_length label select.valid {
        border-radius: 5px !important;
        margin: 0 5px 0;
    }
    section.right_side_main_part div#content form .content .row-fluid .box.span12 div#tblData_wrapper div#tblData_filter label input[type="text"] {
        border-radius: 5px !important;
        margin: 0;
    }
    section.right_side_main_part div#content form .content .row-fluid .box.span12 div#tblData_wrapper table#tblData tbody td a.btn.btn-small.btn-success {
        border-radius: 5px !important;
    }
    footer {
        margin-top: 25px;
    }
    section.right_side_main_part div#content {
        background: #fff;
    }
    .upperSide_upPartDIV {
        padding: 1%;
    }
</style>

<link href="~/Content/css/Site.css" rel="stylesheet" />
<link href="~/Content/css/searching.css" rel="stylesheet" />
<link href="~/Content/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/jquery-1.9.1.min.js"></script>
<script src="~/Content/js/jQuery-Table-Plugin.js"></script>
<link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
            "iDisplayLength": 20,    /// Added by Priti   to show 20 entires by default on date 14-11-2018
        });
        // alert("1");
    });
</script>
<section class="right_side_main_part">
<div id="content" class="span10" style="min-height: 403px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="content">
            
            <div class="upperSide_upPartDIV">
                <div class="col-sm-3">
                    <span> Filter by Supplier </span>
                </div>
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.SupplierId, Model.SupplierList, "--All Suppliers--")
                    @Html.ValidationMessageFor(model => model.SupplierId)
                    <button id="Search" type="button" class="btnRemove btn btn-warning btn-small">Search</button>
                </div>
            </div>

            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            @{ 
        var Supplier_Name = "";
        if (ViewBag.SupplierName != null) { Supplier_Name = " of " + ViewBag.SupplierName; }
                            }                            
                            Invoice List @Supplier_Name
                        </h2>
                    </div>
                    <table id="tblData" class=" table table-bordered table-striped table-condensed" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    Invoice Date
                                </th>
                                <th>
                                    Invoice Code
                                </th>   
                                <th>
                                    Supplier Name
                                </th>                               
                                <th>
                                    TotalAmount
                                </th>
                                <th>
                                    TotalItems
                                </th>                                
                                <th></th>
                            </tr>
                        </thead>
                        @if (Model.obj_InvoiceViewModel.Count > 0)
                        {
                            foreach (var item in Model.obj_InvoiceViewModel)
                            {
                                <tr>
                                    <td>
                                        @String.Format("{0:dd/MM/yyyy}", item.InvoiceDate)
                                    </td>
                                    <td>
                                        @item.InvoiceCode
                                    </td>
                                    <td>
                                        @item.SupplierName
                                    </td>
                                    <td>
                                        @String.Format("{0:F}", item.TotalAmount)
                                    </td>
                                    <td>
                                        @item.TotalItems
                                    </td>
                                  <td>
                                      @Html.ActionLink("Return Entry", "Create", new { InvoiceID = item.InvoiceID }, new { @class = "btn btn-small btn-success", title = "Click here to return" })
                                  </td>

                                </tr>
                            }
                        }

                    </table>

                    @*</div>*@
                </div>
            </div>
        </div>
    }
</div>
    </section>
<script type="text/javascript">
    $(function () {
        $("#Search").click(function () {
            var SupplierID = $("select#SupplierId option:selected").val();
            window.location = "/WarehouseReturnStock/Invoice_SupplierList?SupplierID=" + SupplierID;
        });
    });

</script>



