@model ModelLayer.Models.ViewModel.InvoiceViewModel

@{
    ViewBag.Title = "Add Return Item In Stock";
}

<link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#content").attr('disabled', 'disabled');
    });
</script>
@using (Html.BeginForm("Accept", "WarehouseReturnStock", FormMethod.Post))
{
    @Html.HiddenFor(model => @Model.ReturnId)
    @Html.HiddenFor(model => @Model.InvoiceID)
    @Html.HiddenFor(model => @Model.InvoiceId_Supp)
    @Html.HiddenFor(model => @Model.ReturnId)
    @Html.ValidationSummary(true)
    <div id="content" class="span10">
        <div class="row-fluid">
            <div class="box span12">
                <center><p style="font-size:large"><b><u>Return Entry Details</u></b></p></center>
                <div class="box-header creatProduct clearfix" data-original-title="">
                    <h2>
                        <i class="icon-exclamation-sign"></i>
                        <span class="break"></span>
                        INVOICE DETAIL
                    </h2>
                </div>
                <div class="box-content">
                    <div class="form-horizontal">
                        @*Yashaswi Inventory Return 20-12-2018*@
                        <div class="display-label">Warehouse Name(Buyer): <b>@Model.WarehouseName</b></div>
                        <div class="display-label">Invoice Code(Buyer): <b>@Model.InvoiceCode</b></div>
                        <div class="display-label">Invoice Date(Buyer): <b>@Model.InvoiceDate.ToString("dd/MM/yyyy")</b></div>
                        <div class="display-label">Invoice Amount(Buyer): <b><i class="fa fa-inr"></i> @Model.OrderAmount</b></div>
                        <div class="display-label">Total Amount(Buyer): <b><i class="fa fa-inr"></i> @Model.TotalAmount</b></div>

                        <br />
                        <div class="display-label">Supplier Name: <b>@Model.SupplierName</b></div>
                        <div class="display-label">Invoice Code: <b>@Model.InvoiceCode_Supp</b></div>
                        <div class="display-label">Invoice Date: <b>@Model.InvoiceDate_Supp.ToString("dd/MM/yyyy")</b></div>
                        <div class="display-label">Invoice Amount: <b><i class="fa fa-inr"></i> @Model.OrderAmount_Supp</b></div>
                        <div class="display-label">Total Amount: <b><i class="fa fa-inr"></i> @Model.TotalAmount_Supp</b></div>
                        <br />


                    </div>
                </div>
            </div>

            <div class="box">
                <div class="box-header creatProduct clearfix" data-original-title="">
                    <h2>
                        <i class="icon-exclamation-sign"></i>
                        <span class="break"></span>
                        ADDED ITEM(S)
                    </h2>
                </div>
                <div class="box-content nameDscrp">
                    <div class="NameDescription">
                        <div class="box-content box-content1" style="padding-left:0px;width:99%;overflow-x:scroll;z-index:1;">
                            @Html.ValidationMessageFor(model => model.AdditionalCharge)
                            <div class="box-content">
                                <center>  </center>
                                <table id="tbl" class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
                                    <tr>
                                        <th>Product</th>
                                        <th>Name</th>
                                        <th>HSN Code</th>
                                        <th>Return Qty</th>
                                        <th>Return Rate Per Unit</th>
                                        <th>Amount</th>
                                        <th>Reason & Remark</th>
                                    </tr>
                                    @for (int i = 0; i < @Model.lWarehouseReturnStockDetailsViewModel.Count; i++)
                                    {
                                        <tr>
                                            <td><img id=" imgproductimage" src="@Model.lWarehouseReturnStockDetailsViewModel[i].StockThumbPath" onerror="this.src = '/Content/Images/no_image.png'" style="width: 70px; height:70px;" alt=" eZeelo " /></td>
                                            <td class="table-shopping-cart-img" style="text-align: left;">
                                           
                                                @Html.HiddenFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].WarehouseStockID_Supp)
                                                @Html.HiddenFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].ID)
                                                @Model.lWarehouseReturnStockDetailsViewModel[i].ItemName
                                            </td>
                                            <td>@Model.lWarehouseReturnStockDetailsViewModel[i].HSNCode</td>
                                            <td>
                                                @Html.LabelFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].ReturnQuantity, @Model.lWarehouseReturnStockDetailsViewModel[i].ReturnQuantity.ToString(), new { Style = "width:40px" })
                                                @Html.HiddenFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].ReturnQuantity)
                                                @Html.HiddenFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].WarehouseStockID_Supp)
                                            </td>

                                            <td>
                                                @Html.LabelFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].ReturnRatePerUnit, @Model.lWarehouseReturnStockDetailsViewModel[i].ReturnRatePerUnit.ToString(), new { Style = "width:40px" })

                                                @Html.HiddenFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].ReturnRatePerUnit)
                                            </td>
                                            <td>@Html.LabelFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].Amount, @Model.lWarehouseReturnStockDetailsViewModel[i].Amount.ToString(), new { Style = "width:40px", @id = "Amount-" + i.ToString() })</td>

                                            <td>
                                                @Html.LabelFor(model => @Model.lWarehouseReturnStockDetailsViewModel[i].Remark, @Model.lWarehouseReturnStockDetailsViewModel[i].Remark)
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="box-header creatProduct clearfix" data-original-title="">
                    <h2>
                        <i class="icon-exclamation-sign"></i>
                        <span class="break"></span>
                        Other Details
                    </h2>
                </div>
                <div class="box-content nameDscrp">
                    <div class="NameDescription">
                        <div class="box-content box-content1" style="padding-left:0px;width:99%;overflow-x:scroll;z-index:1;">

                            <div class="box-content">
                                <table style="width:90%">
                                    <tr>
                                        <td style="width:30%">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    Additional Charge
                                                </div>
                                                <div class="col-sm-6">
                                                    <span> <i class="fa fa-inr"></i>&nbsp; @Model.AdditionalCharge.ToString()</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td style="width:30%">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    Tranportation Charge
                                                </div>
                                                <div class="col-sm-6">
                                                    <span> <i class="fa fa-inr"></i>&nbsp; @Model.TranportationCharge.ToString()</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td style="width:30%">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    Total Amount
                                                </div>
                                                <div class="col-sm-6">
                                                    <span> <i class="fa fa-inr"></i>&nbsp; @Model.TotalReturnAmout.ToString() </span>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3">
                                            <div class="col-sm-3">
                                                Remark
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.LabelFor(model => model.Remark, Model.Remark)

                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <p>
                @*Yashaswi Inventory Return 20-12-2018*@
                @if (Model.IsApproved == false)
                {
                    <input type="submit" value="Accept" class="btn btn-success mrg-left mrg-top" /> @*Yashaswi Inventory Return 20-12-2018*@
                }
                else
                {
                    <span style="color:#058115;font-weight:bold"> Accepted </span>
                }

                @Html.ActionLink("Back to List", "ReturnFromCustomerList", null, new { @class = "btn btn-default mrg-left mrg-top" })

            </p>

        </div>
    </div>
}
