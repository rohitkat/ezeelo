                    @Html.TextBoxFor(model => model.userLogin.Email, new { @placeholder = "Email", @class = "form-control", @onchange = "return ValidateEmail(this);", required = "required" })
                    @Html.ValidationMessageFor(model => model.userLogin.Email)
                    <div id="divEmailError" style="width: 278px; display: none;" class="alert-danger focused">  </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.userLogin.Password, new { @placeholder = "Password", @class = "form-control", required = "required", type = "password", minlength = 6, @onchange = "setFocus();" })
                    @Html.ValidationMessageFor(model => model.userLogin.Password)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "form-control", required = "required", type = "password", @onchange = "return ValidateConfirmPassword(this);" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    <div id="divPwdError" style="width:229px; display: none; " class="alert-danger focused">  </div>
                </div>
                <div class="form-group">
                    @Html.DropDownList("SecurityQuestion", null, "Select Security Question", new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.securityQuestion.ID)

                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.loginSecurityAnswer.Answer, new { @placeholder = "Security Answer", @class = "form-control", required = "required", type = "password" })
                    @Html.ValidationMessageFor(model => model.loginSecurityAnswer.Answer)
                </div>
                <div class="form-group">
                    <button type="submit" id="Save" value="Save" class="btn btn-success btn-block" name=" action">Save</button>
                </div>

            </div>
            <div class="clearfix"></div>

        </div>        
      
    </div>
</div>


    }

  
