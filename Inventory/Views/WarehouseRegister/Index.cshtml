    <div class="box-content" style=" background: transparent;">
        <div class="box-header">
            <h2><i class="halflings-icon th"></i><span class="break"></span><b>Warehouse</b></h2>
        </div>
        <br />

        <div class="row-fluid">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">           
                   
                    @Html.TextBoxFor(model => model.warehouse.Name, new { @placeholder = "Warehouse Name", @class = "form-control  pull-left wdth-mid mrg-leftSm", required = "required" })

                    @Html.TextBoxFor(model => model.personalDetail.FirstName, new { @placeholder = "First Name", @class = "form-control  pull-left wdth-mid mrg-leftSm", required = "required" })
                    @Html.ValidationMessageFor(model => model.personalDetail.FirstName)

                    @Html.TextBoxFor(model => model.personalDetail.LastName, new { @placeholder = "Last Name", @class = "form-control  pull-left wdth-mid mrg-leftSm", required = "required" })
