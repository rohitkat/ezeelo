@model ModelLayer.Models.WarehouseReason

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/BeatPicker.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.0.min.js"></script>
<script src="~/Content/js/BeatPicker.js"></script>
<link href="~/Content/assets/css/style.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.9.1.min.js"></script>
<link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
<link href="~/Content/assets/css/form-design.css" rel="stylesheet" />

<section class="right_side_main_part">
    <div class="row-fluid">
        <div class="box span12 right_side_up_part">
            <div class="box-header creatProduct clearfix" data-original-title="">
                <h2>
                    <i class="icon-exclamation-sign"></i>
                    <span class="break"></span>
                    Reason Entry
                </h2>
            </div>
            <div id="content" class="span10">

                @using (Html.BeginForm("Create", "WarehouseReason", null, FormMethod.Post, new { id = "Form_" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row-fluid">
                        <div class="box span12">
                            <div class="box-content">
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <div class="col-sm-3">
                                            <label style="text-transform:none"> Category</label>
                                        </div>
                                        <div class="col-sm-6">
                                            @for (var i = 0; i < Model.CategoryList.Count; i++)
                                            {
                                                <table>
                                                    <tr>
                                                        <td>
                                                            @Html.CheckBoxFor(it => it.CategoryList[i].IsChecked, new { Style = "vertical-            align:3px}" })
                                                        </td>
                                                        <td>
                                                            @Html.HiddenFor(it => it.CategoryList[i].ID)

                                                            @Html.DisplayFor(it => it.CategoryList[i].Category)
                                                        </td>
                                                    </tr>
                                                </table>

                                            }
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-3">
                                            <label style="text-transform:none"> Reason</label>
                                        </div>
                                        <div class="col-sm-6">
                                            <textarea id="Reason" name="Reason" style="width:30%;height:10%"></textarea>
                                            @*@Html.EditorFor(model => model.Reason, new { @class = "Txt" })*@
                                            @Html.ValidationMessageFor(model => model.Reason)
                                        </div>
                                    </div>
                                    <p>
                                        <input type="submit" value="Save" class="btn btn-success mrg-left mrg-top" />
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default mrg-left mrg-top" })
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    </section>