@model ModelLayer.Models.WarehouseReason

@{
    ViewBag.Title = "CreateSubReason";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/BeatPicker.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.0.min.js"></script>
<script src="~/Content/js/BeatPicker.js"></script>
<link href="~/Content/assets/css/style.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.9.1.min.js"></script>
<link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
<link href="~/Content/assets/css/form-design.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $("#ParentReasonId").change(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Get_Category", "WarehouseReason")',
                data: { 'ID': $(this).val()},
                //dataType: "json",
                cache: false,
                success: function (data) {
                    $("#txtCat").text(data);
                },
            });
        });
    })
</script>



<div class="row-fluid">
    <div class="box span12">
        <div class="box-header creatProduct clearfix" data-original-title="">
            <h2>
                <i class="icon-exclamation-sign"></i>
                <span class="break"></span>
                Sub Reason Entry
            </h2>
        </div>
        <div id="content" class="span10">

            @using (Html.BeginForm("CreateSubReason", "WarehouseReason", null, FormMethod.Post, new { id = "Form_" }))
            {
                @Html.AntiForgeryToken()
                <div class="row-fluid">
                    <div class="box span12">
                        <div class="box-content">
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        Category
                                    </div>
                                    <div class="col-sm-6">
                                        <label id="txtCat"></label></div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        Reason
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("ParentReasonId", Model.WarehouseReasonlist, "Select Main Reason", null)
                                        @Html.ValidationMessageFor(model => model.ParentReasonId)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        Sub Reason
                                    </div>
                                    <div class="col-sm-6">
                                        <textarea id="Reason" name="Reason" style="width:30%;height:10%"></textarea>
                                        @Html.ValidationMessageFor(model => model.Reason)
                                    </div>
                                </div>
                                <p>
                                    <input type="submit" value="Save" class="btn btn-success mrg-left mrg-top" />
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default mrg-left mrg-top" })
                                </p>


                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
