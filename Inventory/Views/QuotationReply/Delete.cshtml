@model ModelLayer.Models.PurchaseOrder

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>PurchaseOrder</legend>

    <div class="display-label">PurchaseOrderCode</div>
    <div class="display-field">@Model.PurchaseOrderCode</div>

    <div class="display-label">PurchaseDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.PurchaseDate)</div>

    <div class="display-label">OrderAmount</div>
    <div class="display-field">@String.Format("{0:F}", Model.OrderAmount)</div>

    <div class="display-label">ShippingCharge</div>
    <div class="display-field">@String.Format("{0:F}", Model.ShippingCharge)</div>

    <div class="display-label">CustomDutyCharge</div>
    <div class="display-field">@String.Format("{0:F}", Model.CustomDutyCharge)</div>

    <div class="display-label">OperatingCost</div>
    <div class="display-field">@String.Format("{0:F}", Model.OperatingCost)</div>

    <div class="display-label">TotalAmount</div>
    <div class="display-field">@String.Format("{0:F}", Model.TotalAmount)</div>

    <div class="display-label">CreateDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreateDate)</div>

    <div class="display-label">CreateBy</div>
    <div class="display-field">@Model.CreateBy</div>

    <div class="display-label">ModifyDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ModifyDate)</div>

    <div class="display-label">ModifyBy</div>
    <div class="display-field">@Model.ModifyBy</div>

    <div class="display-label">NetworkIP</div>
    <div class="display-field">@Model.NetworkIP</div>

    <div class="display-label">DeviceType</div>
    <div class="display-field">@Model.DeviceType</div>

    <div class="display-label">DeviceID</div>
    <div class="display-field">@Model.DeviceID</div>

    <div class="display-label">PurchaseOrderDetails</div>
    <div class="display-field">@(Model.PurchaseOrderDetails == null ? "None" : Model.PurchaseOrderDetails.Count.ToString())</div>

    <div class="display-label">Supplier</div>
    <div class="display-field">@(Model.Supplier == null ? "None" : Model.Supplier.Name)</div>

    <div class="display-label">Warehouse</div>
    <div class="display-field">@(Model.Warehouse == null ? "None" : Model.Warehouse.Name)</div>

    <div class="display-label">WarehouseStocks</div>
    <div class="display-field">@(Model.WarehouseStocks == null ? "None" : Model.WarehouseStocks.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


