@model ModelLayer.Models.ViewModel.QuotationViewModel
@using ModelLayer.Models.ViewModel

@{
    ViewBag.Title = "View";
}

<link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />

<div id="content" class="span10">
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header creatProduct clearfix" data-original-title="">
                <h2>
                    <i class="icon-exclamation-sign"></i>
                    <span class="break"></span>
                    QUOTATION DETAIL
                </h2>
            </div>
            <div class="box-content">
                <div class="form-horizontal">
                    <div class="display-label">Quotation Code: <b>@Model.QuotationCode</b></div>

                    <div class="display-label">Warehouse:<b> @Model.WarehouseName</b></div>

                    <div class="display-label">Request Date: <b>@Model.QuotationRequestDate.ToString("dd/MM/yyyy")</b></div>

                    <div class="display-label">Expected Reply Date: <b>@Model.ExpectedReplyDate.ToString("dd/MM/yyyy")</b></div>

                    <div class="display-label">Remark: <b>@Model.Remark</b></div>
                </div>
            </div>
        </div>

        <div class="box">
            <div class="box-header creatProduct clearfix" data-original-title="">
                <h2>
                    <i class="icon-exclamation-sign"></i>
                    <span class="break"></span>
                    QUOTATION ITEM(S)
                </h2>
            </div>
            <div class="box-content nameDscrp">
                <div class="NameDescription">
                    <div class="box-content box-content1" style="padding-left:0px;width:99%;overflow-x:scroll;z-index:1;">

                        @if (Session["lQuotationItemDetailViewModel"] != null)
                        {
                            List<QuotationItemDetailViewModel> objList = (List<QuotationItemDetailViewModel>)Session["lQuotationItemDetailViewModel"];

                            <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
                                <tr>
                                    <th>Product</th>
                                    <th>Item Name</th>
                                    <th>HSN Code</th>
                                    <th>Nick Name</th>
                                    <th>Quantity</th>
                                </tr>
                                @foreach (var item in objList)
                                {
                                    <tr>
                                        <td class="table-shopping-cart-img" style="text-align: left;">
                                            <img id=" imgproductimage" src="@item.StockThumbPath" onerror="this.src = '/Content/Images/no_image.png'" style="width: 70px; height:70px;" alt=" eZeelo " />
                                        </td>
                                        <td>@item.ItemName</td>
                                        <td>@item.HSNCode</td>
                                        <td>@item.Nickname</td>
                                        <td>@item.Quantity</td>
                                    </tr>
                                }
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
        <br />
        <p>
            @Html.ActionLink("Reply", "Edit", new { id = @Model.QuotationID }, new { @class = "btn btn-primary mrg-left mrg-top" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default mrg-left mrg-top" })
        </p>

    </div>
</div>
