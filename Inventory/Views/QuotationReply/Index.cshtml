@model ModelLayer.Models.ViewModel.QuotationViewModelList

@{
    ViewBag.Title = "Index";
}

<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
    section.right_side_main_part div#content .content div a.btn.btn-primary {
        border-radius: 5px !important;
    }

       .box.span12.right_side_up_part .box-content .form-control .pull-left button#Search {
        margin-top: 0;
    }
    .box.span12.right_side_up_part .box-content .form-control .pull-left select#WarehouseID {
        margin-bottom: 0;
        border-radius: 5px !important;
    }
    .box.span12.right_side_up_part .box-content div#tblData_wrapper table#tblData tbody tr td a.btn.btn-small.btn-warning {
        margin: 0;
        padding: 2px 10px;
    }

    .box.span12.right_side_up_part .box-content div#tblData_wrapper table#tblData tbody tr td a.btn.btn-small.btn-info {
        padding: 2px 10px;
        border-radius: 5px !important;
    }

    .box.span12.right_side_up_part .box-content div#tblData_wrapper table#tblData tbody tr td a#Email_ {
        border-radius: 5px !important;
        padding: 2px 10px;
    }
</style>

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
        });
        // alert("1");
    });
</script>

<section class="right_side_main_part">
    <div id="content" class="span10" style="min-height: 403px;">
        <div class="content">

            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            Quotation Request List from differenct Warehouses
                        </h2>
                    </div>
                    <div class="box-content">

                        <div class="form-control" style="margin:10px;">
                            <h4 class="pull-left">Filter by Supplier</h4>
                            <div class="pull-left" style="margin-left:10px;">
                                @Html.DropDownListFor(model => model.WarehouseID, ((IEnumerable<ModelLayer.Models.Warehouse>)ViewBag.PossibleWarehouses).Select(option => new SelectListItem
                           {
                               Text = (option == null ? "None" : option.Name),
                               Value = option.ID.ToString(),
                               Selected = (Model != null) && (option.ID == Model.WarehouseID)
                           }), "--All Warehouses--")

                                <button id="Search" type="button" class="btnRemove btn btn-warning btn-small">Search</button>

                            </div>
                        </div>

                        <table class="table table-bordered table-striped table-condensed display" id="tblData">
                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>
                                        Warehouse
                                    </th>
                                    <th>
                                        Quotation Code
                                    </th>
                                    <th>
                                        Total Item(s)
                                    </th>
                                    <th>
                                        Request Date
                                    </th>
                                    <th>
                                        Expected Reply Date
                                    </th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @{
                                var i = 1;
                            }
                            @foreach (var item in Model.lQuotationViewModel)
                            {
                                <tr>
                                    <td style="text-align:center">
                                        @i
                                        @{
                                            i = i + 1;
                                        }
                                    </td>

                                    <td>
                                        @(item.WarehouseName == null ? "None" : item.WarehouseName)
                                    </td>
                                    <td style="text-align: center;color: #3C73DC; font-weight: bold">
                                        @(item.QuotationCode == null ? "" : item.QuotationCode)
                                    </td>
                                    <td style="text-align:center"> @item.TotalItems</td>
                                    <td>
                                        @item.QuotationRequestDate.ToString("dd MMM yyyy")
                                    </td>
                                    <td>
                                        @item.ExpectedReplyDate.ToString("dd MMM yyyy")
                                    </td>

                                    @if (@item.IsReplied == true)
                                    {
                                        <td>
                                            <span style="color:green;font-weight:bold">Replied</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span style="color:red;">Pending</span>
                                        </td>
                                    }


                                    @if (@item.IsReplied == true)
                                    {
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.QuotationID }, new { @class = "btn btn-small btn-info" })
                                            | <a id="Print" class="print btn btn-warning btn-small" href="@Url.Action("Print", "QuotationReply", new { QuotationID = item.QuotationID, SupplierID = item.SupplierID })" target="_blank">Print</a>
                                        </td>
                                    }
                                    else if (@item.IsReplied == false && @item.ReplyItemCount != null && @item.ReplyItemCount > 0)
                                    {
                                        <td>
                                            @Html.ActionLink("View", "View", new { id = item.QuotationID }, new { @class = "btn btn-small btn-info" }) | @Html.ActionLink("Edit to Reply", "Edit", new { id = item.QuotationID }, new { @class = "btn btn-small btn-primary" })
                                            | @Html.ActionLink("Send Now", "Send", new { QuotationSupplierListID = item.QuotationSupplierListID }, new { @class = "btn btn-small btn-success" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.ActionLink("View", "View", new { id = item.QuotationID }, new { @class = "btn btn-small btn-info" }) | @Html.ActionLink("Edit to Reply", "Edit", new { id = item.QuotationID }, new { @class = "btn btn-small btn-primary" })
                                        </td>
                                    }

                                </tr>
                            }

                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
    </section>
    <script type="text/javascript">
        $(function () {
            $("#Search").click(function () {
                var WarehouseID = $("select#WarehouseID option:selected").val();
                window.location = "/QuotationReply/Index1?RequestFromWarehouseID=" + WarehouseID;
            });
        });

    </script>
