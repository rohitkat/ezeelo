@model IEnumerable<ModelLayer.Models.ViewModel.QuotationSupplierListViewModel>

@{
    ViewBag.Title = "Print List";
}

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>

<link href="~/Content/css/Site.css" rel="stylesheet" />
<link href="~/Content/css/searching.css" rel="stylesheet" />
<link href="~/Content/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/jQuery-Table-Plugin.js"></script>
<link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />

<div id="content" class="span10" style="min-height: 403px;">
    <div class="content"> 
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header">
                    <h2>
                        <i class="icon-list-alt"></i>
                        <span class="break"></span>
                        Quotation Request List For Print
                    </h2>
                </div>
                <div class="box-content">

                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
                        <tr>
                            <th>
                                Supplier
                            </th>
                            <th>
                                Quotation Code
                            </th>
                            <th>
                                Total Item(s)
                            </th>
                            <th>
                                Request Date
                            </th>
                            <th>
                                Expected Reply Date
                            </th>
                            <th>
                                Is Sent
                            </th>
                            <th>Action</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(item.SupplierName == null ? "None" : item.SupplierName)
                                </td>
                                <td>
                                    @(item.QuotationCode == null ? "" : item.QuotationCode)
                                </td>
                                <td> @item.TotalItems</td>
                                <td>
                                    @item.QuotationRequestDate.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @item.ExpectedReplyDate.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @if (@item.IsSent == true)
                                    {
                                        <span style="color:green"><b>Yes</b></span>
                                    }
                                    else
                                    {
                                        <span><b>No</b></span>
                                    }
                                </td>                               
                                    <td>                                        
                                        <a id="Print" class="print btn btn-warning btn-small" href="@Url.Action("Print", "Quotation", new { SupplierID = item.SupplierID, QuotationID = item.QuotationID })" target="_blank">Print</a>
                                    </td>                             
                            </tr>
                        }
                        
                    </table>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default mrg-left mrg-top" })

                </div>

            </div>
        </div>
    </div>
</div>
