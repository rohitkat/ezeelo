 @model ModelLayer.Models.ViewModel.QuotionRequestListViewModel
 @using ModelLayer.Models.ViewModel;

@{
    ViewBag.Title = "Index";
}

<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
    section.right_side_main_part div#content .content div a.btn.btn-primary {
        border-radius: 5px !important;
    }
    .box.span12.right_side_up_part .box-content .form-control .pull-left select#SupplierID {
        margin-bottom: 0;
        border-radius:5px !important;
    }
    .box.span12.right_side_up_part .box-content .form-control .pull-left button#Search {
        margin-top: 0;
    }
    .box.span12.right_side_up_part .box-content div#tblData_wrapper table#tblData tbody tr td a.btn.btn-small.btn-warning {
        margin: 0;
        padding: 2px 10px;
    }
    .box.span12.right_side_up_part .box-content div#tblData_wrapper table#tblData tbody tr td a.btn.btn-small.btn-info {
        padding: 2px 10px;
        border-radius: 5px !important;
    }
    .box.span12.right_side_up_part .box-content div#tblData_wrapper table#tblData tbody tr td a#Email_ {
        border-radius: 5px !important;
        padding: 2px 10px;
    }
</style>

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
        });
        // alert("1");
    });
</script>
<section class="right_side_main_part">
    <div id="content" class="span10" style="min-height: 403px;">
        <div class="content">
            <p style="margin:0;">
                <div>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </p>

            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            All Quotation Request
                        </h2>
                    </div>
                    <div class="box-content">

                        <div class="form-control" style="margin:10px;">
                            <h4 class="pull-left">Filter by Supplier</h4>
                            <div class="pull-left"style="margin-left:10px;">
                                @Html.DropDownListFor(model => model.SupplierID, ((IEnumerable<ModelLayer.Models.Supplier>)ViewBag.PossibleSuppliers).Select(option => new SelectListItem
                           {
                               Text = (option == null ? "None" : option.Name),
                               Value = option.ID.ToString(),
                               Selected = (Model != null) && (option.ID == Model.SupplierID)
                           }), "--All Suppliers--")

                                <button id="Search" type="button" class="btnRemove btn btn-warning btn-small">Search</button>
                            </div>
                        </div>


                        <table class="table table-bordered table-striped table-condensed display" id="tblData">
                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    @*<th>
                                            Warehouse
                                        </th>*@
                                    <th>
                                        Quotation Code
                                    </th>
                                    <th>
                                        Total Item(s)
                                    </th>
                                    <th>
                                        Request Date
                                    </th>
                                    <th>
                                        Expected Reply Date
                                    </th>
                                    <th>
                                        Is Sent
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @{
                                var i = 1;
                            }


                            @foreach (var item in Model.lQuotationViewModel)
                            {
                                <tr>
                                    <td>
                                        @i
                                        @{
                                            i = i + 1;
                                        }
                                    </td>
                                    @*<td>
                                            @(item.WarehouseName == null ? "None" : item.WarehouseName)
                                        </td>*@
                                    <td style="text-align: center; color: #3C73DC; font-weight: bold">
                                        @(item.QuotationCode == null ? "" : item.QuotationCode)
                                    </td>
                                    <td style="text-align:center"> @item.TotalItems</td>
                                    <td style="text-align:center">
                                        @item.QuotationRequestDate.ToString("dd MMM yyyy")
                                    </td>
                                    <td style="text-align:center">
                                        @item.ExpectedReplyDate.ToString("dd MMM yyyy")
                                    </td>
                                    <td style="text-align:center">
                                        @if (@item.IsSent == true)
                                        {
                                            <span style="color:green;"><b>Yes</b></span>
                                        }
                                        else
                                        {
                                            <span><b>No</b></span>
                                        }
                                    </td>

                                    @if (@item.IsSent == true)
                                    {
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.QuotationID }, new { @class = "btn btn-small btn-info" })
                                            |@Html.ActionLink("Get Print", "PrintList", new { id = item.QuotationID }, new { @class = "btn btn-small btn-warning" })
                                            | @Html.ActionLink("Send E-Mail", "SendMailForQuotationRequest", new { id = item.QuotationID }, new { @class = "btn btn-small btn-success", id = "Email_" })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.QuotationID }, new { @class = "btn btn-small btn-primary" })|@Html.ActionLink("Details", "Details", new { id = item.QuotationID }, new { @class = "btn btn-small btn-info" })
                                            |@Html.ActionLink("Get Print", "PrintList", new { id = item.QuotationID }, new { @class = "btn btn-small btn-warning" })|@Html.ActionLink("Send Now", "Send", new { id = item.QuotationID }, new { @class = "btn btn-small btn-success" })
                                            |@Html.ActionLink("Send E-Mail", "SendMailForQuotationRequest", new { id = item.QuotationID }, new { @class = "btn btn-small btn-success", id = "Email_" })
                                        </td>
                                    }
                                </tr>
                            }

                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
    </section>

    <script type="text/javascript">
        $(function () {
            $("#Search").click(function () {
                var SupplierID = $("select#SupplierID option:selected").val();
                window.location = "/Quotation/Search?SupplierID=" + SupplierID;
            });
        });

    </script>
