@model ModelLayer.Models.Supplier

@{
    ViewBag.Title = "Edit";
}
<section class="right_side_main_part">
    <div id="content" class="span10">

        @using (Html.BeginForm("Edit", "Suppliers", new { id = Model.ID }, FormMethod.Post, new { id = "Form_" }))
        {
            @Html.ValidationSummary(true)
            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-content">
                        <div class="form-horizontal">

                            @Html.HiddenFor(model => model.ID)
                            @Html.Partial("_CreateOrEdit", Model)

                            <div class="SaveBTN_">
                                <input type="submit" value="Save" class="btn btn-success mrg-left mrg-top" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="btn btn-default mrg-left backBTN_">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
    </section>