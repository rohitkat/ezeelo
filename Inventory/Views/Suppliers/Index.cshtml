@model IEnumerable<ModelLayer.Models.Supplier>

@{
    ViewBag.Title = "Index";
}

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>


<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
            "aaSorting": []
        });
        // alert("1");
    });
</script>

<section class="right_side_main_part">
    <div id="content" class="span10" style="min-height: 403px;">
        <div class="content">
                <div class="creatBtn">
                    @*show create button to EZZElo  Yashaswi 19/4/2018*@
                    @if ((Session["BusinessTypeID"] != null && Convert.ToInt32(Session["BusinessTypeID"]) == 5) || (Session["IsEzeeloLogin"] == "1"))
                    {
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    }
                </div>
            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            MASTER SUPPLIER LIST
                        </h2>

                    </div>
                    <div class="box-content">

                        <table class="table border-table display table-bordered table-striped table-condensed" id="tblData">
                            <thead>
                                <tr>
                                    <th>SR No.</th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Supplier Code
                                    </th>
                                    <th>
                                        Contact Person
                                    </th>
                                    <th>GST Number</th>    @*Added by Priti*@
                                    <th> City Name</th>   @*Added by Priti on 13-2-2019*@
                                    <th> State Name</th>   @*Added by Priti on 13-2-2019*@
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Mobile
                                    </th>
                                    <th>
                                        Is Active
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @{
                                var i = 1;
                            }
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @i
                                    @{
                                        i = i + 1;
                                    }
                                </td>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.SupplierCode
                                </td>
                                <td>
                                    @item.ContactPerson
                                </td>

                                <td>@item.GSTNumber</td>   @*Added by Priti*@

                                <td>@item.CityName</td>   @*Added by Priti*@
                                <td>@item.StateName</td>   @*Added by Priti*@
                                <td>
                                    @item.Address
                                </td>
                                <td>
                                    @item.Mobile
                                </td>
                                <td>
                                    @Html.CheckBoxFor(modelItem => @item.IsActive, new { @class = "checkbox", @disabled = "disabled" })
                                    @Html.HiddenFor(modelItem => @item.ID)
                                </td>
                                <td>
                                    @*show Edit button to EZZElo  Yashaswi 19/4/2018*@
                                    @if ((Session["BusinessTypeID"] != null && Convert.ToInt32(Session["BusinessTypeID"]) == 5) || (Session["IsEzeeloLogin"] == "1"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-info" })
                                    }
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-info" })
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                </td>
                            </tr>
                            }
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
    </section>