@model ModelLayer.Models.ViewModel.InvoiceViewModel


@{
    ViewBag.Title = "Edit";
}

<div id="content" class="span10">
    @using (Html.BeginForm("Edit", "WarehouseStocks", null, FormMethod.Post, new { id = "Form_" }))
    {
        @Html.ValidationSummary(true)
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-content">
                    <div class="form-horizontal">

                        @Html.HiddenFor(model => model.InvoiceID)
                        @Html.Partial("_CreateOrEdit", Model)

                        <p>
                            @if(@ViewBag.IsReadyToApprove==true)
                            { 
                            <input type="submit" value="Approve" class="btn btn-success mrg-left mrg-top" />
                            }
                            else
                            {
                                 <input type="submit" value="Approve" class="btn btn-success mrg-left mrg-top" disabled="disabled" />
                            }
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default mrg-left mrg-top" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
