@model ModelLayer.Models.ViewModel.WarehouseStockViewModel
@using ModelLayer.Models.ViewModel

@{
    ViewBag.Title = "Invoice List";
}

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>

<link href="~/Content/css/Site.css" rel="stylesheet" />
<link href="~/Content/css/searching.css" rel="stylesheet" />
<link href="~/Content/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/jquery-1.9.1.min.js"></script>
<script src="~/Content/js/jQuery-Table-Plugin.js"></script>
<link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
            "aaSorting": []
        });
        // alert("1");
    });
</script>

<div id="content" class="span10" style="min-height: 403px;">
@using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="content">
        <p>
                       
        </p>
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header">
                    <h2>
                        <i class="icon-list-alt"></i>
                        <span class="break"></span>
                        Invoice List
                    </h2>
                </div>
                <div class="box-content">
                <div class="col-sm-3">
                    Filter by Supplier
                </div> 
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.SupplierID, ((IEnumerable<ModelLayer.Models.Supplier>)ViewBag.PossibleSuppliers).Select(option => new SelectListItem
{
    Text = (option == null ? "None" : option.Name),
    Value = option.ID.ToString(),
    Selected = (Model != null) && (option.ID == Model.SupplierID)
}), "--All Suppliers--")

                    @Html.ValidationMessageFor(model => model.SupplierID)

                    @*@Html.ActionLink("Search", "Search", Model, new { @class = "btn btn-small btn-warning" })*@
                    @*<input type="submit" value="Search" class="btn btn-small btn-warning" />*@

                    <button id="Search" type="button" class="btnRemove btn btn-warning btn-small">Search</button>
                </div>
                    <table id="tblData" class="table border-table display" width="100%">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>PurchaseOrderCode</th>
                                <th>Invoce Code</th>
                                <th>
                                    InvoiceDate
                                </th>
                                <th>
                                    Supplier
                                </th>
                                
                                <th>
                                    OrderAmount
                                </th>
                                @*<th>
                                    TotalDiscountAmount
                                </th>*@
                                @*<th>
                                    ShippingCharge
                                </th>*@

                                <th>
                                    TotalAmount
                                </th>
                                <th>
                                    TotalItems
                                </th>
                                <th>Action</th>
                                <th>
                                    IsApproved
                                </th>
                                
                            </tr>
                        </thead>
                        @{
        var i = 1;
                        }
                        @if (Model.lInvoiceViewModelList.Count > 0)
                        {
                            foreach (var item in Model.lInvoiceViewModelList)
                            {
                                <tr>
                                    <td style="text-align:center">
                                        @i
                                        @{
                                i = i + 1;
                                        }
                                    </td>
                                    <td>@item.PurchaseOrderCode</td>
                                    <td>@item.InvoiceCode</td>                                  
                                    <td>
                                        @String.Format("{0:dd/MM/yyyy}", item.InvoiceDate)
                                    </td>
                                    <td>
                                        @item.SupplierName
                                    </td>
                                   
                                    <td style="text-align:right">
                                        @String.Format("{0:F}", item.OrderAmount)
                                    </td>
                                    @*<td>
                                        @String.Format("{0:F}", item.TotalDiscountAmount)
                                    </td>*@
                                    @*<td style="text-align:right">
                                        @String.Format("{0:F}", item.ShippingCharge)
                                    </td>*@

                                    <td style="text-align:right">
                                        @String.Format("{0:F}", item.TotalAmount)
                                    </td>
                                    <td style="text-align:center">
                                        @item.TotalItems
                                    </td>
                                    <td>
                                        @if (@item.IsApproved == true)
                                        {

                                        }
                                        else
                                        {
                                            @Html.ActionLink("Approve", "Edit", new { InvoiceID = item.InvoiceID }, new { @class = "btn btn-small btn-success", title = "Click here to approve" })
                                        }
                                    </td>
                                    <td style="text-align:center">
                                        @if (@item.IsApproved == true)
                                        {
                                            <span style="color:green">Approved</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }

                                    </td>
                                   

                                </tr>
                            }
                        }

                    </table>

                </div>
            </div>
        </div>       
    </div>   
}
</div>

<script type="text/javascript">
    $(function () {
        $("#Search").click(function () {
            var SupplierID = $("select#SupplierID option:selected").val();
            window.location = "/WarehouseStocks/Search?SupplierID=" + SupplierID;            
        });
    });

</script>



