@model IEnumerable<ModelLayer.Models.ViewModel.EVWViewModel>

@{
    ViewBag.Title = "EVW List";
}

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>


<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
            "aaSorting": []
        });
        // alert("1");
    });
</script>

<section class="right_side_main_part">
    <div id="content" class="span10">
        <div class="content">            
            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            Share DV to EVW
                        </h2>

                    </div>
                    <div class="box-content" style="width:70%;" >                       
                        <table class="table border-table display table-bordered table-striped table-condensed" id="tblData">
                            <tr>
                                <th>
                                    Sr No.
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GSTNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StateName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pincode)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    @{ int i = 0;
                                        i = i + 1;}
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GSTNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StateName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pincode)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Add/View DV", "AddOrViewDV", new { Id  = item.ID}, new { @class = "btn btn-primary btn-small" })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
