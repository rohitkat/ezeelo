@model IEnumerable<ModelLayer.Models.ViewModel.WarehouseViewModel>

@{
    ViewBag.Title = "WarehouseList";
}

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
            "aaSorting": []
        });
    });
</script>
<section class="right_side_main_part">
    <div id="content" class="span10" style="min-height: 403px;">
        <div class="content">

            <div class="row-fluid">
                <div class="box span12 right_side_up_part">
                    <div class="box-header">
                        <h2>
                            <i class="icon-list-alt"></i>
                            <span class="break"></span>
                            Distribution Center List
                        </h2>
                    </div>
                    <div class="box-content">
                        <table class="table border-table display table-bordered table-striped"  id="tblData">
                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Warehouse Code
                                    </th>
                                    <th>
                                        GST Number
                                    </th>
                                    <th>
                                        Service Number
                                    </th>
                                    <th>
                                        City
                                    </th>
                                    <th>
                                        No. Of Fulfillment Center
                                    </th>
                                    <th>
                                        Margin
                                    </th>
                                    <th>
                                        Is Active
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @{
                                var i = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr style=@((@item.FC_Count == 0 && @item.IsActive == true) ? "background-color:#d0fbc8;" : (@item.IsActive == false ? "background-color:#fed9d9" : ""))>
                                    <td>
                                        @i
                                        @{
                                            i = i + 1;
                                        }
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.WarehouseCode
                                    </td>
                                    <td>
                                        @item.GSTNumber
                                    </td>
                                    <td>
                                        @item.ServiceNumber
                                    </td>
                                    <td>
                                        @item.CityName
                                    </td>
                                    <td>
                                        @item.FC_Count
                                    </td>
                                    <td>
                                        @item.Margin
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(modelItem => @item.IsActive, new { @class = "checkbox", @disabled = "disabled" })
                                        @Html.HiddenFor(modelItem => @item.ID)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Set Margin", "SetMarginForDVFV", new { id = item.ID }, new { @class = "btn btn-small btn-info" })
                                    </td>
                                </tr>
                            }

                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>