@model ModelLayer.Models.Invoice

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Invoice</legend>

    <div class="display-label">InvoiceDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.InvoiceDate)</div>

    <div class="display-label">TotalDiscountAmount</div>
    <div class="display-field">@String.Format("{0:F}", Model.TotalDiscountAmount)</div>

    <div class="display-label">OrderAmount</div>
    <div class="display-field">@String.Format("{0:F}", Model.OrderAmount)</div>

    <div class="display-label">ShippingCharge</div>
    <div class="display-field">@String.Format("{0:F}", Model.ShippingCharge)</div>

    <div class="display-label">CustomDutyCharge</div>
    <div class="display-field">@String.Format("{0:F}", Model.CustomDutyCharge)</div>

    <div class="display-label">OperatingCost</div>
    <div class="display-field">@String.Format("{0:F}", Model.OperatingCost)</div>

    <div class="display-label">AdditionalCost</div>
    <div class="display-field">@String.Format("{0:F}", Model.AdditionalCost)</div>

    <div class="display-label">TotalAmount</div>
    <div class="display-field">@String.Format("{0:F}", Model.TotalAmount)</div>

    <div class="display-label">Remark</div>
    <div class="display-field">@Model.Remark</div>

    <div class="display-label">IsActive</div>
    <div class="display-field">@Model.IsActive</div>

    <div class="display-label">CreateDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreateDate)</div>

    <div class="display-label">CreateBy</div>
    <div class="display-field">@Model.CreateBy</div>

    <div class="display-label">ModifyDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ModifyDate)</div>

    <div class="display-label">ModifyBy</div>
    <div class="display-field">@Model.ModifyBy</div>

    <div class="display-label">NetworkIP</div>
    <div class="display-field">@Model.NetworkIP</div>

    <div class="display-label">DeviceType</div>
    <div class="display-field">@Model.DeviceType</div>

    <div class="display-label">DeviceID</div>
    <div class="display-field">@Model.DeviceID</div>

    <div class="display-label">InvoiceAttachments</div>
    <div class="display-field">@(Model.InvoiceAttachments == null ? "None" : Model.InvoiceAttachments.Count.ToString())</div>

    <div class="display-label">InvoiceDetails</div>
    <div class="display-field">@(Model.InvoiceDetails == null ? "None" : Model.InvoiceDetails.Count.ToString())</div>

    <div class="display-label">InvoiceExtraItems</div>
    <div class="display-field">@(Model.InvoiceExtraItems == null ? "None" : Model.InvoiceExtraItems.Count.ToString())</div>

    <div class="display-label">WarehouseFinancialTransactions</div>
    <div class="display-field">@(Model.WarehouseFinancialTransactions == null ? "None" : Model.WarehouseFinancialTransactions.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


