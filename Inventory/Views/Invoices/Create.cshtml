@model ModelLayer.Models.ViewModel.InvoiceViewModel

@{
    ViewBag.Title = "Create";
    Html.EnableClientValidation(true); 
    //Yashaswi 22/05/2018
}

<div id="content" class="span10">
 @using (Html.BeginForm("Create", "Invoices", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-content">
                    <div class="form-horizontal">
                        @Html.Partial("_CreateOrEdit", Model)
                        <p>
                            <input type="submit" value="Save" class="btn btn-success mrg-left mrg-top" />
                            @Html.ActionLink("Back to List", "Index", new { PurchaseOrderID = ViewBag.PurchaseOrderID }, new { @class = "btn btn-default mrg-left mrg-top" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>


