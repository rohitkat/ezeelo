@model IEnumerable<ModelLayer.Models.ViewModel.InvoiceViewModel>

@{
    ViewBag.Title = "Invoice List";
}

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>

<link href="~/Content/css/Site.css" rel="stylesheet" />
<link href="~/Content/css/searching.css" rel="stylesheet" />
<link href="~/Content/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/jQuery-Table-Plugin.js"></script>
<link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />


<div id="content" class="span10" style="min-height: 403px;">
    <div class="content">
        <p>
            <div>
               @if (@ViewBag.IsPOCompleted != null && @ViewBag.IsPOCompleted == false)
                {
                @Html.ActionLink("Create a New GRN", "Create", new { PurchaseOrderID = ViewBag.PurchaseOrderID }, new { @class = "btn btn-primary" })
                }
    </div>
        </p>
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header">
                    <h2>
                        <i class="icon-list-alt"></i>
                        <span class="break"></span>
                        Invoice/Delivery Note List <span style="font-weight:bold"> [Order Code: @ViewBag.PurchaseOrderCode]</span>
                    </h2>
                </div>
                <div class="box-content">

                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
                        <tr>
                            <th>Sr.No.</th>
                            <th>Invoice Code</th>
                            <th>
                                InvoiceDate
                            </th>
                            <th>
                                OrderAmount
                            </th>
                            <th>                               
                                TotalDiscountAmount
                            </th>
                            <th>
                                ShippingCharge
                            </th>
                            @*<th>
                                CustomDutyCharge
                            </th>
                            <th>
                                OperatingCost
                            </th>
                            <th>
                                AdditionalCost
                            </th>*@
                            <th>
                                TotalAmount
                            </th>
                            <th>
                                TotalItems
                            </th>
                            <th>
                                IsApproved
                            </th>
                            <th>
                                Attachment
                            </th>
                            <th></th>
                        </tr>
                        @{var SrNo = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">@SrNo
@{
                            SrNo = SrNo + 1;
}
</td>
                                <td style="color: #3C73DC; font-weight:bold">@item.InvoiceCode</td>
                                <td>
                                    @String.Format("{0:dd MMM yyyy}", item.InvoiceDate)
                                </td>
                                <td>
                                    @String.Format("{0:F}", item.OrderAmount)
                                </td>
                                <td>
                                    @String.Format("{0:F}", item.TotalDiscountAmount)                                  
                                </td>
                                <td>
                                   @String.Format("{0:F}", item.ShippingCharge)
                                </td>
                                @*<td>
                                    @String.Format("{0:F}", item.CustomDutyCharge)
                                </td>
                                <td>
                                    @String.Format("{0:F}", item.OperatingCost)
                                </td>
                                <td>
                                    @String.Format("{0:F}", item.AdditionalCost)
                                </td>*@
                                <td>                                    
                                    @String.Format("{0:F}", item.TotalAmount)
                                </td>
                                <td>                                   
                                    @item.TotalItems
                                </td>
                                <td>
                                    @if(@item.IsApproved == true)
                                        {
                                        <span style="color:green">Approved</span>
                                    }
                                        else
                                        {
                                        <span>No</span>
                                       }
                                </td>
                                <td>
                                    @if (@item.Invoice_Attachment != null)
                                    { <div class="display-label"><a class="submenu" style="color:blue;cursor:pointer" href=@Url.Action("Download", "Invoices", new { fileName = @item.Invoice_AttachmentFileName }) id="btnRate"><span class="hidden-tablet">@item.Invoice_AttachmentFileName</span></a></div>}
                                    else
                                    { <div class="display-label"> No Attachment </div>  }
                                </td>
                                <td>
                                    @if(@item.IsApproved==true)
                                    {
                                        @Html.ActionLink("Details", "Details", new { InvoiceID = item.InvoiceID }, new { @class = "btn btn-small btn-info" })<span>|</span>
                                        <a id="Print" class="print btn btn-warning btn-small" href="@Url.Action("PrintGR", "Invoices", new { InvoiceID = item.InvoiceID })" target="_blank">Print</a>
                                    }
                                    else{
                                     @Html.ActionLink("Confirm","Edit","WarehouseStocks", new { InvoiceID = item.InvoiceID }, new { @class = "btn btn-small btn-success", title = "Click here to approve" })<span>|</span>
                                     @Html.ActionLink("Edit", "Edit", new { InvoiceID = item.InvoiceID }, new { @class = "btn btn-small btn-success" }) <span>|</span>
                                     @Html.ActionLink("Details", "Details", new { InvoiceID = item.InvoiceID }, new { @class = "btn btn-small btn-info" })<span>|</span>
                                     <a id="Print" class="print btn btn-default btn-small" href="@Url.Action("PrintGR", "Invoices", new { InvoiceID = item.InvoiceID })" target="_blank">Print</a><span>|</span>
                                     @Html.ActionLink("Delete", "Delete", new { InvoiceID = item.InvoiceID, PurchaseOrderiD = ViewBag.PurchaseOrderID }, new { @class = "btn btn-small btn-danger", onclick = "return confirm('Are you sure you wish to delete this Invoice?');" })
                                    }
                                   
                                </td>
                                <td></td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>       
    </div>
    <p>
        @Html.ActionLink("Back to List", "PurchaseOrderList", null, new { @class = "btn btn-default mrg-left mrg-top" })
    </p>
</div>

