@model ModelLayer.Models.ViewModel.WarehouseBlockViewModel
@{
    ViewBag.Title = "Create";
}

<div id="content" class="span10">
     @using (Html.BeginForm("Create", "WarehouseBlocks", null, FormMethod.Post, new { id = "Form_" })) 
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-content">
                    <div class="form-horizontal">

                        @Html.Partial("_CreateOrEdit", Model)
                        <p>
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default mrg-left mrg-top" })
                            @if (Session["WarehouseBlockLocations"] != null)
                            {
                                <input type="submit" value="Save" class="btn btn-success mrg-left mrg-top" />
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

