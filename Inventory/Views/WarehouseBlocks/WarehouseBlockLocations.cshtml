@model List<ModelLayer.Models.ViewModel.WarehouseBlockLocationViewModel>

<style>
    .ClaimAmtList table {
        border-collapse: separate;
        width: 1200px;
        max-width: 1200px;
        overflow-x: scroll;
        display: block;
    }

    .ClaimAmtList thead, .ClaimAmtList tfoot {
        background-color: #EFEFEF;
    }

    .ClaimAmtList thead, .ClaimAmtList tbody, .ClaimAmtList tfoot {
        display: block;
    }

    .ClaimAmtList tbody {
        overflow-y: scroll;
        overflow-x: auto;
        max-height: 350px;
    }

    .ClaimAmtList td, .ClaimAmtList th {
        padding: 5px;
        min-width: 80px;
        height: 25px;
        border: inset 1px lightblue;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 80px;
        word-break: break-all;
        text-align: center;
    }
</style>



<link href="~/Content/css/BeatPicker.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.0.min.js"></script>
<script src="~/Content/js/BeatPicker.js"></script>
<link href="~/Content/assets/css/style.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.9.1.min.js"></script>
<link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
<link href="~/Content/assets/css/form-design.css" rel="stylesheet" />
<link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />

<div class="row-fluid">
    <div class="box span12">
        <table width="100%">
            <tr>
                <td style="text-align:left; padding-left:10px">
                    <span>Total Storage Locations: @Model.Count</span>
                </td>
                <td style="text-align:right;padding-right:15px"></td>
            </tr>
        </table>

        <div class="box-content" style="overflow-x:scroll; background:#ffffff">
            <center>
                <table id="headerTable" class="ClaimAmtList" border="1" cellpadding="2" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr.No.</th>
                            <th>Zone</th>
                            <th>Block</th>
                            <th>Row/Level</th>
                            <th style="min-width: 120px; max-width: 120px; word-break: break-all">Storage Locations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">
                                    @i
                                    @{
                            i = i + 1;
                                    }
                                </td>
                                <td>@item.WarehouseZoneName</td>
                                <td>@item.BlockName</td>
                                <td>@item.LevelName</td>
                                <td style="min-width: 120px; max-width: 120px; word-break: break-all">@item.LocationShortname</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </center>  


                @*@if (Model.Count>0)
                {
                    @Html.ActionLink("Generate Storage Location", "GenerageStorageLocations", null, new { @class = "btn btn-success mrg-left mrg-top" })
                }*@
            </div>
        </div>
</div>




