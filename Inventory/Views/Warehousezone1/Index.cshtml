@model IEnumerable<ModelLayer.Models.ViewModel.WarehouseZoneViewModel>

@{
    ViewBag.Title = "Index";
}

<style>
    .pro_th thead tr th {
        font-size: 12px;
        border-bottom: 1px solid #EEE;
        padding: 6px 0;
        background-color: #26A69A;
    }

    .pro_th tbody td {
        font-size: 12px;
        text-align: center;
        border: 1px solid #EEE;
    }

        .pro_th tbody td.btn-set {
            white-space: nowrap;
        }

    .dataTables_length {
        margin-left: 0px !important;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 26px;
    }

    form {
        margin: 0 0 -15px;
    }
</style>


<link href="~/Content/css/Site.css" rel="stylesheet" />
<link href="~/Content/css/searching.css" rel="stylesheet" />
<link href="~/Content/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/jQuery-Table-Plugin.js"></script>

<div id="content" class="span10" style="min-height: 403px;">
    <div class="content">
        <p>
            <div>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </div>

        </p>
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header">
                    <h2>
                        <i class="icon-list-alt"></i>
                        <span class="break"></span>
                        List Of WarehouseZone
                    </h2>

                </div>
                <div class="box-content">

                    <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" width="100%">
                        <tr>
                            <th>
                                Area
                            </th>
                            <th>
                                Warehouse Zone
                            </th>                            
                            @*<th></th>*@
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Zone
                                </td>
                                <td>
                                    @item.Abbreviation
                                </td>
                                @*<td>*@
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.WarehouseZoneID }, new { @class = "btn btn-small btn-info" })|@Html.ActionLink("Details", "Details", new { id = item.WarehouseZoneID }, new { @class = "btn btn-small btn-info" })*@
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                @*</td>*@
                            </tr>
                        }
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
