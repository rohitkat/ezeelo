@{
    ViewBag.Title = "Print";
    //Layout = null;
}

<style>
    .btn_Print {
        margin-bottom: 7px;
        margin-top: 7px;
        margin-left: 5px;
    }

    .section {
        position: relative;
        border: 1px solid #000;
        padding-top: 6px;
        margin-left: 5px;
        margin-top: 40px;
        background: #AB8F65;
    }

        .section.positioned {
            position: absolute;
            top: 100px;
            left: 100px;
            width: 800px;
            box-shadow: 0 0 15px #333;
        }

    .container_tbl {
        overflow-y: scroll;
        height: 620px;
        margin-top: 29px;
        background:#fff;
    }

    .table {
        border-spacing: 0;
        width: 100%;
        margin-bottom:0px!important;
    }

    td + td {
        border-left: 1px solid #eee;
    }

    td, th {
        border-bottom: 1px solid #eee;
        background: #ddd;
        color: #000;
        padding: 10px 25px;
    }

    #myTable thead tr th {
        height: 0;
        line-height: 0 !important;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        color: transparent;
        border: none;
        white-space: nowrap;
    }

    th div {
        position: absolute;
        background: transparent;
        color: #fff;
        padding: 6px 10px;
        top: 6px;
        margin-left: -8px;
        line-height: normal;
        border-left: 1px solid #DDD;
    }

    th:first-child div {
        border: none;
    }

    .wrap {
        margin-top: 105px;
    }

    td:nth-child(1) {
        max-width: 14px;
        word-wrap: break-word;
    }

    td:nth-child(2) {
        max-width: 12px;
        word-wrap: break-word;
    }

    td:nth-child(3) {
        max-width: 13px;
        word-wrap: break-word;
    }

    td:nth-child(4) {
        max-width: 12px;
        word-wrap: break-word;
    }

    td:nth-child(5) {
        max-width:30px;
        word-wrap: break-word;
    }

    td:nth-child(6) {
        max-width:13px;
        word-wrap: break-word;
    }

    td:nth-child(7) {
        max-width: 8px;
        word-wrap: break-word;
    }

    td:nth-child(8) {
        max-width: 20px;
        word-wrap: break-word;
    }

    td:nth-child(9) {
        max-width: 12px;
        word-wrap: break-word;
    }

    td:nth-child(10) {
        max-width: 11px;
        word-wrap: break-word;
    }


</style>

@model IEnumerable<ModelLayer.Models.ViewModel.OrderTransactionReportViewModel>

<div id="content" class="span10">
    <div class="span12">
        <div class="span12" style="text-align: left; padding: 0px 6px;">
            <h2 id="btnPrint" class="btn btn-primary">Print</h2>
        </div>
        <div class="section" id="dvContainer" style="margin-top:50px;">
                    <div class="table container_tbl">
                        <table class="table" id="myTable">
                            <thead>
                                <tr class="header">
                                    <th>
                                        <div>Order Code</div>
                                    </th>
                                    <th>
                                       <div> Shop Name</div>
                                    </th>
                                    <th>
                                        <div>Order Amount</div> 
                                    </th>
                                    <th>
                                        <div>Name</div>
                                    </th>
                                    <th>
                                        <div>Email</div>
                                    </th>
                                    <th>
                                        <div>Primary Mobile</div>
                                    </th>

                                    <th>
                                        <div>Pincode</div> 
                                    </th>
                                    <th>
                                        <div>Shipping Address</div>
                                    </th>
                                    <th>
                                        <div>City</div>
                                    </th>
                                    <th>
                                        <div>Franchise</div>  @*////added for Multiple MCO in Same City*@
                                    </th>
                                    <th>
                                        <div>Order Placed Date</div>
                                    </th>

                                </tr>
                            </thead>
                           
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShopName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.RegEmail)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RegMobile)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pincode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShippingAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShopFranchiseName) @*////added for Multiple MCO in Same City*@
                                        </td>

                                        <td>
                                            @{string lDate = "";}
                                            @if (item.CreateDate != null)
                                            {
                                                lDate = item.CreateDate.ToString("dd/MM/yyyy");
                                            }
                                            @lDate
                                        </td>

                                    </tr>
                                }
                           

                        </table>
                    </div>
                </div>
            </div>
    
        </div>
 <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("#btnPrint").live("click", function () {
        var divContents = $("#dvContainer").html();
        var printWindow = window.open('', '', 'height=400,width=800');
        printWindow.document.write('<html><head><title>Order Transaction Report</title>');
        printWindow.document.write('</head><body >');
        printWindow.document.write(divContents);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    });
</script>
