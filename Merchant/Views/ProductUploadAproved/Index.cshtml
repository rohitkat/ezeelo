@model  ModelLayer.Models.ViewModel.ProductUploadTempViewModelList

@{
    ViewBag.Title = "Index";
}

<script src="~/Content/js/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
        });
        // alert("1");
    });
</script>



<div id="content" class="span10">
    <section>
        <div class="row-fluid sortable">
            <div class="box span12 ">
                <div class="box-header">
                    <h2><i class="icon-edit"></i><span class="break"></span>List Of Product</h2>

                </div>
                <div class="box-content">
                    <table class="table border-table display" id="tblData">
                        @for (var i = 0; i < Model.ProductUploadTempViewModelLIst.Count(); i++)
                        {
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th style="width:202px;">
                                        Product Name
                                    </th>

                                    <th>
                                        Quantity
                                    </th>
                                    <th>
                                        Category Name
                                    </th>
                                    <th>
                                        Brand Name
                                    </th>
                                    <th>
                                        Product Varient(s)
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>

                            </tfoot>
                            break;
                        }

                        @for (var i = 0; i < Model.ProductUploadTempViewModelLIst.Count(); i++)
                        {

                            <tr>
                                <td>
                                    @{string s = @Model.ProductUploadTempViewModelLIst[i].ImageLocation;
                                    <img src="@s" style=" width: 44px; height: 44px; border-radius: 8px;" alt="" onerror="this.src ='../../Content/assets/img/No_thumbnail.png' " />
                                    }
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].Qty)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].PackSize)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].BrandName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].ProductVarientID) Varient(s)
                                </td>
                                <td class="action-set">

                                    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductUploadTempViewModelLIst[i].ID }, new { @class = "btn btn-small grid-btn1" })
                                    @Html.ActionLink("Add Component", "LoadVarient", new { productID = Model.ProductUploadTempViewModelLIst[i].ID }, new { @class = "btn btn-small grid-btn3" })

                                </td>
                            </tr>

                        }

                    </table>

                </div>
            </div>
        </div>
    </section>
</div>
