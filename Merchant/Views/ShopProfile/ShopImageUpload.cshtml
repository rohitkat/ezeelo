@model ModelLayer.Models.ViewModel.ProductUploadTempViewModel
@{
    //Layout = null;
}
<style>
    .file-footer-buttons input[type="radio"] {
        display: none;
    }

    div.uploader {
    }

    .fileinput-remove-button {
        display: none !important;
    }

    .fileinput-upload-button {
        display: none !important;
    }

    .kv-file-upload {
        display: none !important;
    }

    .btn-file .action {
        display: none !important;
    }

    div.uploader {
        position: absolute !important;
        left: 0;
        opacity: 0;
        width: 88px !important;
    }

    .file-drop-zone {
        height: 70% !important;
    }

    .file-actions {
        display: none;
    }

    .kv-main {
        height: 338px;
        background: rgba(255, 255, 255, 0.41);
        border-radius: 5px;
        border: 0 none;
        box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
        margin-bottom: 10px;
        margin-top: 10px;
        padding: 4px;
    }

    .file-preview-frame {
        height: 138px !important;
    }

    .file-actions; {
        margin-top: 6px;
    }

    .fileinput-cancel-button {
        display: none !important;
    }

    .upload-ChooseFile {
        margin-top: 22px;
        min-height: 239px;
        background: rgba(255, 255, 255, 0.41);
        padding: 20px !important;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-shadow: none;
    }

        .upload-ChooseFile table tr td {
            font-size: 15px !important;
        }
</style>
<link href="~/Content/css/bootstrap.min2.css" rel="stylesheet" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link href="~/Content/css/fileinput.min.css" rel="stylesheet" />
<script src="~/Content/js/fileinput_locale_fr.js"></script>
<script src="~/Content/js/fileinput_locale_es.js"></script>
<script src="~/Content/js/fileinput.min.js"></script>
<script>
    $('#file-fr').fileinput({
        language: 'fr',
        uploadUrl: '#',
        allowedFileExtensions: ['jpg', 'png', 'gif', 'JPG', 'PNG', 'GIF', 'jpeg', 'JPEG'],
    });
    $('#file-es').fileinput({
        language: 'es',
        uploadUrl: '#',
        allowedFileExtensions: ['jpg', 'png', 'gif', 'JPG', 'PNG', 'GIF', 'jpeg', 'JPEG'],
    });
    $("#file-0").fileinput({
        'allowedFileExtensions': ['jpg', 'png', 'gif', 'JPG', 'PNG', 'GIF', 'jpeg', 'JPEG'],
        language: 'es',
        uploadUrl: '#',
    });
    $("#file-1").fileinput({
        uploadUrl: '#', // you must set a valid URL here else you will get an error
        allowedFileExtensions: ['jpg', 'png', 'gif', 'JPG', 'PNG', 'GIF', 'jpeg', 'JPEG'],
        overwriteInitial: false,
        maxFileSize: 1000,
        maxFilesNum: 10,
        //allowedFileTypes: ['image', 'video', 'flash'],
        slugCallback: function (filename) {
            return filename.replace('(', '_').replace(']', '_');
        }
    });

    $("#file-3").fileinput({
        showUpload: false,
        showCaption: false,
        browseClass: "btn btn-primary btn-lg",
        fileType: "any",
        previewFileIcon: "<i class='glyphicon glyphicon-king'></i>"
    });
    $("#file-4").fileinput({
        uploadExtraData: { kvId: '10' }
    });
    $(".btn-warning").on('click', function () {
        if ($('#file-4').attr('disabled')) {
            $('#file-4').fileinput('enable');
        } else {
            $('#file-4').fileinput('disable');
        }
    });
    $(".btn-info").on('click', function () {
        $('#file-4').fileinput('refresh', { previewClass: 'bg-info' });
    });

    $(document).ready(function () {
        $("#test-upload").fileinput({
            'showPreview': false,
            'allowedFileExtensions': ['jpg', 'png', 'gif', 'JPG', 'PNG', 'GIF', 'jpeg', 'JPEG'],
            'elErrorContainer': '#errorBlock'
        });

    });
</script>

<div id="content" class="span12">


    <div class="box-header">
        <h2><i class="icon-home"></i><span class="break"></span>Shop Images And Description</h2>
    </div>
    <div class="box-content">
        @using (Html.BeginForm("ShopImageUpload", "ShopProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="DespBox">
                <div class="control-group mrg-top">
                    <div class="control-group hidden-phone">
                        @Html.LabelFor(model => model.Description)
                        <div class="">
                            @Html.TextAreaFor(model => model.Description, new { @class = "discrip_box span12", @requird = "requird", id = "textarea2", maxlength = 1000 })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                </div>
                <div class="upload-ChooseFile">

                    <table class="table ">
                        <tr>
                            <td>Shop Images</td>
                        </tr>
                        <tr>
                            <td colspan="2" class="uploag_iconCntr">

                                @using (Html.BeginForm("Remove", "ShopProfile", FormMethod.Post))
                                {
                                    for (int i = 0; i < Model.Path.Count(); i++)
                                    {
                                        <div class="uplaod-imgshow">
                                            <img src="@Model.Path[i]" style="width:167px; height:167px; float: left;" id="srcID" onerror="this.src = '../../Content/assets/img/No_thumbnail.png'" />
                                            @Html.HiddenFor(model => model.Path[i])
                                            <input name="submit" type="submit" id="Remove" value="Remove$@i" class="btn btn-dark-gray" />
                                        </div>


                                    }
                                }

                            </td>
                        </tr>

                    </table>
                </div>

            </div>




            <div class="kv-main">
                <div class="form-group input-group ">
                    <input id="Files" name="Files" class="file" type="file" multiple data-preview-file-type="any" data-upload-url="#">

                </div>
            </div>


            <div class="form-actions">
                <input name="submit" type="submit" id="Save" value="Save$" class=" btn-Ifrm-submit1 dollr pull-right" />
            </div>

        }
    </div>
</div>
