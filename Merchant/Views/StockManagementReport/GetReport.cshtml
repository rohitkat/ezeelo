<div class="select_city" style="float: right;margin-top: -43px;">
    <select name="ddlStatus" id="ddlStatus">
        <option value="0">Select Status</option>
        <option value="1">In Stock</option>
        <option value="2">Out Of Stock</option>
    </select>
</div>

<div class="section">
    <div class="table container_tbl">
        @if (Model.Count() > 0)
        {
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Qty
                        </th>
                        <th>
                            Level
                        </th>
                        <th>
                            Color
                        </th>
                        <th>
                            Size
                        </th>

                        <th>
                            Dim
                        </th>

                        <th>Material</th>
                        <th>Sale Rate</th>
                        <th>Mrp</th>
                        <th>Upload</th>
                        <th>Modified</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (item.Quantity == 0)
                            {
                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>

                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>

                                <td style="background-color: rgba(255, 0, 0, 0.63);">@Html.DisplayFor(modelItem => item.ReorderLevel)</td>


                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.ColorName)
                                </td>
                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.SizeName)
                                </td>
                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.DimensionName)
                                </td>

                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.MaterialName

                            )
                                </td>



                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.SaleRate)
                                </td>
                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @Html.DisplayFor(modelItem => item.Mrp)
                                </td>
                                <td style="background-color: rgba(255, 0, 0, 0.63);">
                                    @{string lDate = "";}
                                    @if (item.ProductUploadDate != null)
                                    {
                                        lDate = item.ProductUploadDate.ToString("dd/MM/yyyy");
                                    }
                                    @lDate
                                </td>

                                <td>
                                    @{string lmDate = ""; DateTime modDate = new DateTime();}
                                    @if (item.ProductModifiedDate != null)
                                    {
                                        modDate = Convert.ToDateTime(item.ProductModifiedDate);
                                        lmDate = modDate.ToString("dd/MM/yyyy");
                                    }
                                    @lmDate
                                </td>
                                <td style="background-color: rgba(255, 0, 0, 0.63);">Out Of Stock</td>
                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>

                                <td>@Html.DisplayFor(modelItem => item.ReorderLevel)</td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.ColorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SizeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DimensionName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.MaterialName

                            )
                                </td>



                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleRate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mrp)
                                </td>
                                <td>
                                    @{string lDate = "";}
                                    @if (item.ProductUploadDate != null)
                                    {
                                        lDate = item.ProductUploadDate.ToString("dd/MM/yyyy");
                                    }
                                    @lDate
                                </td>
                                <td>
                                    @{string lmDate = ""; DateTime modDate = new DateTime();}
                                    @if (item.ProductModifiedDate != null)
                                    {
                                        modDate = Convert.ToDateTime(item.ProductModifiedDate);
                                        lmDate = modDate.ToString("dd/MM/yyyy");
                                    }
                                    @lmDate
                                </td>

                                <td>In Stock</td>

                            }
                        </tr>

                    }
                </tbody>



            </table>
        }
    </div>
</div>
<div id="Pager">
    <div class="wrap">
        <div id="slider1" class="slider">
            <ul>
                @for (int c = 1; c <= @ViewBag.TotalPages; c++)
                {
                    <li><a class="page-number" href="javascript:void();">@c</a></li>
                }
            </ul>
        </div>
        <div class="controls" style="margin-top:-27px; background:#F9F9F9">
            <a href="#noname" class="prev-slide"><<</a>
            <a href="#noname" class="next-slide" style="float: right; margin-right: 299px;">>></a>
        </div>
    </div>
    <span class="totalcount"><b>Showing @ViewBag.PageSize of @ViewBag.TotalCount enteries</b></span>
</div>

<div class="loader">
    <img id="loader_img" src="~/Content/img/loader.gif" style="display: none" />
</div>
<script>
    $(document).ready(function () {
        $("#Pager .page-number").click(function (e) {

            //alert($(this).html());
            $('#loader_img').show();
            var StockStatus = $("select#ddlStatus option:selected").val();
            //alert($(this).html());
            var pagecount = 0;
            var page = parseInt($(this).html());
            if (page > 1) {
                pagecount = 1;
            }
            var fromDate = "@ViewBag.fromDate";
            var toDate = "@ViewBag.toDate";

            $.ajax({
                url: '@Url.Action("GetReport", "StockManagementReport")',
                data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'StockStatus': StockStatus },
                type: "POST",
                cache: false,
                success: function (data) {
                    //alert(data);
                    $('#loader_img').hide();
                    $('#divReport').empty();
                    $('#divReport').append(data);
                    $("select#ddlStatus").val(StockStatus);

                },
                error: function (data) {

                }
            });
        });
    });

    $("select#ddlStatus").bind('change', function () {
        $('#loader_img').show();

        var pagecount = 0;
        //var page = parseInt($(this).html());
        //if (page > 1) {
        //    pagecount = 1;
        //}
        var fromDate = "@ViewBag.fromDate";
        var toDate = "@ViewBag.toDate";
        var shopID = "@ViewBag.shopID";
        var StockStatus = $("select#ddlStatus option:selected").val();
        var page = 1;
        $.ajax({
            url: '@Url.Action("GetReport", "StockManagementReport")',
            data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'shopID': shopID, 'StockStatus': StockStatus },
            type: "POST",
            cache: false,
            success: function (data) {
                //alert(data);
                $('#loader_img').hide();
                $('#divReport').empty();
                $('#divReport').append(data);
                $("select#ddlStatus").val(StockStatus);

            },
            error: function (data) {

            }
        });
    });
</script>

