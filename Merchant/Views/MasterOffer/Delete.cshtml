@model ModelLayer.Models.Offer

@{
    ViewBag.Title = "Delete";
}

<style>
    .btn-primary {
        background-color: #DA7741;
        border: 1px solid#DA7741;
    }

        .btn-primary:hover {
            background-color: #DA7741;
            border: 1px solid#DA7741;
        }
    </style>

<div>@Html.ValidationMessage("Error")</div>

  
    <div id="content" class="span10">
        <div class="row-fluid">
          
                <div class="box-header">
                    <h2><i class="icon-edit"></i><span class="break"></span>Delete Offer</h2>

                </div>
                <div class="box-content ">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.LabelFor(model => model.ShortName, "Offer Name", new { @class = "control-label span2" })
                            @*@Html.DisplayNameFor(model => model.ShortName)*@

                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ShortName)
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Description, "Description", new { @class = "control-label span2" })
                            @*@Html.DisplayNameFor(model => model.Description)*@
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>


                    </dl>
                </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" onclick="return confirm('Are you sure you wanted to delete this offer?');" /> |
                @Html.ActionLink("Back to List", "Index", string.Empty, new { @class = "btn btn-brown" })
            </div>
        }


    </div>
