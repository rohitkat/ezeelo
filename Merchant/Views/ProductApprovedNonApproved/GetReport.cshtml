<div class="section">
    <div class="table container_tbl">
        <table class="table" id="myTable">
            <thead>
                <tr class="hed-tble">
                    <th>
                        Product Name
                    </th>
                    <th>
                        product Description
                    </th>
                    <th>
                        Category Name
                    </th>
                    @*<th>
                        Merchant Name
                    </th>
                    <th>
                        Shop Name
                    </th>*@
                    @if (ViewBag.uploadprod == 2)
                    {
                        <th style="width:83px;">Approved Date</th>
                    }
                    else if (ViewBag.uploadprod == 3)
                    {
                        <th>Product Upload Date</th>
                    }
                    else
                    {
                        <th>Product Upload Date</th>
                        <th>Product Approved Date</th>
                    }
                    @if (ViewBag.uploadprod == 2 || ViewBag.uploadprod == 3)
                    {
                        <th style="width:82px;">Modified Date</th>
                    }
                    @if (ViewBag.uploadprod == 1)
                    {
                        <th>
                            Status
                        </th>
                    }
                    <th>Active/Deactive Status</th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.Raw(item.productDescription)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.CatName)</td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.MerchantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShopName)
                    </td>*@
                    @if (ViewBag.uploadprod == 2)
                    {
                        <td>
                            @{string lADate = ""; DateTime dtA = new DateTime();}
                            @if (item.ProductApprovedDate != null)
                            {
                                dtA = Convert.ToDateTime(item.ProductApprovedDate);
                                lADate = dtA.ToString("dd/MM/yyyy");
                            }
                            @lADate
                        </td>
                    }
                    else if (ViewBag.uploadprod == 3)
                    {
                        <td>
                            @{string lUDate = ""; DateTime dtU = new DateTime();}
                            @if (item.ProductUploadDate != null)
                            {
                                dtU = Convert.ToDateTime(item.ProductUploadDate);
                                lUDate = dtU.ToString("dd/MM/yyyy");
                            }
                            @lUDate
                        </td>
                    }
                    else
                    {
                        <td>
                            @{string lUDate = ""; DateTime dtU = new DateTime();}
                            @if (item.ProductUploadDate != null)
                            {
                                dtU = Convert.ToDateTime(item.ProductUploadDate);
                                lUDate = dtU.ToString("dd/MM/yyyy");
                            }
                            @lUDate
                        </td>
                        <td>
                            @{string lADate = ""; DateTime dtA = new DateTime();}
                            @if (item.ProductApprovedDate != null)
                            {
                                dtA = Convert.ToDateTime(item.ProductApprovedDate);
                                lADate = dtA.ToString("dd/MM/yyyy");
                            }
                            @lADate
                        </td>
                    }
                    @if (ViewBag.uploadprod == 2 || ViewBag.uploadprod == 3)
                    {
                        <td>
                            @{string lMDate = ""; DateTime dtM = new DateTime();}
                            @if (item.ProductModifiedDate != null)
                            {
                                dtM = Convert.ToDateTime(item.ProductModifiedDate);
                                lMDate = dtM.ToString("dd/MM/yyyy");
                            }
                            @lMDate
                        </td>
                    }

                    @if (ViewBag.uploadprod == 1)
                    {
                        <td>@Html.DisplayFor(modelItem => item.ApprovalRemark)</td>
                    }
                    @if (item.IsActive == true)
                    {
                        <td>
                            Active
                        </td>
                    }
                    else
                    {
                        <td>
                            DeActive
                        </td>
                    }

                </tr>
            }
        </table>
    </div>
