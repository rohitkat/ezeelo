@model ModelLayer.Models.OwnerBank

@{
    ViewBag.Title = "Edit";
    Layout = null;
}


<style>
    .NameDescription control-group {
        float: left;
    }
    .field-validation-error {
        color: #000000 !important;
        margin-top:-8px!important;
    }

    .succes-msg {
        color: #31A012;
        font-size: 20px;
    }
</style>
<link href="~/Content/assets/css/style.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.9.1.min.js"></script>
@*<script src="~/Content/js/jquery.easing.min.js"></script>*@
<link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
<link href="~/Content/assets/css/form-design.css" rel="stylesheet" />
<div id="content" class="span10">
    <div style ="margin-top:20px;">
        @if (ViewBag.Message != null)
{
    <span class="succes-msg" style="margin: 0 12px;">@ViewBag.Message</span>
}
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-content">

                    <div class="form-horizontal" id="msform1">

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.ID)
                        <div class="control-group mrg-btm clearfix">
                            <div class="NameDescription">
                                <div class="control-group  mrg-left">
                                    @Html.LabelFor(model => model.AccountName, new { @class = " col-md-2" })
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AccountName, new { required = "required" })
                                        @Html.ValidationMessageFor(model => model.AccountName)
                                    </div>
                                </div>
                                <div class="control-group mrg-left">
                                    @Html.LabelFor(model => model.BankID, "BankID", new { @class = "col-md-2" })
                                    <div class="">
                                        @Html.DropDownList("BankID", String.Empty)
                                        @Html.ValidationMessageFor(model => model.BankID)
                                    </div>
                                </div>

                                <div class="control-group mrg-left">
                                    @Html.LabelFor(model => model.BranchName, new { @class = "col-md-2" })
                                    <div class="">
                                        @Html.TextBoxFor(model => model.BranchName, new { required = "required" , @class = "input-width" })
                                        @Html.ValidationMessageFor(model => model.BranchName)
                                    </div>
                                </div>

                                <div class="control-group mrg-left">
                                    @Html.LabelFor(model => model.IFSCCode, new { @class = "col-md-2" })
                                    <div class="">
                                        @Html.TextBoxFor(model => model.IFSCCode, new { required = "required", maxlength = 11 , @class = "input-width" })
                                        @Html.ValidationMessageFor(model => model.IFSCCode)
                                    </div>
                                </div>
                                <div class="control-group mrg-left">
                                    @Html.LabelFor(model => model.MICRCode, new { @class = "col-md-2" })
                                    <div class="">
                                        @Html.TextBoxFor(model => model.MICRCode, new { required = "required", maxlength = 15 , @class = "input-width" })
                                        @Html.ValidationMessageFor(model => model.MICRCode)
                                    </div>
                                </div>
                                <div class="clr"></div>
                            </div>
                        </div>
                        <div class="clr"></div>
                        <div class="control-group mrg-btm clearfix">
                            <div class="NameDescription">
                                <div class="control-group mrg-left">
                                    @Html.LabelFor(model => model.AccountNumber, new { @class = "col-md-2" })
                                    <div class="">
                                        @Html.TextBoxFor(model => model.AccountNumber, new { required = "required", maxlength = 16 , @class = "input-width" })
                                        @Html.ValidationMessageFor(model => model.AccountNumber)
                                    </div>
                                </div>

                                <div class="control-group mrg-left">
                                    @Html.LabelFor(model => model.BankAccountTypeID, "BankAccountTypeID", new { @class = "col-md-2" })
                                    <div class="">
                                        @*@Html.DropDownList("BankAccountTypeID", String.Empty)*@
                                        @Html.DropDownList("BankAccountTypeID", null, "Select Account Type", new { required = "required", @class = "input-width" })
                                        @Html.ValidationMessageFor(model => model.BankAccountTypeID)
                                    </div>
                                </div>

                                <div class="clr"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.BusinessTypeID, "BusinessTypeID", new { @class = "col-md-2" })*@
                            <div class="col-md-10">
                                @*@Html.DropDownList("BusinessTypeID", String.Empty)*@
                                @Html.HiddenFor(model => model.BusinessTypeID)
                                @Html.ValidationMessageFor(model => model.BusinessTypeID)
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.OwnerID, new { @class = "col-md-2" })*@
                            <div class="col-md-10">
                                @* @Html.EditorFor(model => model.OwnerID)*@
                                @Html.HiddenFor(model => model.OwnerID)
                                @Html.ValidationMessageFor(model => model.OwnerID)
                            </div>
                        </div>


                        <div class="form-group">
                            @*@Html.LabelFor(model => model.CreateDate, new { @class = "col-md-2" })*@
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.CreateDate)*@
                                @Html.HiddenFor(model => model.CreateDate)
                                @Html.ValidationMessageFor(model => model.CreateDate)
                            </div>
                        </div>

                        <div class="form-group">
                            @*@Html.LabelFor(model => model.CreateBy, "CreateBy", new { @class = "col-md-2" })*@
                            <div class="col-md-10">
                                @*@Html.DropDownList("CreateBy", String.Empty)*@
                                @Html.HiddenFor(model => model.CreateBy)
                                @Html.ValidationMessageFor(model => model.CreateBy)
                            </div>
                        </div>






                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default btn-Ifrm-submit mrg-left mrg-top" style="margin-top:24px;"  />
                        </div>
                    </div>
                </div>


            </div>
        </div>

    }
</div>

