@model IEnumerable<ModelLayer.Models.ViewModel.ProductOfferViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="span10" id="content">
    <div class="row-fluid sortable ui-sortable">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Component Offer Duration</h2>
                <div class="pull-right jumpBtn">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn grid-addpro btn-small CreateFormBtn" })
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered display prodct_upl_temp" id="tblData" style="border: 1px Solid #B3A185;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OfferName)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.StartDateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndDateTime)
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OfferName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.StartDateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDateTime)
                            </td>
                           
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.OfferID }, new { @class = "btn btn-small grid-btn1" })
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
    </div>
