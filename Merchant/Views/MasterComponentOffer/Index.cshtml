@model IEnumerable<ModelLayer.Models.ComponentOffer>

@{
    ViewBag.Title = "Index";
}

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div class="span10" id="content">
    <div class="row-fluid sortable ui-sortable">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Master Component Offer</h2>
                <div class="pull-right jumpBtn">
                  @Html.ActionLink("Create New", "Create", null, new { @class = "btn grid-addpro btn-small CreateFormBtn" })
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered display prodct_upl_temp" id="tblData" style="border: 1px Solid #B3A185;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Component.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShortName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfferInRs)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OfferInPercent)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>Action</th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Component.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShortName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OfferInRs)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OfferInPercent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small grid-btn1" })|
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-small grid-btn2" })
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
    </div>
