@model ModelLayer.Models.ViewModel.MerchantRegisterNowViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@*<h2>Create</h2>*@
<style type="text/css">
    .container {
        margin-left: 90px !important;
    }
</style>
@using (Html.BeginForm("Login", "MerchantRegisterNow", FormMethod.Post))
{
   
    if (ViewBag.Message != null)
    { 
        @Html.Label("Message")
    }
        <div>
            @Html.Partial("_Login")
        </div>

}
@using (Html.BeginForm())
