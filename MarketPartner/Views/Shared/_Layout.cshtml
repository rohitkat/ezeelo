        $("#lnk-Online").bind("click", function (event) {
            // var cityid = $("select#City option:selected").val();
            //if (cityid == 0) {
            //    $('#Pincode').empty();
            //    $('#Pincode').append('<option value=0>Select Pincode</option>');
           
            //    return;
