@model IEnumerable<ModelLayer.Models.MailReceiver>

@{
    ViewBag.Title = "MailReceiver";
}
<style>
    .dataTables_length {
        margin-left: 0px;
        margin-top: 7px;
    }

    .pagination {
        padding: 0px 40px;
    }

    input[type=text] {
        border: groove !important;
        border-width: 1px !important;
        border-color: black !important;       
    }
    select {
        border: groove !important;
        border-width: 1px !important;
        border-color: black !important;
    }

</style>
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="#">All Mail Receiver</a>
        </li>
    </ul>
    <div class="row-fluid">

        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>@Html.ActionLink("Create New", "AddMailReceiver", null, new { style="color:blue"})</h2>

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @item.CreatedDate.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @Html.ActionLink("Remove", "DisableMailReceiver", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><!--/span-->

    </div>
</div>

