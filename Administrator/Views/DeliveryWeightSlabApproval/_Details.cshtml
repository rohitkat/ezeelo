@model ModelLayer.Models.DeliveryWeightSlab

@{
    ViewBag.Title = "Details Weight Slab [ " + @Model.MaxWeight + " ]";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid" style="margin-left:15px;margin-top:28px;">
    <div class="box span12">
        <div class="box-header">
            <h2>
                <i class="icon-list-alt"></i><span class="break"></span>
                Details Weight Slab [ @Model.MaxWeight ]
            </h2>
        </div>
        <!-- /widget-header -->
        <div class="box-content">
            <div class="big-stats-container">
                <div class="widget-content matchdivheight">

                    <dl class="dl-horizontal">
                        <dt>
                            Max Weight
                        </dt>

                        <dd>
                            &nbsp;@Html.DisplayFor(model => model.MaxWeight)
                        </dd>
                        <hr />
                        <dt>[In Region]</dt>
                        <dd>&nbsp;</dd>
                        <dt>
                            Normal Charge
                        </dt>

                        <dd>
                            &nbsp;@Html.DisplayFor(model => model.NormalRateWithinPincodeList)
                        </dd>

                        <dt>
                            Express Charge
                        </dt>

                        <dd>
                            &nbsp;@Html.DisplayFor(model => model.ExpressRateWithinPincodeList)
                        </dd>
                        <hr />
                        <dt>[Out Region]</dt>
                        <dd>&nbsp;</dd>
                        <dt>
                            Normal Charge
                        </dt>

                        <dd>
                            &nbsp;@Html.DisplayFor(model => model.NormalRateOutOfPincodeList)
                        </dd>

                        <dt>
                            Express Charge
                        </dt>

                        <dd>
                            &nbsp;@Html.DisplayFor(model => model.ExpressRateOutOfPincodeList)
                        </dd>

                        <dt>
                            Is Approved
                        </dt>

                        <dd>
                            &nbsp;@Html.DisplayFor(model => model.IsApproved)
                        </dd>

                        <dt>
                            Is Active
                        </dt>

                        <dd>
                            &nbsp;@Html.DisplayFor(model => model.IsActive)
                        </dd>
                    </dl>
                    <div class="form-actions" style="    padding-left: 180px;">
                        @using (Html.BeginForm("Approve", "DeliveryWeightSlabApproval", new { ID = @Model.ID, UID = @ViewBag.UID }, FormMethod.Post))
                        {
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { ID = @Model.ID, UID = @ViewBag.UID }, new { @class = "btn btn-danger" })
                                <input type="submit" class="btn btn-success" value="Approve" />
                            </div>
                        }
                    </div>
                    @Html.ActionLink("Back to List", "Index", new { UID = ViewBag.UID }, new { @class = "btn" })
                </div>
            </div>
            <!-- /widget-content -->
        </div>
    </div>
</div>



<script>
    function Back() {
        $('#divtable').removeClass('span8');
        $('#divtable').addClass('span12');
        window.parent.$("[id$=Details]").hide();
        $('#loader_img').hide();
    }
</script>

