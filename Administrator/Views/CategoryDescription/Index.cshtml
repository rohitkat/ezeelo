@{
    ViewBag.Title = "Index";
}
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="#">Index</a>
        </li>
    </ul>

    <div class="row-fluid">

        <div class="box span12">
            @*<div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>@Html.ActionLink("Create New", "Create")</h2>

            </div>*@
            <div class="box-content">
               
                @using (Html.BeginForm())
                {
                    <div style="width:100%;">
                        <div class="CategoryDiv">
                            <span>FirstLevelCategory</span>
                            @Html.DropDownList("FirstLevelCategory", "Select Category")
                        </div>
                        <div class="CategoryDiv">
                            <span>SecondLevelCategory</span>
                            @Html.DropDownList("SecondLevelCategory")
                        </div>
                        <div class="CategoryDiv">
                            <span>ThirdLevelCategory</span>
                            @Html.DropDownList("ThirdLevelCategory")
                        </div>
                    </div>
                    <div id="pageloaddiv"></div>
                    <div class="form-actions" style="clear:both;">
                        <input type="submit" name="Submit" class="btn btn-success" />
                    </div>
                    <div class="textDiv">
                        @if (ViewBag.Error != null)
                        {
                            <span style="color:red; font-weight:bold;">@ViewBag.Error</span>
                        }

                        @if (ViewBag.Content != null)
                        {
                            @Html.TextArea("Content", (string)@ViewBag.Content, new { @class = "textAria" })
                        }
                        else
                        {
                            @Html.TextArea("Content", new { @class = "textAria" })
                        }
                    </div>

                }
            </div>
        </div>
    </div>
</div>
                <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                <style>
                    #pageloaddiv {
                        position: fixed;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                        z-index: 1000;
                        background: url('../Content/Images/ajax_loader.gif') no-repeat center center;
                        background-size: 100px;
                        display: none;
                    }

                    .CategoryDiv {
                        width: 233px;
                        float: left;
                        padding: 10px;
                    }

                    .textDiv {
                        margin-left: 10px;
                        width: 100%;
                        float: left;
                    }

                    #Content {
                       
                    }

                    .textAria {
                        width: 95%;
                        min-height: 200px;
                        max-height: 100%;
                        margin-top:10px;
                    }
                </style>
                <script>
                    function myFunction(id, level) {


                        $.ajax({
                            type: "POST",
                            url: "/CategoryDescription/getDescription?catID=" + id + "&level=" + level,
                            datatype: "json",
                            success: function (msg) {
                                $("#Content").empty();
                                $("#Content").text(msg);

                            },
                            error: function (x, e) {
                                alert("Sorry  Problem in Content Loading.... ");
                            }
                        });
                    }
                    $(document).ready(function () {



                        $("#FirstLevelCategory").change(function () {
                            var id = $("#FirstLevelCategory option:selected").val();

                            $("#pageloaddiv").attr("display", "block");
                            $("#pageloaddiv").css("display", "block");
                            $.ajax({

                                type: "POST",
                                url: "/CategoryDescription/getCategories?catID=" + id + "&level=2",
                                datatype: "json",
                                success: function (msg) {

                                    $("#SecondLevelCategory").empty();
                                    $("#SecondLevelCategory").append("<option value=0> Select Category </option>");

                                    $.each(msg, function (index, item) {
                                        $("#SecondLevelCategory").append("<option value=" + item.id + ">" + item.name + "</option>");
                                    });

                                    myFunction(id, 1);
                                    $("#pageloaddiv").attr("display", "none");
                                    $("#pageloaddiv").css("display", "none");
                                },
                                error: function (x, e) {
                                    alert("Sorry  Problem in category Loading.... ");
                                    $("#pageloaddiv").attr("display", "none");
                                    $("#pageloaddiv").css("display", "none");
                                }
                            });

                        });

                        $("#SecondLevelCategory").change(function () {
                            var id = $("#SecondLevelCategory option:selected").val();
                            $("#pageloaddiv").attr("display", "block");
                            $("#pageloaddiv").css("display", "block");

                            $.ajax({

                                type: "POST",
                                url: "/CategoryDescription/getCategories?catID=" + id + "&level=3",
                                datatype: "json",
                                success: function (msg) {
                                    $("#ThirdLevelCategory").empty();
                                    $("#ThirdLevelCategory").append("<option value=0> Select Category </option>");

                                    $.each(msg, function (index, item) {
                                        $("#ThirdLevelCategory").append("<option value=" + item.id + ">" + item.name + "</option>");
                                    });
                                    myFunction(id, 2);
                                    $("#pageloaddiv").attr("display", "none");
                                    $("#pageloaddiv").css("display", "none");
                                },
                                error: function (x, e) {
                                    alert("Sorry  Problem in category Loading.... ");
                                    $("#pageloaddiv").attr("display", "none");
                                    $("#pageloaddiv").css("display", "none");
                                }
                            });

                        });

                        $("#ThirdLevelCategory").change(function () {
                            $("#pageloaddiv").attr("display", "block");
                            $("#pageloaddiv").css("display", "block");

                            var id = $("#ThirdLevelCategory option:selected").val();
                            myFunction(id, 3);

                            $("#pageloaddiv").attr("display", "none");
                            $("#pageloaddiv").css("display", "none");

                        });

                    });



                </script>
