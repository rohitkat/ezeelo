@model ModelLayer.Models.AccountingHead
@{
    ViewBag.Title = "Edit";
}
<div id="content" class="span10" style="min-height: 395px;">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="">List [ Accounting Head ]</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span6">
            <div class="box-header">
                <h2><i class="icon-list-alt"></i><span class="break"></span>Edit</h2>
            </div>
            <div class="box-content">
                <div class="row">
                    <div class="span12">
                        <div class="widget">
                            <!-- /widget-header -->
                            <div class="widget-content">
                                <div class="widget big-stats-container">
                                    <div class="widget-content">
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-horizontal">
                                                @Html.ValidationSummary(true)
                                                @Html.HiddenFor(model => model.ID)
                                                <div class="control-group">
                                                    <span class="control-label">Account Head</span>
                                                    <div class="controls">
                                                        @Html.EditorFor(model => model.Name)
                                                        @Html.ValidationMessageFor(model => model.Name)
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    <span class="control-label">IsActive</span>
                                                    <div class="controls">
                                                        @Html.EditorFor(model => model.IsActive)
                                                        @Html.ValidationMessageFor(model => model.IsActive)
                                                    </div>
                                                </div>
                                                <div class="form-action">
                                                    <div style="padding-left:180px;">
                                                        <input type="submit" value="Save" class="btn btn-success" />
                                                        @Html.ActionLink("Back to List", "Index", string.Empty, new { @class = "btn" })
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /widget-content -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
