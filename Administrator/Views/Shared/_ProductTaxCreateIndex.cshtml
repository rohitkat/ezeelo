
@model ModelLayer.Models.ViewModel.ProductTaxIndexView

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Create", "ProductTax"))
{
    @Html.AntiForgeryToken()
    <div class="span10" id="content">
        <ul class="breadcrumb">
            <li>
                <a href="index.html">LIST OF Taxable Product</a>
            </li>

        </ul>
        <div class="row-fluid">
            <div class="box">
                <div class="box-header">
                    <h2><i class="icon-edit"></i><span class="break"></span>Product Tax Index</h2>
                </div>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Brand
                        </th>
                        <th>
                            Color
                        </th>
                        <th>
                            Size
                        </th>
                        <th>
                            Material
                        </th>

                        <th>
                            Select <input type="checkbox" name="Test" onclick="SetAllCheckBoxes(this)" />
                        </th>

                    </tr>
                    @for (int i = 0; i < Model.ProductVarientByCategoryAndShop.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(x => x.ProductVarientByCategoryAndShop[i].ShopStockID)
                                @Html.DisplayFor(x => x.ProductVarientByCategoryAndShop[i].ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(x=>x.ProductVarientByCategoryAndShop[i].BrandName)
                            </td>
                            <td>
                                @Html.DisplayFor(x => x.ProductVarientByCategoryAndShop[i].ColorName)
                            </td>
                            <td>
                                @Html.DisplayFor(x => x.ProductVarientByCategoryAndShop[i].SizeName)

                            </td>

                            <td>
                                @Html.DisplayFor(x => x.ProductVarientByCategoryAndShop[i].MaterialName)

                            </td>
                            <td>
                                @Html.EditorFor(x => x.ProductVarientByCategoryAndShop[i].isSelected)

                            </td>

                        </tr>
                    }
                    <tr>
                        <td>@Html.Hidden("TaxMasterID", Model.TaxMasterID)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <input type="submit" id="submit" name="SUBMIT" class="btn btn-primary btn-jequery" />
    <span id="message"></span>


}


<script type="text/javascript">
function SetAllCheckBoxes(obj) {
    var c = new Array();
    c = document.getElementsByTagName('input');
    for (var i = 0; i < c.length; i++) {
        if (c[i].type == 'checkbox') {
            c[i].checked = obj.checked;
        }
    }
}
</script>