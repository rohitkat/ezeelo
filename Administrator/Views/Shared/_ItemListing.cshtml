@model IEnumerable<ModelLayer.Models.BlockItemsList>

<style>
    .img_cat img {
        width: 50px;
        height: 50px;
    }
</style>
<style>
    .btn_Print {
        margin-bottom: 7px;
        margin-top: 7px;
        margin-left: 5px;
    }

    .section {
        position: relative;
        border: 1px solid #000;
        padding-top:36px;
        margin-left:5px;
        margin-top:2px;
        background:#fff;
    }

        .section.positioned {
            position: absolute;
            top: 100px;
            left: 100px;
            width: 800px;
            box-shadow: 0 0 15px #333;
        }

    .container_tbl {
        overflow-y: scroll;
        height: 294px;
        margin-top: 29px;
    }

    table {
        border-spacing: 0;
        width: 100%;
        padding-bottom: 0px !important;
    }

    td + td {
        border-left: 1px solid #eee;
    }

    td, th {
        border-bottom: 1px solid #eee;
        background: #fff;
        color: #000;
        padding: 10px 25px;
    }

    .myTable thead tr th {
        height: 0;
        line-height: 0 !important;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        color: transparent;
        border: none;
        white-space: nowrap;
    }

    th div {
        position: absolute;
        background: transparent;
        color: #222;
        padding: 1px 10px;
        top: 3px;
        margin-left: -8px;
        line-height: normal;
        /* border-left: 1px solid #DDD; */
        padding-top: 42px;
    }

    th:first-child div {
        border: none;
    }

    .wrap {
        margin-top: 105px;
    }

    td:nth-child(1) {
        max-width: 0px;
        word-wrap: break-word;
    }

    td:nth-child(2) {
        max-width: 1px;
        word-wrap: break-word;
    }

    td:nth-child(3) {
        max-width: 40px;
        word-wrap: break-word;
    }

    td:nth-child(4) {
        max-width: 35px;
        word-wrap: break-word;
    }

    td:nth-child(5) {
        max-width: 5px;
        word-wrap: break-word;
    }

    td:nth-child(6) {
        max-width: 5px;
        word-wrap: break-word;
    }

    td:nth-child(7) {
        max-width: 1px;
        word-wrap: break-word;
    }

    td:nth-child(8) {
        max-width: 8px;
        word-wrap: break-word;
    }
    .ui-widget-header {border:none;background:none;
    }
</style>
<div class="section">
    <div class="container_tbl">
        <div style="width:100%; margin-top:10px;"></div>
        <table class="table myTable">
            <thead>
                <tr>
                    <th>
                        <div>Sr. No.</div>
                    </th>
                    <th>
                        <div>Image</div>
                    </th>
                    <th>
                        <div>Link Url</div>
                    </th>
                    <th>
                        <div>Tooltip</div>
                    </th>
                    <th>
                        <div>Start Date</div>
                    </th>
                    <th>
                        <div> End Date</div>
                    </th>
                    <th>
                        <div>Is Active</div>
                    </th>
                    <th> <div>Actions</div> </th>
                </tr>

            </thead>
            @foreach (var item in Model)
            {
                
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SequenceOrder)
                    </td>
                    <td class="img_cat">
                        <img src="@item.ImageName" onerror="this.src = '../../Content/Images/No_thumbnail.png'" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LinkUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tooltip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-success" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



<script src="~/Content/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".myTable").DataTable({
            "bDestroy": true,
            //"sPaginationType": "full_numbers",
            "bJQueryUI": true,
            "bInfo": false,
            "scrollY": 700,
            "scrollCollapse": true,
            "bPaginate": false,
            "iDisplayLength": 20,
            "bAutoWidth": false,
        });
    });
</script>