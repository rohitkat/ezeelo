@model ModelLayer.Models.DynamicCategoryProduct

@{
    ViewBag.Title = "Delete";
}
<style>
    .dl-horizontal dt {
        width: 175px;
        text-align: left;
    }
</style>

<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="index.html">Dynamic Category Product</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="halflings-icon user"></i><span class="break"></span>Delete</h2>
            </div>

            <p class="deleteMsg">Are you sure you want to delete this?</p>
            <div class="box-content">
             <dl class="dl-horizontal">
                        <dt>
                            Franchise Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Franchise.BusinessDetail.Name)
                        </dd>
                        <dt>
                            Category Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Product.Category.Name)
                        </dd>
                        <dt>
                            Product Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Product.Name)
                        </dd>

                        <dt>
                            Start Date
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StartDate)
                        </dd>

                        <dt>
                            End Date
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EndDate)
                        </dd>

                        <dt>
                            Is Active
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            @Html.ActionLink("Back to List", "Details", new { id = Model.FranchiseID }, new { @class = "btn btn-default" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

