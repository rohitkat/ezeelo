<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(function () {
        $('#State').change(function (e) {
            var selectedVal = $("#State option:selected").val();
            if (selectedVal > 0) {
                //alert(selectedVal);
                $.ajax({
                    type: "POST",
                    url: "getDistrict",
                    data: "{ StateID: '" + selectedVal + "'}",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    async: true,
                    cache: false,
                    success: function (msg) {
                        $('#PincodeID').empty();
                        $('#City').empty();
                        $('#District').empty();
                        $('#District').append('<option value=0>Select District</option>');
                        $.each(msg, function (index, item) {
                            $('#District').append('<option value=' + item.value + '>' + item.text + '</option>');
                        });
                    },
                    error: function (x, e) {
                        alert("The call to the server side failed. " + x.responseText);
                    }
                });
            }
        });



        $('#District').change(function (e) {
            var selectedVal = $("#District option:selected").val();
            if (selectedVal > 0) {
                //alert(selectedVal);
                $.ajax({
                    type: "POST",
                    url: "getCity",
                    data: "{ DistrictID: '" + selectedVal + "'}",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    async: true,
                    cache: false,
                    success: function (msg) {
                        $('#PincodeID').empty();
                        $('#City').empty();
                        $('#City').append('<option value=0>Select City</option>');
                        $.each(msg, function (index, item) {
                            $('#City').append('<option value=' + item.value + '>' + item.text + '</option>');
                        });
                    },
                    error: function (x, e) {
                        alert("The call to the server side failed. " + x.responseText);
                    }
                });
            }
        });



        $('#City').change(function (e) {
            var selectedVal = $("#City option:selected").val();
            if (selectedVal > 0) {
                //alert(selectedVal);
                $.ajax({
                    type: "POST",
                    url: "getPincode",
                    data: "{ CityID: '" + selectedVal + "'}",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    async: true,
                    cache: false,
                    success: function (msg) {

                        $('#PincodeID').empty();
                        $('#PincodeID').append('<option value=0>Select Pincode</option>');
                        $.each(msg, function (index, item) {
                            $('#PincodeID').append('<option value=' + item.value + '>' + item.text + '</option>');
                        });
                    },
                    error: function (x, e) {
                        alert("The call to the server side failed. " + x.responseText);
                    }
                });
            }
        });

    });


</script>