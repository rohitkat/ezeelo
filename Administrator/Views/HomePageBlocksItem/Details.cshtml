@model ModelLayer.Models.BlockItemsList

@{
    ViewBag.Title = "Details";
}
<style>
    .control-label {
        font-weight: bold;
    }
    .img {
        height: 100% !important;
    }
    .image_span7 {
      border-left: 2px dashed rgba(0, 136, 204, 0.15);
        padding-left: 42px;
        overflow: auto;
    } 
</style>
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="#">Details</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Home Page Block Item</h2>
            </div>
            <div class="box-content">
                <div class="span5">
                    <hr />
                    <div class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label col-md-2">Franchise Name:</label>
                            <div class="col-md-10 controls">
                                <span>@ViewBag.FranchiseName</span>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label col-md-2">Block Type Name:</label>
                            <div class="col-md-10 controls">
                                <span>@ViewBag.BlockTypeName</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label col-md-2">Start Date</label>
                            <div class="col-md-10 controls">
                                @Html.DisplayFor(model => model.StartDate)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label col-md-2"> End Date</label>
                            <div class="col-md-10 controls">
                                @Html.DisplayFor(model => model.EndDate)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label col-md-2"> Sequence Order</label>
                            <div class="col-md-10 controls">
                                @Html.DisplayFor(model => model.SequenceOrder)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label col-md-2">Link/Url</label>
                            <div class="col-md-10 controls">
                                @Html.DisplayFor(model => model.LinkUrl)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label col-md-2">Tooltip</label>
                            <div class="col-md-10 controls">
                                @Html.DisplayFor(model => model.Tooltip)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label col-md-2"> Is Active</label>
                            <div class="col-md-10 controls">
                                @Html.DisplayFor(model => model.IsActive)
                            </div>
                        </div>
                    </div>

                </div>
                <div class="span7 image_span7" style=" height: 450px;">
                    <label><b>Image</b></label>
                    <div style="border: 3px solid#CEC4C4; width: @ViewBag.ImageWidth; height: @ViewBag.ImageHeight;">
                        <img src="@Model.ImageName" onerror="this.src = '../../Content/Images/No_thumbnail.png'" style="width:100%; height:100%" />
                    </div>
                </div>
                <div class="clr"></div>
            </div>
        </div>
    </div>
    <div class="form-actions no-color">
        <div class=" col-md-offset-2 col-md-10" style="text-align:center;">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Back to List", "SetSequence", new { FranchiseList = Model.FranchiseID, BlockTypeList=Model.DesignBlockTypeID }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
