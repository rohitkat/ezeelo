@model ModelLayer.Models.OwnerPlanCategoryCharge

@{
    ViewBag.Title = "Details";
}

@*<h2>Details</h2>*@
<div class="span10" id="content">
    <ul class="breadcrumb">
        <li>
            <i class="icon-group"></i>
            <a href="#">Merchant Plan Category Charge</a>
            @*<i class="icon-angle-right"></i>*@
        </li>
        @*<li><a href="#">Tables</a></li>*@
    </ul>
    <div class="row-fluid">
        <div class="box span6">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Details</h2>

            </div>
            <div class="box-content">
                <div>
                    @*<h4>OwnerPlanCategoryCharge</h4>*@
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Category
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>
                        <dt>
                            Charge (In %)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ChargeInPercent)
                        </dd>

                        <dt>
                            Charge (In Rs)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ChargeInRupee)
                        </dd>

                        <dt>
                           Is Active
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>
                        
                        <div class="form-actions">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Back to List", "Index", "MerchantPlanCategoryCharge", new { ownerId = @ViewBag.ownerId }, new { @class = "btn" })


                        </div>

                    </dl>
                </div>
                </div>
            </div>
        </div>
    </div>
