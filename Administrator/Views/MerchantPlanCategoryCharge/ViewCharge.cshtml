@model IEnumerable<ModelLayer.Models.ViewModel.OwnerPlanCategoryChargeViewModel>

@{
    ViewBag.Title = "Planwise Category Charges";
}

@*<h2>Planwise Category Charges List</h2>*@

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@


<script src="~/Content/js/jquery-2.1.3.min.js"></script>
@*<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />*@
<script src="~/Content/js/jquery.dataTables.js" language="jascript"></script>
<link href="~/Content/css/Site.css" rel="stylesheet" />

<script type="text/javascript" class="init">
    $(document).ready(function () {
        $('#tblData').DataTable({
            dom: 'T<"clear">lfrtip',
            "processing": true,
            "serverSide": true,
        });
    });
</script>
<div id="content" class="span10" style="min-height: 400px;">
    <ul class="breadcrumb">
        <li>
            <i class="icon-list"></i>
            <a href="">Planwise Category Charges List</a>

        </li>
        @*<li><a href="#">Tables</a></li>*@
    </ul>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-home"></i><span class="break"></span>Index</h2>

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered  display" id="tblData">
                    <thead>
                        <tr>

                            <th>
                                Plan Name
                            </th>
                            <th>
                                Category
                            </th>
                            @*<th>
                                    Charge Name
                                </th>*@
                            <th>
                                Charge (In %)
                            </th>
                            <th>
                                Charge (In Rs)
                            </th>
                            <th>
                                Is Active
                            </th>
                            @*<th>Actions</th>*@
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PlanName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.ChargeName)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.ChargeInPercent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChargeInRupee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            @*<td>
                                    @if (item.ID == 0)
                                    {
                                        @Html.ActionLink("Add", "Create", new { id = item.PlanCategoryChargeID, ownerPlanID = item.OwnerPlanID })
                                    }
                                    else
                                    {
                                        <div>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-success" }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-info" }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })
                                        </div>
                                    }

                                </td>*@
                        </tr>
                    }
                </table>
                <div class="form-actions">
                    <div class="col-md-offset-2 span10">
                        @*@Html.ActionLink("Back to Merchant List", "Index", "MerchantPendingApprovals", new { franchiseID = ViewBag.FranchiseID }, new { @class = "btn btn-small" })*@

                        @if (@ViewBag.IsLocked)
                        { @Html.ActionLink("Back to Merchant List", "Index", "MerchantPendingApprovals", new { franchiseID = ViewBag.FranchiseID }, new { @class = "btn btn-small" })

                        }
                        else
                        {
                            @Html.ActionLink("Back to Franchise List", "Index", "ApprovedMerchantList", new { franchiseID = ViewBag.FranchiseID }, new { @class = "btn" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
