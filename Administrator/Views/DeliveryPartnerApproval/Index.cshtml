    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="halflings-icon user"></i><span class="break"></span>Pending Request of Delivery Partner</h2>

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
                    <thead>
                        <tr>
                            <th>
                                Delivery Partner Name
                            </th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    @for (int i = 0; i < Model.dpList.Count; i++)
                    {
                        using (Html.BeginForm("Index", "DeliveryPartnerApproval", new { UID = Model.dpList[i].UserLoginID, ownerId = Model.dpList[i].OwnerId }, FormMethod.Post))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => modelItem.dpList[i].Name)
                                </td>
                                <td>
                                    <input type="submit" class=" btn btn-primary" value="Approve" onclick="Approve(@Model.dpList[i].UserLoginID,@Model.dpList[i].OwnerId);" />
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>

