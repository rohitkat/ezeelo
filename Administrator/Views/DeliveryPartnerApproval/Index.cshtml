@model ModelLayer.Models.ViewModel.DeliveryPartnerApprovalViewModelList

@{
    ViewBag.Title = "Index";
}
<style>
    .dataTables_length {
        margin-left: 0px;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 40px;
    }
</style>
@*<h2>Pending Request of Merchant</h2>*@

<div id="content" class="span10" style="min-height: 400px;">
    @*<ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="">Pending Request of Merchant</a>
                <i class="icon-angle-right"></i>
            </li>
            @*<li><a href="#">Tables</a></li>
