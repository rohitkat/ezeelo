<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(function () {
        $('#CityID').change(function (e) {
            var selectedVal = $("#CityID option:selected").val();
            if (selectedVal > 0) {
                //alert(selectedVal);
                $.ajax({
                    type: "POST",
                    url: "/HelpDesk/getFranchise",
                    data: "{ CityID: '" + selectedVal + "'}",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    async: true,
                    cache: false,
                    success: function (msg) {

                        $('#FranchiseID').empty();
                        $('#FranchiseID').append('<option value=0>Select FranchiseID</option>');
                        $.each(msg, function (index, item) {
                            $('#FranchiseID').append('<option value=' + item.value + '>' + item.text + '</option>');
                        });
                    },
                    error: function (x, e) {
                        //alert("The call to the server side failed. " + x.responseText);
                    }
                });
            }
        });



    });


</script>

