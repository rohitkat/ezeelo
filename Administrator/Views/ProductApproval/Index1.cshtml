@model  ModelLayer.Models.ViewModel.ProductUploadTempViewModelList

@{
    ViewBag.Title = "Index";
}
<style>
    img[alt] {
        background-size: 50px 50px;
    }

    .action-set {
        width: 192px !important;
    }
    .dataTables_length {
        margin-left: 0px;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 40px;
    }
</style>
<div class="span10" id="content">
    <div class="row-fluid">
        <div class=" box span12 ">
            <div class=" box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>List Of Product</h2>
            </div>
            <div class="box-content">
                @*@using (Html.BeginForm("Search", "ProductUploadTemp"))
                        {
                           @Html.TextBox("SearchItem", null, new { id = "txtSearch ", @class ="span10", @placeholder = "Search" })
                    <input type="submit" value="Search" class="btn btn-dafult" />
                        }*@
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>
                                Product Name
                            </th>

                            <th>
                                Quantity
                            </th>
                            @*<th>
                                    Pack Size
                                </th>*@
                            <th>
                                Category Name
                            </th>
                            <th>
                                Brand Name
                            </th>
                            <th>
                                Product Varient(s)
                            </th>
                            @*<th>
                                Approval Status
                            </th>*@
                            <th>Actions</th>
                        </tr>
                    </thead>

                    @for (var i = 0; i < Model.ProductUploadTempViewModelLIst.Count(); i++)
                    {
                        <tr>
                            <td>
                                @{string s = @Model.ProductUploadTempViewModelLIst[i].ImageLocation;
                                <img src="@s" style="width:50px; height:50px" alt="@Model.ProductUploadTempViewModelLIst[i].ImageLocation" onerror="this.src='../../Content/Images/No_thumbnail.png'" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].Qty)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].PackSize)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].BrandName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].ProductVarientID) Varient(s)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => modelItem.ProductUploadTempViewModelLIst[i].ApprovalRemark)
                            </td>*@
                            <td class="action-set">
                                @*@Html.ActionLink("Edit", "Edit", new { id = Model.ProductUploadTempViewModelLIst[i].ID, shopId = Model.ProductUploadTempViewModelLIst[i].ShopID }, new { @class = "btn btn-small btn-success" }) |*@
                                @*@Html.ActionLink("Add Component", "LoadVarient", new { productID = Model.ProductUploadTempViewModelLIst[i].ID, shopID = Model.ProductUploadTempViewModelLIst[i].ShopID }, new { @class = "btn btn-small btn-primary" }) |*@
                                @Html.ActionLink("Approve", "VariantAproval", new { id = Model.ProductUploadTempViewModelLIst[i].ID, shopId = Model.ProductUploadTempViewModelLIst[i].ShopID }, new { @class = "btn btn-small btn-primary" })
                                @*@Html.ActionLink("Approve", "Approve", new { id = Model.ProductUploadTempViewModelLIst[i].ID, shopId = Model.ProductUploadTempViewModelLIst[i].ShopID }, new { @class = "btn btn-small btn-danger" })*@
                                @*@Html.ActionLink("Delete", "Delete", "ProductUploadTemp",
                                    new { confirm = true, id = Model.ProductUploadTempViewModelLIst[i].ID },
                                 new { onclick = "return confirm('Do you really want to delete this product?')", @class = "btn btn-small btn-success" })*@
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

