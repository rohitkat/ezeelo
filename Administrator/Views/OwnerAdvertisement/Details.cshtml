@model ModelLayer.Models.OwnerAdvertisement

@{
    ViewBag.Title = "Details";
}
<br />
<div class="row-fluid">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="icon-edit"></i><span class="break"></span>Detail Owner Advertisement</h2>
        </div>
        <div class="box-content">
            <form class="form-horizontal">
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Page Name</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.Advertisement.PageName)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Name</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.BusinessType.Name)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Ad Title</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.AdvertisementTitle)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Navigation Url</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.NavigationUrl)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">No Of Days</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.NoOfDays)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">No Of Hours</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.NoOfHours)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Owner ID</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.OwnerID)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Fees In Rupee</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.FeesInRupee)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Priority Level</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.PriorityLevel)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Is Live</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.IsLive)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="optionsCheckbox2">Is Active</label>
                        <div class="controls">
                            <label class="checkbox">
                                @Html.DisplayFor(model => model.IsActive)
                            </label>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" value="Create" class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = Model.ID }) </button>
                        @Html.ActionLink("Back to List", "Index", null, new { @class="btn"})
                    </div>
                </fieldset>
            </form>

        </div>
    </div><!--/span-->

</div>




