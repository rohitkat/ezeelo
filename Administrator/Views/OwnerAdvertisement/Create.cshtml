@model ModelLayer.Models.OwnerAdvertisement

@{
    ViewBag.Title = "Create";
}

<div class="row-fluid" style="margin-top:28px;margin-left:15px;">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="icon-edit"></i><span class="break"></span>Create Owner Advertisement</h2>
        </div>
        <div class="box-content">
            <div class="form-horizontal">
                @if (ViewBag.Message != null)
                {
                    @Html.Label("Message", (string)ViewBag.Message, new { @class = "deleteMsg" })
                }
                else
