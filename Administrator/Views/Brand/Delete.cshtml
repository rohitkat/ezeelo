}




<div class="span10" id="content">
    <ul class="breadcrumb">
        <li>
            <a href="#">brand/Delete</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span6">
            <div class="box-header">
                <h2><i class="icon-trash"></i><span class="break"></span>Delete</h2>

            </div>
