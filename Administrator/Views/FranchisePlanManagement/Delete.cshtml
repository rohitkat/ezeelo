@model ModelLayer.Models.ViewModel.PlanBindManagement

@{
    ViewBag.Title = "Delete";
}
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>

            <a href="#">Franchise Plan Management</a>

        </li>

    </ul>
    <div class="row-fluid ">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Delete</h2>

            </div>
            <p class="deleteMsg">Are you sure you want to delete this?</p>
            @using (Html.BeginForm("Delete", "FranchisePlanManagement", null, FormMethod.Post))
            {

                <div class="box-content">
                    <div class="span12">
                        <div class="span6">
                            <span class="control-label">Select Master Plan</span>
                            @Html.DropDownList("MasterPlan", "Select Plan")
                        </div>
                        <div class="span6">
                            @*@Html.RadioButton("Included", 1, true) Included
            @Html.RadioButton("Included", 2) Excluded*@
                            <span class="control-label">
                                @if (Model.type == 1)
                                {
                                    @Html.RadioButtonFor(x => x.type, 1, new { @checked = true })
                                }
                                else
                                {
                                    @Html.RadioButtonFor(x => x.type, 1)
                                }
                                Included
                            </span>
                            <span class="control-label">
                                @if (Model.type == 2)
                                {
                                    @Html.RadioButtonFor(x => x.type, 2, new { @checked = true })
                                }
                                else
                                {
                                    @Html.RadioButtonFor(x => x.type, 2)
                                }
                                Excluded
                            </span>
                        </div>
                    </div>
                    <div class="span12">
                        @if (ViewBag.pMessage != null)
                        {
                            @Html.Label("pMessage", (string)ViewBag.pMessage, new { @class="errorMsg"})
                        }
                    </div>

                    <table class="table table-striped table-bordered ">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Level</th>
                                

                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.planCommission.Count(); i++)
                            {
                                <tr>
                                    <td class="center">
                                        @Html.HiddenFor(x => x.planCommission[i].CategoryID)
                                        @Html.DisplayFor(x => x.planCommission[i].CategoryID)
                                    </td>
                                    <td class="center">@Html.DisplayFor(x => x.planCommission[i].CategoryName)</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="form-actions">
                    <input type="submit" id="btnSubmit" value="Delete" class="btn btn-success" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class="btn"})
                </div>
            }

        </div>
    </div>

</div>
