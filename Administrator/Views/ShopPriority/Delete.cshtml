@model ModelLayer.Models.ShopPriority

@{
    ViewBag.Title = "Delete";
}
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="index.html">Shop Priority</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="halflings-icon user"></i><span class="break"></span>Delete</h2>
            </div>

            <p class="deleteMsg">Are you sure you want to delete this?</p>
            <div class="box-content">

                    @if (ViewBag.Messaage != null)
                    {
                        <span>ViewBag.Messaage</span>
                    }

                    <dl class="dl-horizontal">
                        <dt>
                            @*@Html.DisplayNameFor(model => model.CityID)*@
                            CITY NAME
                        </dt>

                        <dd>
                            @*@Html.DisplayFor(model => model.CityID)*@
                            <span>@ViewBag.CityName</span>
                        </dd>

                        <dt>
                            @*@Html.DisplayNameFor(model => model.CategoryID)*@
                            CATEGORY NAME
                        </dt>

                        <dd>
                            @*@Html.DisplayFor(model => model.CategoryID)*@
                            <span>
                                @ViewBag.CategoryName (Level:= @ViewBag.Level)
                            </span>
                        </dd>

                        <dt>
                            @*@Html.DisplayNameFor(model => model.ShopID)*@
                            SHOP NAME
                        </dt>

                        <dd>
                            @*@Html.DisplayFor(model => model.ShopID)*@
                            <span> @ViewBag.ShopName</span>
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.PriorityLevel)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PriorityLevel)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>


                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
                        </div>
                    }
                
            </div>
        </div>
    </div>
</div>
