        function printReport() {
            //alert('in');
            var print = 1;
            var option = 0;
            var FranchiseList = 0;
            var Status = 0;

            if ($("select#FranchiseList option:selected").val() > 0) {
                FranchiseList = $("select#FranchiseList option:selected").val();
            }
            if (FranchiseList == 0) {
                $("#msg").html('Please select Franchise')
                return;
            }
            if ($("select#Status option:selected").val() > 0) {
                Status = $("select#Status option:selected").val();
            }
            if ($("select#ExportOption option:selected").val() > 0) {
                option = $("select#ExportOption option:selected").val();
            }

            var url = "/ShopDetailReport/Export?&FranchiseList=" + FranchiseList + "&Status=" + Status + "&option=" + option + "&print=" + print;
            window.open(url, '_blank')


        };
