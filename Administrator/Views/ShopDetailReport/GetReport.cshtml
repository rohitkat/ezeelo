<div class="box-content" id="divToPrint" style="margin-top:10px;">
    <div class="row">
        <div class="span12" id="divtable" style="margin-top:12px;">
            <div class="widget big-stats-container">
                <div class="widget-content matchdivheight table scrollable container_tbl">
                    <table class="table table-bordered table-hover table-responsive table-striped" style="margin-left:10px;">
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center"><h3>No Record Found...</h3></td>
                            </tr>
                        }
                        else
                        {
                            int i = 1;
                            <tr class="hed-tble header">
                                <th>
                                    @*Sr No*@
                                    <div>Sr No</div>
                                </th>
                                <th>
                                    @*ShopName*@
                                    <div>Shop Name</div>
                                </th>
                                <th>
                                    @*Merchant Name*@
                                    <div>Merchant Name</div>
                                </th>
                                <th>
                                    @*UserLogin ID*@
                                    <div>User Login ID</div>
                                </th>
                                <th>
                                    @*Login Email-ID*@
                                    <div>Login Email-ID</div>
                                </th>
                                <th>
                                    @*Login Mobile No*@
                                    <div>Login Mob No</div>
                                </th>
                                <th>
                                    @*Password*@
                                    <div>Password</div>
                                </th>
                                <th>
                                    @*IsLive*@
                                    <div>Live</div>
                                </th>
                                <th>
                                    @*Address*@
                                    <div>Address</div>
                                </th>
                                <th>
                                    @*Alternate Mobile*@
                                    <div>Mobile</div>
                                </th>
                                <th>
                                    @*Landline No*@
                                    <div>Landline</div>
                                </th>

                            </tr>
                            foreach (var item in Model)
                            {

                                <tr>
                                    <td>@{int SrNo = ((ViewBag.PageNumber - 1) * ViewBag.PageSize) + i; i = i + 1; } @SrNo</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShopName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MerchantName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserLoginID)
                                    </td>

                                    @{string Email = "";}
                                    <td>
                                        @if (item.Email != null)
                                        {
                                            Email = item.Email;
                                        }

                                        @Email
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    @if (item.IsLive == true)
                                    {
                                        <td>
                                            Live
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            Not Live
                                        </td>
                                    }
                                    @*@if (item.IsActive == true)
                                        {
                                            <td>
                                                Active
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                InActive
                                            </td>
                                        }*@

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AlternateMobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LandLine)
                                    </td>

                                </tr>
                            }
                        }

                    </table>

                </div>
            </div>
            <div class="pager">
                @Html.PagedListPager(Model, Page => Url.Action("GetReport", new
                       {
                           FranchiseList = ViewBag.franchiseId,
                           page = Page,
                           Status = ViewBag.Status,
                           ShopName = ViewBag.ShopName,
                           CatID = ViewBag.selectedCatID,
                           print = 0,

                       }),
                                                                    new PagedListRenderOptions()
                                                                    {
                                                                        Display = PagedListDisplayMode.IfNeeded
                                                                    })
                <h4><span>Total Count:&nbsp;@ViewBag.TotalCount</span></h4>
            </div>


        </div>
    </div>
</div>
