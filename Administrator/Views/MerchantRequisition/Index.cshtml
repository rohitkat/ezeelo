@model IEnumerable<ModelLayer.Models.ViewModel.MerchantRequisitionViewModel>



<link href="~/Content/css/searching.css" rel="stylesheet" />
<link href="~/Content/css/sortable.css" rel="stylesheet" />
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~~/Content/js/jQuery-Table-Plugin.js"></script>
<style>
    .dataTables_length {
        margin-left: 0px;
        margin-top: 7px;
    }

    .pagination {
        margin: 0 40px;
    }
</style>
<div id="content" class="span10" style="min-height: 400px;">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="">Merchant Requisition</a>

        </li>
        @*<li><a href="#">Tables</a></li>*@
    </ul>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-home"></i><span class="break"></span>Index</h2>

            </div>
            <div class="box-content">
                <div class="div_class">
                    @*<div class="search_div">
                            <input type="text" class="search_input" placeholder="Search..." />
                            <a class="clearlink" title="Clear textbox"></a>
                        </div>*@
                    @*<table class="table table-striped table-bordered">*@
                    <table class="table table table-striped table-bordered bootstrap-datatable datatable dataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MerchantName)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MerchantName)
                                </td>
                                <td>
                                    @*@if (item.IsPaymentMode == false)*@
                                    @if (item.FranchiseID == 1)
                                    {
                                        @Html.ActionLink("Assign Details", "Create", new { id = item.ShopID, franchiseId = item.FranchiseID }, new { @class = "btn btn-small btn-primary" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Edit Details", "Edit", new { id = item.ShopID, franchiseId = item.FranchiseID }, new { @class = "btn btn-small btn-success" })
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
            <div class="form-actions">
                <div class="col-md-offset-2 span10">
                    @Html.ActionLink("Back to Franchise List", "ShowFranchiseList", "MerchantRequisition", string.Empty, new { @class = "btn " })
                </div>
            </div>
        </div>
    </div>
</div>