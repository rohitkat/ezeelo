@model IEnumerable<ModelLayer.Models.ViewModel.OwnerPlanCategoryChargeViewModel>

@{
    ViewBag.Title = "Planwise Category Charges";
}

@*<h2>Planwise Category Charges List</h2>*@

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div id="content" class="span10" style="min-height: 400px;">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="">Planwise Category Charges List</a>

        </li>
        @*<li><a href="#">Tables</a></li>*@
    </ul>
    <div class="row-fluid sortable ui-sortable">
        <div class="box span12">
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
                    <thead>
                        <tr>
                            <th>
                                Plan Name
                            </th>
                            <th>
                                Category
                            </th>
                            @*<th>
                                Charge Name
                            </th>*@
                            <th>
                                Charge (In %)
                            </th>
                            <th>
                                Charge (In Rs)
                            </th>
                            <th>
                                Is Active
                            </th>
                            @*<th>Actions</th>*@
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PlanName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.ChargeName)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.ChargeInPercent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChargeInRupee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            @*<td>
                        @if (item.ID == 0)
                        {
                            @Html.ActionLink("Add", "Create", new { id = item.PlanCategoryChargeID, ownerPlanID = item.OwnerPlanID }, new { @class = "btn" })
                        }
                        else
                        {

                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-danger" })

                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary" })

                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                        }

                    </td>*@
                        </tr>
                    }

                </table>
            </div>
            <div class="form-actions">
                <div class="col-md-offset-2 span10">
                    @if (@ViewBag.IsLocked)
                    { @Html.ActionLink("Back to Franchise List", "Index", "FranchisePendingApprovals", string.Empty, new { @class = "btn" })
                    }
                    else
                    {
                        @Html.ActionLink("Back to Franchise List", "Index", "ApprovedFranchiseList", string.Empty, new { @class = "btn" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>
