@model IEnumerable<ModelLayer.Models.ViewModel.CalulatedTaxesRecord>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.Label("result", (string)ViewBag.result)


@using (Html.BeginForm())
{ 

<input type="submit" id="submit" text="submit"/>
    
    <div class="row-fluid">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="icon-edit"></i><span class="break"></span>@Html.ActionLink("Create Charge", "Create")</h2>

        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ProductTaxID</th>
                        <th>ShopStockID</th>
                        <th>TaxName</th>
                        <th>TaxPrefix</th>
                        <th>TaxPercentage</th>
                        <th>TaxableAmount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProductTaxID)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.ShopStockID)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.TaxName)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.TaxPrefix)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.TaxPercentage)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.TaxableAmount)</td>
                        </tr>
                    }
                </tbody>
            </table>
          
        </div>
    </div><!--/span-->

</div>
    
}