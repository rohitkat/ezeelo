@model IEnumerable<ModelLayer.Models.DesignBlockType>

@{
    ViewBag.Title = "Create";
}
<style>
    .pagination {
        padding: 0px 40px;
    }

    .dataTables_length {
        margin-left: 0px;
    }
</style>
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="#">Design Block Type/Index</a>
        </li>
    </ul>

    <div class="row-fluid">

        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Design Block Type</h2>
                <div class="pull-right jumpBtn CreateFormBtn">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-small" })
                </div>
            </div>
            <div class="box-content">

                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            @*<th>
                                Image Extension
                            </th>*@
                            <th>
                                Image Width x Height (px)
                            </th>
                            @*<th>
                                Min. Limit
                            </th>*@
                            <th>
                                Max. Limit
                            </th>
                            <th>
                                Is Active
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.ImageExtension)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageWidth) x @Html.DisplayFor(modelItem => item.ImageHeight)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.MinLimit)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaxLimit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-success" })|
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-primary" })
                                </td>
                            </tr>
                        }

                    </tbody>



                </table>
            </div>
        </div>
    </div>
</div>
