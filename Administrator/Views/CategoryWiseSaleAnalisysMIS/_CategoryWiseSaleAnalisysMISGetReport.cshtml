<div class="loader">
    <img id="loader_img" src="~/Content/img/loader.gif" style="display: none" />
</div>

<script>
    $(document).ready(function () {
        $("#Pager .page-number").click(function (e) {
            //alert($(this).html());
            $('#loader_img').show();
            //alert($(this).html());
            var pagecount = 0;
            var page = parseInt($(this).html());
            if (page > 1) {
                pagecount = 1;
            }
            var fromDate = "@ViewBag.fromDate";
            var toDate = "@ViewBag.toDate";
            var merchantID = "@ViewBag.merchantID";
            $.ajax({
                url: '@Url.Action("_CategoryWiseSaleAnalisysMISGetReport", "CategoryWiseSaleAnalisysMIS")',
                data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'merchantID': merchantID, 'franchiseID': franchiseID },
                type: "POST",
                cache: false,
                success: function (data) {
                    //alert(data);
                    $('#loader_img').hide();
                    $('#divReport').empty();
                    $('#divReport').append(data);

                },
                error: function (data) {

                }
            });
        });

     
    });

</script>
