@model IEnumerable<ModelLayer.Models.Franchise>
@{
    ViewBag.Title = "FranchiseList";
}


<style>
    #DataTables_Table_0_filter {
        margin-top: 6px;
    }

    .btn_C {
        margin-top: -6px;
    }
    .pagination{
        margin:0 40px;
    }
</style>

<div id="content" class="span10" style="min-height: 403px;">
    <ul class="breadcrumb">
        <li>
            <a href="#">Franchise List</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span12">            
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
                    <thead>
                        <tr>
                            <th>
                                Franchise Name
                            </th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (!string.IsNullOrEmpty(item.BusinessDetail.Name))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BusinessDetail.Name)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Add Products", "AddMoreProduct", new { id = item.ID }, new { @class = "btn btn-small btn-success" }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-primary" }) |
                                        @Html.ActionLink("Set Sequence", "SetSequence", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>