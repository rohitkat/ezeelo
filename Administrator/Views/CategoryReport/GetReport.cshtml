            data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'shopID': shopID, 'Level': Level, 'Status': Status },
            type: "POST",
            cache: false,
            success: function (data) {
                //alert(data);
                $('#loader_img').hide();
                $('#divReport').empty();
                $('#divReport').append(data);
                $("select#ddlLevel").val(Level);
                $("select#ddlStatus").val(Status);
            },
            error: function (data) {

            }
        });
    });

    $("select#ddlStatus").bind('change', function () {
        $('#loader_img').show();

        var pagecount = 0;
        //var page = parseInt($(this).html());
        //if (page > 1) {
        //    pagecount = 1;
        //}
        var fromDate = "@ViewBag.fromDate";
        var toDate = "@ViewBag.toDate";
        var shopID = "@ViewBag.shopID";
        var Level = $("select#ddlLevel option:selected").val();
        var Status = $("select#ddlStatus option:selected").val();
        var page = 1;
        $.ajax({
            url: '@Url.Action("GetReport", "CategoryReport")',
            data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'Level': Level, 'Status': Status },
            type: "POST",
            cache: false,
            success: function (data) {
                //alert(data);
                $('#loader_img').hide();
                $('#divReport').empty();
                $('#divReport').append(data);
                $("select#ddlLevel").val(Level);
                $("select#ddlStatus").val(Status);

            },
            error: function (data) {

            }
        });
    });
</script>

