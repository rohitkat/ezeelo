@model IEnumerable<ModelLayer.Models.ViewModel.CategoryReportViewModel>

@{
    ViewBag.Title = "GetReport";
    Layout = null;
}


<script src="~/Content/js/jquery-1.9.1.min.js"></script>
<script src="~/Content/js/jquery.dataTables.min.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#myTable").DataTable({
            "bDestroy": true,
            //"sPaginationType": "full_numbers",
            "bJQueryUI": true,
            "bInfo": false,
            "scrollY": 700,
            "scrollCollapse": true,
            "bPaginate": false,
            "iDisplayLength": 20,
            "bAutoWidth": false,

        });

    });
</script>
<div class="select_city">
    <select name="ddlLevel" id="ddlLevel">
        <option value="0">Select Level</option>
        <option value="1">Level 1</option>
        <option value="2">Level 2</option>
        <option value="3">Level 3</option>
    </select>
    <select name="ddlStatus" id="ddlStatus">
        <option value="0">Select Status</option>
        <option value="1">Active</option>
        <option value="2">Deactive</option>

    </select>
</div>
<div>
    <div class="table  scrollable">
        <table class="table scroll" id="myTable">
            <thead>
                <tr>
                    <th>
                        Category ID
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Level
                    </th>
                    <th>
                        Create Date
                    </th>
                    <th>
                        Active/Deactive Status
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Level)
                        </td>
                        <td>
                            @{ string lDate = "";}
                            @if (item.CreateDate != null)
                            {
                                lDate = item.CreateDate.ToString("dd/MM/yyyy");
                            }
                            @lDate
                        </td>
                        @if (item.IsActive == true)
                        {
                            <td>
                                Active
                            </td>
                        }
                        else
                        {
                            <td>Dective</td>

                        }

                    </tr>

                }
            </tbody>

        </table>

    </div>
</div>

<div id="Pager">
    <div class="wrap">
        <div id="slider1" class="slider">
            <ul>
                @for (int c = 1; c <= @ViewBag.TotalPages; c++)
                {
                    <li><a class="page-number" href="javascript:void();">@c</a></li>

                }

            </ul>

        </div>

        <div class="controls" style="margin-top:-27px; background:#F9F9F9">
            <a href="#noname" class="prev-slide"><<</a>
            <a href="#noname" class="next-slide" style="float: right; margin-right: 299px;">>></a>
        </div>
    </div>
    <span class="totalcount"><b>Showing @ViewBag.PageSize of @ViewBag.TotalCount enteries</b></span>
</div>


<div class="loader">
    <img id="loader_img" src="~/Content/Images/loader.gif" style="display: none" />
</div>


@*<script src="~/Content/js/jquery.1.8.3.min.js"></script>*@
<script>
    $(document).ready(function () {
        $("#Pager .page-number").click(function (e) {
            $('#loader_img').show();
            var pagecount = 0;
            var page = parseInt($(this).html());
            var Level = $("select#ddlLevel option:selected").val();
            var Status = $("select#ddlStatus option:selected").val();
            if (page > 1) {
                pagecount = 1;
            }
            var fromDate = "@ViewBag.fromDate";
            var toDate = "@ViewBag.toDate";

            $.ajax({
                url: '@Url.Action("GetReport", "CategoryReport")',
                data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'Level': Level,'Status': Status },
                type: "POST",
                cache: false,
                success: function (data) {
                    //alert(data);
                    $('#loader_img').hide();
                    $('#divReport').empty();
                    $('#divReport').append(data);
                    $("select#ddlLevel").val(Level);
                },
                error: function (data) {

                }
            });
        });

    });
    $("select#ddlLevel").bind('change', function () {
        $('#loader_img').show();

        var pagecount = 0;
        //var page = parseInt($(this).html());
        //if (page > 1) {
        //    pagecount = 1;
        //}
        var fromDate = "@ViewBag.fromDate";
        var toDate = "@ViewBag.toDate";
        var shopID = "@ViewBag.shopID";
        var Level = $("select#ddlLevel option:selected").val();
