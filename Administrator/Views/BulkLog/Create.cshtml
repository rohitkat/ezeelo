@model ModelLayer.Models.BulkLog

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="content" class="span10">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="#">BulkLog</a>
                <i class="icon-angle-right"></i>
            </li>
        </ul>
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header">
                    <h2><i class="halflings-icon user"></i><span class="break"></span>Bulk Log/Create</h2>
                </div>
                <div class="box-content">
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true)

                        <div class="control-group">
                            @Html.LabelFor(model => model.ShopID, "Shop Name", new { @class = "control-label" })
                            <div class="controls">
                                @Html.DropDownList("ShopID", "--Select--")
                                @Html.ValidationMessageFor(model => model.ShopID)
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.ExcelSheetName, new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.ExcelSheetName)
                                @Html.ValidationMessageFor(model => model.ExcelSheetName)
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.BulkType, new { @class = "control-label" })
                            <div class="controls">
                                @Html.DropDownList("BulkType", "--Select--")
                                @Html.ValidationMessageFor(model => model.BulkType)
                            </div>
                        </div>

                        <div class="form-actions">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index", string.Empty, new { @class = "btn" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

