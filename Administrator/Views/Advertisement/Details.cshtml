@model ModelLayer.Models.Advertisement
@{
    ViewBag.Title = "Details";
}
<div class="span10" id="content">
    <ul class="breadcrumb">
        <li>
            <a href="#">Advertisement/Details</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Detail Advertisement</h2>
            </div>
            <div class="box-content">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">First Name</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.PersonalDetail1.FirstName)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Page Name</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.PageName)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Width In Pixel</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.WidthInPixel)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Height In Pixel</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.HeightInPixel)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Alignment</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Alignment)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Number Of Days</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.NumberOfDays)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Fees In Rs</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.FeesInRs)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Description</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="optionsCheckbox2">Is Active</label>
                            <div class="controls">
                                <label class="checkbox">
                                    @Html.DisplayFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>
                        <div class="form-actions">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Back to List", "Index", string.Empty, new { @class = "btn" })
                        </div>
                    </fieldset>
                </form>
            </div>
        </div><!--/span-->
    </div>
</div>
