@*@model IEnumerable<ModelLayer.Models.Advertisement>*@
@model IEnumerable<ModelLayer.Models.Advertisement>
@{
    ViewBag.Title = "Index";
}
<style>
    .dataTables_length {
        margin-left: 0px;
        margin-top: 7px;
    }
    .pagination {
        margin: 0 40px;
    }
</style>
<div class="row-fluid" style="margin-top:28px;margin-left:15px;">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="icon-edit"></i><span class="break">@Html.ActionLink("Create New", "Create")</span></h2>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.PageName) </th>
                        <th>@Html.DisplayNameFor(model => model.WidthInPixel) </th>
                        <th>@Html.DisplayNameFor(model => model.HeightInPixel) </th>
                        <th>@Html.DisplayNameFor(model => model.Alignment) </th>
                        <th>@Html.DisplayNameFor(model => model.NumberOfDays) </th>
                        <th>@Html.DisplayNameFor(model => model.FeesInRs) </th>
                        <th>@Html.DisplayNameFor(model => model.Description) </th>
                        <th>@Html.DisplayNameFor(model => model.IsActive) </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.PageName)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.WidthInPixel)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.HeightInPixel)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.Alignment)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.NumberOfDays)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.FeesInRs)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="center">@Html.DisplayFor(modelItem => item.IsActive, new { @class = "chkBox" })</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-success" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-primary" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>