@model ModelLayer.Models.Size

@{
    ViewBag.Title = "Details";
}
<br />
<div class="row-fluid" style="margin-left:15px;">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="icon-edit"></i><span class="break"></span>Detail Size</h2>
        </div>
        <div class="box-content">
            <form class="form-horizontal">
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="focusedInput">Size</label>
                        <div class="controls">
                            @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="optionsCheckbox2">Is Active</label>
                        <div class="controls">
                            <label class="checkbox">
                                @Html.DisplayFor(model => model.IsActive)
                            </label>
                        </div>
                    </div>

                    <div class="form-actions">
                        @*<button type="submit" value="Create" class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = Model.ID }) </button>*@
                        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })

                        @Html.ActionLink("Back to List", "Index", string.Empty, new { @class = "btn" })
                    </div>
                </fieldset>
            </form>

        </div>
    </div><!--/span-->

</div>



