@model ModelLayer.Models.CategorySize

@{
    ViewBag.Title = "Details";
}
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="#">Category Size/Details</a>
        </li>
    </ul>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>Detail</h2>
            </div>
            <div class="box-content">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Category</label>
                            <div class="controls">
                                @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                                @Html.DisplayFor(model => model.Category.Name)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Size</label>
                            <div class="controls">
                                @*<input class="input-xlarge focused" id="focusedInput" type="text" value="This is focused…">*@
                                @Html.DisplayFor(model => model.Size.Name)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="optionsCheckbox2">Is Active</label>
                            <div class="controls">
                                <label class="checkbox">
                                    @Html.DisplayFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>

                        <div class="form-actions">
                            @*<button type="submit" value="Create" class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = Model.ID }) </button>*@
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Back to List", "Index", string.Empty, new { @class = "btn" })
                        </div>
                    </fieldset>
                </form>

            </div>
        </div><!--/span-->

    </div>

</div>




