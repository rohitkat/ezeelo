@using PagedList.Mvc;
@using PagedList;
@*@model IEnumerable<ModelLayer.Models.CategorySize>*@
@model IPagedList<ModelLayer.Models.CategorySize>

@{
    ViewBag.Title = "Index";
}
<style>
    .dataTables_length {
        margin-left: 0px;
    }

    .pagination {
        margin: 0 40px;
    }
</style>
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="#">Index</a>
        </li>
    </ul>

    <div class="row-fluid">

        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>@Html.ActionLink("Create New", "Create")</h2>

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Size</th>
                            <th>IsActive</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.Size.Name)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.IsActive, new { @class = "chkBox" })</td>

                                <td class="center">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-success" })
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-primary" })

                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div><!--/span-->

    </div>

</div>

