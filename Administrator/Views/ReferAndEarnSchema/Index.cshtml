@model IEnumerable<ModelLayer.Models.ReferAndEarnSchema>

@{
    ViewBag.Title = "Index";
}

<div class="row-fluid" style="margin-top:20px;margin-left:15px;">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="icon-edit"></i><span class="break"></span>@Html.ActionLink("Create New", "Create")</h2>
        </div>
        <div class="box-content">
            <div class="row " style="width: 100%; height: auto; overflow: auto; margin: 5px;">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <tr>
                        <th>
                            Scheme Name
                        </th>
                        <th>
                           Orderwise Earn
                        </th>
                        <th>
                           Userwise Earn
                        </th>
                        <th>
                            Earn In RS
                        </th>
                        <th>
                            Earn In Percentage
                        </th>
                        @*<th>
                           Max No Of Orders
                        </th>*@
                        <th>
                            Minimum Purchase Amount
                        </th>
                        <th>
                           City
                        </th>
                        <th>
                            Franchise @*////added*@
                        </th>
                        <th>
                            Is Active
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.CreateDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreateBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifyDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifyBy)
                            </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.NetworkIP)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeviceType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeviceID)
                                </th>*@
                        <th style="width:150px;">Action</th>
                    </tr>
                    @if (Model!=null)
                    { 
                     foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderwiseEarn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserwiseEarn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EarnInRS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EarnInPercentage)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.MaxNoOfOrders)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxPurchaseAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City.Name)
                                @*@Html.DisplayFor(modelItem => item.CityName)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Franchise.ContactPerson) @*////added*@
                                @*@Html.DisplayFor(modelItem => item.FranchiseName)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifyDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifyBy)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.NetworkIP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeviceType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeviceID)
                                    </td>*@
                            <td style="width:150px;">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-success" })
                                @*@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-primary" })*@
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })*@
                            </td>
                        </tr>
                    }
                    }

                </table>
            </div>
        </div>
    </div>
