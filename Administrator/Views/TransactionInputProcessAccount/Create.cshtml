                        </div>

                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Order Code</label>
                            <div class="controls">
                                @Html.TextBox("OrderCode", null, new { @id = "OrderCode", @class = "form-control-Widout-block", @placeholder = "Enter OrderCode", required = "required" })
