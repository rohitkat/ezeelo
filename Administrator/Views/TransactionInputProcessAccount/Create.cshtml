                                <div id="divOrderCodeError" style="width:400px; display: none; padding:5px" class="alert-danger focused">  </div>
                            </div>
                        </div>
                        <div id="divOrderCode">
                            @*to load Order Details*@
                        </div>


                        @*<div class="control-group">
                                <label class="control-label" for="focusedInput">Amount Received</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Amount)
                                    @Html.ValidationMessageFor(model => model.Amount)
                                </div>
                            </div>*@

                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Paid By</label>
                            <div class="controls">
                                @Html.TextBox("ReceivedBy", null, new { @id = "ReceivedBy", @class = "form-control-Widout-block", @placeholder = "Enter Username", required = "required" })<input type="button" class="btn btn-warning" id="btnSearchUser" value="Search"><div id="divReceivedBy">@*to load Order Details*@</div>
