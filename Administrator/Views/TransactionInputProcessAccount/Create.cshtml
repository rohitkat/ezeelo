                                @Html.DropDownList("LeadgerHeadID", "Select")
                                @Html.ValidationMessageFor(model => model.LeadgerHeadID)
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="focusedInput">Receipt Payment Mode</label>
                            <div class="controls">
                                @Html.DropDownList("ReceivedPaymentModeID", "Select")
                                @Html.ValidationMessageFor(model => model.ReceivedPaymentModeID)
