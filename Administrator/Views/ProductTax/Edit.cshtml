@model ModelLayer.Models.ViewModel.ProductTaxDetail

@{
    ViewBag.Title = "Details";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    <div class="span10" id="content">
        <div class="row-fluid">
            <div class="box">
                <div class="box-header">
                    <h2><i class="icon-edit"></i><span class="break"></span>Product Tax</h2>

                </div>
                <div class="box-content">
                    <div>

                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Franchise
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FranmchiseName)
                            </dd>
                            <dt>
                                Shop
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ShopName)
                            </dd>
                            <dt>
                                ShopStockID
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ShopstockID)
                            </dd>
                            <dt>
                                Product
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ProductName)
                            </dd>

                            <dt>
                                Tax
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.TaxName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </dt>

                            <dd>
                                @Html.HiddenFor(model => model.ID)
                                @Html.HiddenFor(model => model.ShopstockID)
                                @Html.HiddenFor(model => model.TaxID)
                                @Html.EditorFor(model => model.IsActive)
                            </dd>



                        </dl>

                        @Html.AntiForgeryToken()

                        <div class="form-actions">
                            <input type="submit" value="Save" class="btn btn-success" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

}