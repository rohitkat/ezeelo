<div class="section">
    <div class="table scrollable container_tbl">
        <table class="table scroll" id="myTable">
            <thead>
                <tr class="header">

                    <th>
                        Vendor Registration No
                        <div>Vendor Registration No</div>
                    </th>
                    <th>
                        Vendor Name
                        <div>Vendor Name</div>
                    </th>
                    <th>
                        Organisation Name
                        <div>Organisation Name</div>
                    </th>
                    <th>
                        Mobile No.
                        <div>Mobile No.</div>
                    </th>
                    <th>
                        Address
                        <div>Address</div>
                    </th>
                    <th>
                        Email
                        <div>Email</div>
                    </th>
                    <th>
                        Registration Date
                        <div>Registration Date</div>
                    </th>


                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendorRegistrationNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganisationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @{string lDate = "";}
                        @if (item.RegistrationDate != null)
                        {
                            lDate = item.RegistrationDate.ToString("dd/MM/yyyy");
                        }
                        @lDate
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
<div id="Pager">
    <div class="wrap">
        <div id="slider1" class="slider">
            <ul>
                @for (int c = 1; c <= @ViewBag.TotalPages; c++)
                {
                    <li><a class="page-number" href="javascript:void();">@c</a></li>

                }

            </ul>

        </div>

        <div class="controls" style="margin-top:-27px; background:#F9F9F9">
            <a href="#noname" class="prev-slide"><<</a>
            <a href="#noname" class="next-slide" style="float: right; margin-right: 299px;">>></a>
        </div>
    </div>
    <span class="totalcount"><b>Showing @ViewBag.PageSize of @ViewBag.TotalCount enteries</b></span>
</div>





<div class="loader">
    <img id="loader_img" src="~/Content/img/loader.gif" style="display: none" />
</div>
<script src="~/Content/js/jquery.1.8.3.min.js"></script>
<script>
    $(document).ready(function () {
        $("#Pager .page-number").click(function (e) {
            //alert($(this).html());
            $('#loader_img').show();
            //alert($(this).html());
            var pagecount = 0;
            var page = parseInt($(this).html());
            if (page > 1) {
                pagecount = 1;
            }
            var fromDate = "@ViewBag.fromDate";
            var toDate = "@ViewBag.toDate";
            var franchiseID = "@ViewBag.franchiseID";
            var approvedStatus = "@ViewBag.approvedStatus"
            var CategoryID = "@ViewBag.CategoryID"
            //alert('CategoryID');
            $.ajax({
                url: '@Url.Action("GetReport", "MerchantRegistrationReport")',
                data: { 'page': page, 'pagecount': pagecount, 'fromDate': fromDate, 'toDate': toDate, 'franchiseID': franchiseID, 'approvedStatus': approvedStatus, 'CategoryID': CategoryID },
                type: "POST",
                cache: false,
                success: function (data) {
                    //alert(data);
                    $('#loader_img').hide();
                    $('#divReport').empty();
                    $('#divReport').append(data);

                },
                error: function (data) {

                }
            });
        });
    });

</script>
<script src="~/Content/js/lemmon-slider.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //alert('OK');
        // slider 1
        $('#slider1').lemmonSlider({
            infinite: false
        });

    });

</script>





