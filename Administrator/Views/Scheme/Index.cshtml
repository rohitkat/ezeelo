@model IEnumerable<ModelLayer.Models.ViewModel.Scheme>
@*@model IEnumerable<ModelLayer.Models.SchemeType>*@
@*@model IEnumerable<ModelLayer.Models.FrequentlyBuyTogetherProduct>*@

@{
    ViewBag.Title = "Index";
}
<style>
    .pagination {
        padding: 0px 40px;
    }

    .dataTables_length {
        margin-left: 0px;
    }
</style>
<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <a href="#">Index</a>
        </li>
    </ul>

    <div class="row-fluid">

        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i><span class="break"></span>@Html.ActionLink("Create New", "Create")</h2>

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable ">
                    <thead>
                        <tr>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Name)*@
                                Name
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.ValueInRs)*@
                                Value In Rs
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.ApplicableOnPurchaseOfRs)*@
                                Applicable On Purchase Of Rs
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.SchemeCode)*@
                                Scheme Code
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.OwnerId)*@
                                Owner Id
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.BusinessTypeID)*@
                                Business Type ID
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.IsActive)*@
                                Is Active
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.CreateDate)*@
                                Create Date
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.StartDatetime)*@
                                Start Date time
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.EndDatetime)*@
                                End Date time
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @if(Model!=null)
                    { 
                    foreach (var item in Model)
                    {
                        <tr>
                            <td width="9%">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ValueInRs)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApplicableOnPurchaseOfRs)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SchemeCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BussinessTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDatetime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDatetime)
                            </td>
                            <td style="width: 144px;">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-small btn-success" })
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-small btn-primary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-small btn-danger" })
                            </td>
                        </tr>
                    }
                    }
                </table>
            </div>
        </div>
    </div>
</div>